// appsettings.Production.json
{
  "ConnectionStrings": {
    "RedisCache": "${REDIS_CONNECTION_STRING}",
    "GraphDB": "${GRAPHDB_CONNECTION_STRING}",
    "Elasticsearch": "${ELASTICSEARCH_CONNECTION_STRING}",
    "RabbitMQ": "${RABBITMQ_CONNECTION_STRING}"
  },
  "GraphDB": {
    "Url": "${GRAPHDB_URL}",
    "Repository": "healthcare-prod",
    "Username": "${GRAPHDB_USERNAME}",
    "Password": "${GRAPHDB_PASSWORD}",
    "EnableLogging": false,
    "MaxRetries": 5
  },
  "MachineLearning": {
    "ModelsPath": "/app/models",
    "TrainingDataPath": "/app/training-data",
    "EnableAutoTraining": false,
    "ModelRefreshIntervalHours": 168
  },
  "Elasticsearch": {
    "Uri": "${ELASTICSEARCH_URI}",
    "DefaultIndex": "healthcare-prod",
    "EnableDebugMode": false
  },
  "RabbitMQ": {
    "HostName": "${RABBITMQ_HOST}",
    "Port": 5672,
    "UserName": "${RABBITMQ_USER}",
    "Password": "${RABBITMQ_PASSWORD}",
    "VirtualHost": "healthcare",
    "ExchangeName": "healthcare-events",
    "QueueName": "healthcare-queue"
  },
  "SignalR": {
    "EnableDetailedErrors": false,
    "KeepAliveInterval": "00:00:30",
    "ClientTimeoutInterval": "00:01:00"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "FHIRHealthcareAPI": "Information"
    }
  }
}