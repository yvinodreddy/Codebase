# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-08-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# Azure AI Content Safety Configuration
CONTENT_SAFETY_KEY=your-content-safety-key-here
CONTENT_SAFETY_ENDPOINT=https://your-content-safety.cognitiveservices.azure.com/
CONTENT_SAFETY_API_VERSION=2024-09-01

# CrewAI Configuration
OPENAI_API_KEY=${AZURE_OPENAI_API_KEY}
OPENAI_API_BASE=${AZURE_OPENAI_ENDPOINT}
OPENAI_API_VERSION=${AZURE_OPENAI_API_VERSION}

# Guardrail Configuration
GUARDRAIL_MAX_RETRIES=5
GUARDRAIL_CONTENT_THRESHOLD=2
GUARDRAIL_GROUNDEDNESS_THRESHOLD=20
ENABLE_PROMPT_SHIELDS=true
ENABLE_CONTENT_FILTERING=true
ENABLE_GROUNDEDNESS_CHECK=true

# Monitoring Configuration
APPLICATIONINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-app-insights-key
ENABLE_METRICS_LOGGING=true
LOG_LEVEL=INFO

# Medical Domain Configuration
ENABLE_HIPAA_COMPLIANCE=true
ENABLE_PHI_DETECTION=true
ENABLE_MEDICAL_FACT_CHECKING=true
MEDICAL_TERMINOLOGY_VALIDATION=true
