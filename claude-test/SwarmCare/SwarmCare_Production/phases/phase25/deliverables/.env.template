# Phase 25: Patient-Facing XAI - Environment Configuration Template
# Copy this file to .env and update with your values

# HIPAA Compliance
HIPAA_MODE=enabled
PHI_PROTECTION=enabled
AUDIT_LOGGING=enabled
ENCRYPTION_AT_REST=true
ENCRYPTION_IN_TRANSIT=true

# System Configuration
DEFAULT_LANGUAGE=en
DEFAULT_LITERACY_LEVEL=intermediate
MAX_BATCH_SIZE=100
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600

# Performance
MAX_CONCURRENT_REQUESTS=50
REQUEST_TIMEOUT_MS=5000
EXPLANATION_TIMEOUT_MS=200
VALIDATION_TIMEOUT_MS=100

# Portal Integration
PORTAL_ENABLED=true
PORTAL_URL=https://patient-portal.example.com
PORTAL_API_KEY=your-api-key-here
ENABLE_PORTAL_AUDIT=true

# Multi-Language
SUPPORTED_LANGUAGES=en,es,zh,fr,de,ar,pt,ru,ja,hi
AUTO_DETECT_LANGUAGE=true
DEFAULT_FALLBACK_LANGUAGE=en

# Accessibility
WCAG_COMPLIANCE_LEVEL=AAA
SCREEN_READER_OPTIMIZATION=true
HIGH_CONTRAST_MODE=available
ADJUSTABLE_FONT_SIZES=true

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/var/log/patient-xai/app.log
AUDIT_LOG_FILE=/var/log/patient-xai/audit.log

# Monitoring
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_PORT=8080
PROMETHEUS_ENABLED=true

# Database (optional - for caching)
#DB_HOST=localhost
#DB_PORT=5432
#DB_NAME=patient_xai
#DB_USER=patient_xai_user
#DB_PASSWORD=your-secure-password

# Security
SESSION_SECRET=change-this-to-a-random-string
JWT_SECRET=change-this-to-a-random-string
CORS_ORIGINS=https://your-domain.com
RATE_LIMIT_PER_MINUTE=60

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_BATCH_PROCESSING=true
ENABLE_MULTI_LANGUAGE=true
ENABLE_VALIDATION=true
ENABLE_PORTAL_INTEGRATION=true
