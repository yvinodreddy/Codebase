# Phase 14: Medical Imaging System
# Environment Configuration Template
# Copy this file to .env and configure for your environment

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

APP_ENV=production
APP_PORT=8080
LOG_LEVEL=INFO
DEBUG=false

# ============================================================================
# HIPAA COMPLIANCE
# ============================================================================

HIPAA_MODE=enabled
PHI_DETECTION=enabled
ANONYMIZATION=enabled
AUDIT_LOGGING=enabled

# ============================================================================
# MEDICAL IMAGING SETTINGS
# ============================================================================

MAX_IMAGE_SIZE_MB=100
SUPPORTED_FORMATS=dcm,png,jpg,jpeg,tiff
PROCESSING_TIMEOUT_SEC=30
QUALITY_THRESHOLD=70.0
CONFIDENCE_THRESHOLD=0.5

# ============================================================================
# PERFORMANCE
# ============================================================================

MAX_CONCURRENT_ANALYSIS=10
WORKER_THREADS=4
CACHE_ENABLED=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE_MB=1024

# ============================================================================
# STORAGE
# ============================================================================

IMAGE_STORAGE_PATH=/data/medical-images
RESULTS_STORAGE_PATH=/data/results
TEMP_STORAGE_PATH=/tmp/medical-imaging
MAX_STORAGE_GB=500

# ============================================================================
# GUARDRAILS (OPTIONAL)
# ============================================================================

ENABLE_GUARDRAILS=false
# CONTENT_SAFETY_ENDPOINT=https://your-content-safety.cognitiveservices.azure.com
# CONTENT_SAFETY_KEY=your-azure-key-here
CONTENT_SAFETY_THRESHOLD=2
GUARDRAIL_MAX_RETRIES=5

# ============================================================================
# MONITORING
# ============================================================================

METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_INTERVAL=30

# ============================================================================
# LOGGING
# ============================================================================

LOG_FORMAT=json
LOG_OUTPUT=stdout,/var/log/medical-imaging/application.log
LOG_MAX_SIZE_MB=100
LOG_MAX_FILES=10

# ============================================================================
# DATABASE (OPTIONAL)
# ============================================================================

# DATABASE_URL=postgresql://user:password@localhost:5432/medical_imaging
# DATABASE_POOL_SIZE=10
# DATABASE_MAX_OVERFLOW=20

# ============================================================================
# REDIS CACHE (OPTIONAL)
# ============================================================================

# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=changeme
# REDIS_MAX_CONNECTIONS=50

# ============================================================================
# SECURITY
# ============================================================================

# ENABLE_AUTHENTICATION=false
# OAUTH_PROVIDER=auth0
# OAUTH_CLIENT_ID=your-client-id
# OAUTH_CLIENT_SECRET=your-client-secret

ENABLE_RATE_LIMITING=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=100

# ============================================================================
# CLINICAL INTEGRATION (OPTIONAL)
# ============================================================================

# PACS_ENABLED=false
# PACS_ENDPOINT=dicom://pacs.example.com
