{
  "application": {
    "name": "Population Health Management",
    "version": "1.0.0",
    "phase": 17,
    "story_points": 43,
    "priority": "P1"
  },
  "risk_stratification": {
    "models": ["HCC", "ACG", "Custom"],
    "tiers": {
      "low": {"min": 0, "max": 20},
      "medium": {"min": 20, "max": 40},
      "high": {"min": 40, "max": 60},
      "very_high": {"min": 60, "max": 80},
      "catastrophic": {"min": 80, "max": 100}
    },
    "hcc_weights": {
      "85": 3.021,
      "86": 1.398,
      "87": 0.397,
      "88": 0.397,
      "19": 0.318
    },
    "cost_projection": {
      "enabled": true,
      "base_cost_per_point": 100,
      "historical_weight": 0.6,
      "model_weight": 0.4
    }
  },
  "care_gaps": {
    "frameworks": ["HEDIS", "CMS", "Custom"],
    "gap_types": [
      "Preventive Screening",
      "Vaccination",
      "Chronic Disease Monitoring",
      "Medication Adherence",
      "Follow-up Visit",
      "Diagnostic Test",
      "Specialist Referral",
      "Wellness Visit"
    ],
    "screening_intervals": {
      "mammogram": 730,
      "colonoscopy": 3650,
      "hba1c": 180,
      "retinal_exam": 365,
      "flu_vaccine": 365,
      "pneumonia_vaccine": 1825
    },
    "adherence_threshold": 0.80
  },
  "quality_measures": {
    "hedis_measures": ["BCS", "COL", "CDC", "CBP", "IMA", "W15", "AWC"],
    "cms_star_ratings": {
      "enabled": true,
      "thresholds": {
        "5_star": 90,
        "4_star": 75,
        "3_star": 60,
        "2_star": 45,
        "1_star": 0
      }
    },
    "mips_reporting": {
      "enabled": true,
      "reporting_year": 2024
    },
    "benchmarks": {
      "CDC_HbA1c": 75.0,
      "CBP": 70.0,
      "BCS": 78.0,
      "COL": 72.0
    }
  },
  "interventions": {
    "priority_levels": ["Low Priority", "Medium Priority", "High Priority", "Urgent", "Emergent"],
    "types": [
      "Care Management Enrollment",
      "Preventive Care Outreach",
      "Medication Adherence Support",
      "Specialist Referral",
      "Patient Education"
    ],
    "auto_assign": true,
    "escalation_rules": {
      "catastrophic_risk": "Urgent",
      "very_high_risk": "High Priority",
      "multiple_gaps": "Medium Priority"
    }
  },
  "cohorts": {
    "auto_segmentation": true,
    "cohort_types": [
      "Diabetic Patients",
      "Hypertensive Patients",
      "Congestive Heart Failure",
      "COPD Patients",
      "Asthma Patients",
      "High Risk Patients",
      "Frequent ED Utilizers",
      "Readmission Risk",
      "Patients with Preventive Care Gaps"
    ],
    "criteria": {
      "high_risk": {"risk_score_min": 60},
      "frequent_ed": {"ed_visits_min": 3, "timeframe_days": 365},
      "readmission_risk": {"recent_discharge_days": 30}
    }
  },
  "hipaa_compliance": {
    "phi_protection": true,
    "auto_deidentification": true,
    "audit_logging": true,
    "encryption_at_rest": true,
    "encryption_in_transit": true,
    "patient_id_hashing": "SHA256",
    "hash_length": 16
  },
  "performance": {
    "targets": {
      "patient_analysis_ms": 100,
      "risk_calculation_ms": 50,
      "care_gaps_identification_ms": 50,
      "population_10_patients_ms": 1000
    },
    "caching": {
      "enabled": true,
      "ttl_seconds": 3600,
      "max_size_mb": 1024
    },
    "concurrent_processing": {
      "max_workers": 100,
      "batch_size": 10
    }
  },
  "monitoring": {
    "metrics_enabled": true,
    "prometheus_port": 9090,
    "health_check_interval_seconds": 30,
    "alert_thresholds": {
      "analysis_time_ms": 500,
      "error_rate_percent": 1.0,
      "memory_usage_percent": 80
    }
  },
  "integration": {
    "agent_framework": {
      "enabled": true,
      "version": "100%",
      "components": ["guardrails", "feedback_loop", "context_manager", "orchestrator"]
    },
    "data_sources": ["EHR", "Claims", "Lab Systems", "Pharmacy"],
    "output_formats": ["JSON", "HL7 FHIR", "CSV"]
  }
}
