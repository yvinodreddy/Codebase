# Phase 17: Population Health Management
# Environment Configuration Template
# Copy this to .env and customize for your environment

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME=PopulationHealthManagement
APP_VERSION=1.0.0
ENVIRONMENT=production  # production, staging, development

# ============================================================================
# HIPAA COMPLIANCE
# ============================================================================
HIPAA_MODE=enabled  # enabled, disabled (NEVER disable in production!)
PHI_PROTECTION=enabled
AUDIT_LOGGING=enabled
DATA_ENCRYPTION=enabled

# ============================================================================
# RISK STRATIFICATION
# ============================================================================
RISK_MODEL=HCC  # HCC, ACG, Custom
RISK_THRESHOLD_HIGH=60
RISK_THRESHOLD_MEDIUM=40
RISK_THRESHOLD_LOW=20
COST_PROJECTION_ENABLED=true

# ============================================================================
# CARE GAPS
# ============================================================================
CARE_GAPS_FRAMEWORKS=HEDIS,CMS,Custom
CARE_GAPS_PRIORITY_THRESHOLD=high
PREVENTIVE_SCREENING_ENABLED=true
CHRONIC_DISEASE_MONITORING=true
MEDICATION_ADHERENCE_THRESHOLD=0.80

# ============================================================================
# QUALITY MEASURES
# ============================================================================
QUALITY_MEASURES=HEDIS,CMS_STAR,MIPS
HEDIS_REPORTING_YEAR=2024
CMS_STAR_RATINGS_ENABLED=true
MIPS_REPORTING_ENABLED=true

# ============================================================================
# PERFORMANCE
# ============================================================================
MAX_CONCURRENT_ANALYSES=100
PATIENT_ANALYSIS_TIMEOUT_MS=500
POPULATION_ANALYSIS_TIMEOUT_MS=5000
ENABLE_CACHING=true
CACHE_TTL_SECONDS=3600

# ============================================================================
# DATABASE (Optional)
# ============================================================================
# DATABASE_URL=postgresql://user:password@localhost:5432/population_health
# DB_POOL_SIZE=20
# DB_MAX_OVERFLOW=10

# ============================================================================
# MONITORING
# ============================================================================
METRICS_ENABLED=true
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json

# ============================================================================
# SECURITY
# ============================================================================
ENCRYPTION_KEY=<your-encryption-key>
API_KEY=<your-api-key>
JWT_SECRET=<your-jwt-secret>

# ============================================================================
# INTEGRATION
# ============================================================================
AGENT_FRAMEWORK_ENABLED=true
GUARDRAILS_ENABLED=true
CONTENT_SAFETY_ENDPOINT=<your-azure-endpoint>
CONTENT_SAFETY_KEY=<your-azure-key>
