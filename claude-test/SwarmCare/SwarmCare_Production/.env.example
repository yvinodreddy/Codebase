# SwarmCare Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ==============================================================================
# DATABASE CONFIGURATION
# ==============================================================================
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your-secure-password-here

# ==============================================================================
# AZURE OPENAI CONFIGURATION
# ==============================================================================
AZURE_OPENAI_API_KEY=your-azure-openai-api-key-here
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_VERSION=2024-08-01-preview
AZURE_OPENAI_MODEL=gpt-4o
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o

# ==============================================================================
# AZURE CONTENT SAFETY
# ==============================================================================
AZURE_CONTENT_SAFETY_KEY=your-azure-content-safety-key-here
AZURE_CONTENT_SAFETY_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# ==============================================================================
# AUTHENTICATION & SECURITY
# ==============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=RS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

ALLOWED_ORIGINS=https://your-production-domain.com
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=Content-Type,Authorization

RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==============================================================================
# APPLICATION CONFIGURATION
# ==============================================================================
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=false

API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api
API_WORKERS=4

# ==============================================================================
# REDIS CONFIGURATION
# ==============================================================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ==============================================================================
# MONITORING & LOGGING
# ==============================================================================
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# ==============================================================================
# HIPAA COMPLIANCE
# ==============================================================================
HIPAA_AUDIT_LOG_ENABLED=true
HIPAA_AUDIT_LOG_RETENTION_DAYS=2555
PHI_ENCRYPTION_ENABLED=true
PHI_ENCRYPTION_KEY=your-phi-encryption-key-here

# ==============================================================================
# MEDICAL GUARDRAILS
# ==============================================================================
GUARDRAILS_ENABLED=true
GUARDRAILS_STRICT_MODE=true
AZURE_CONTENT_SAFETY_ENABLED=true
PHI_DETECTION_ENABLED=true
MEDICAL_FACT_CHECKING_ENABLED=true

# ==============================================================================
# PERFORMANCE & SCALING
# ==============================================================================
MAX_CONCURRENT_REQUESTS=100
REQUEST_TIMEOUT_SECONDS=30
CONTEXT_COMPACTION_THRESHOLD=0.8
MAX_CONTEXT_TOKENS=100000

# ==============================================================================
# FEATURE FLAGS
# ==============================================================================
FEATURE_RAG_ENABLED=true
FEATURE_SWARMCARE_AGENTS_ENABLED=true
FEATURE_PODCAST_GENERATION_ENABLED=true
FEATURE_VOICE_AI_ENABLED=false
FEATURE_MEDICAL_IMAGING_ENABLED=false

# ==============================================================================
# EXTERNAL INTEGRATIONS
# ==============================================================================
EHR_INTEGRATION_ENABLED=false
EPIC_FHIR_ENDPOINT=
CERNER_FHIR_ENDPOINT=

CDC_INTEGRATION_ENABLED=false
NEDSS_ENDPOINT=
