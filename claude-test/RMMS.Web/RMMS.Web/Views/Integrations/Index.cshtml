@model List<RMMS.Models.API.IntegrationStatus>
@{
    ViewData["Title"] = "External Integrations";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-plug"></i> External Integrations</h2>
            <p class="text-muted">Manage and monitor external system integrations (ERP, CRM, Payment Gateways, etc.)</p>
        </div>
    </div>

    <!-- STATISTICS DASHBOARD -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-plug"></i> Total Integrations</h5>
                    <h2>@ViewBag.TotalIntegrations</h2>
                    <small>Configured integrations</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-check-circle"></i> Connected</h5>
                    <h2>@ViewBag.ConnectedCount</h2>
                    <small>Successfully connected</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-exclamation-triangle"></i> Errors</h5>
                    <h2>@ViewBag.ErrorCount</h2>
                    <small>Connection errors</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-secondary text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-times-circle"></i> Disconnected</h5>
                    <h2>@ViewBag.DisconnectedCount</h2>
                    <small>Not connected</small>
                </div>
            </div>
        </div>
    </div>

    <!-- PERFORMANCE METRICS -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Overall Success Rate</h6>
                    <h3 class="text-success">@ViewBag.OverallSuccessRate%</h3>
                    <small>Across all integrations</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Avg Response Time</h6>
                    <h3 class="text-info">@ViewBag.AvgResponseTime ms</h3>
                    <small>Connected integrations</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Recently Checked</h6>
                    <h3 class="text-primary">@ViewBag.RecentlyChecked</h3>
                    <small>Last hour</small>
                </div>
            </div>
        </div>
    </div>

    <!-- ACTION BUTTONS -->
    <div class="row mb-3">
        <div class="col-12">
            <a href="@Url.Action("Create", "Integrations")" class="btn btn-primary">
                <i class="fas fa-plus"></i> Add New Integration
            </a>
            <a href="@Url.Action("GetStatistics", "Integrations")" class="btn btn-info" target="_blank">
                <i class="fas fa-chart-bar"></i> View Statistics
            </a>
        </div>
    </div>

    <!-- INTEGRATIONS TABLE -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Integrations List (@Model.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Type</th>
                                        <th>Endpoint</th>
                                        <th>Status</th>
                                        <th>Response Time</th>
                                        <th>Success/Fail</th>
                                        <th>Last Checked</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var integration in Model)
                                    {
                                        var statusClass = integration.Status == "Connected" ? "success"
                                                        : integration.Status == "Error" ? "danger"
                                                        : "secondary";
                                        var responseClass = integration.ResponseTime < 200 ? "success"
                                                          : integration.ResponseTime < 500 ? "warning"
                                                          : "danger";
                                        <tr>
                                            <td><strong>@integration.Name</strong></td>
                                            <td><span class="badge bg-info">@integration.IntegrationType</span></td>
                                            <td><code class="small">@integration.Endpoint</code></td>
                                            <td>
                                                <span class="badge bg-@statusClass">
                                                    @integration.Status
                                                </span>
                                                @if (!string.IsNullOrEmpty(integration.LastError))
                                                {
                                                    <i class="fas fa-info-circle text-danger" title="@integration.LastError"></i>
                                                }
                                            </td>
                                            <td>
                                                @if (integration.ResponseTime > 0)
                                                {
                                                    <span class="badge bg-@responseClass">@integration.ResponseTime ms</span>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="text-success">@integration.SuccessCount</span> /
                                                <span class="text-danger">@integration.FailureCount</span>
                                            </td>
                                            <td>
                                                @if (integration.LastChecked.HasValue)
                                                {
                                                    @integration.LastChecked.Value.ToString("yyyy-MM-dd HH:mm")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Never</span>
                                                }
                                            </td>
                                            <td>
                                                <form method="post" asp-action="TestConnection" asp-route-id="@integration.Id" style="display: inline;">
                                                    <button type="submit" class="btn btn-sm btn-primary" title="Test Connection">
                                                        <i class="fas fa-plug"></i> Test
                                                    </button>
                                                </form>
                                                <form method="post" asp-action="SyncNow" asp-route-id="@integration.Id" style="display: inline;">
                                                    <button type="submit" class="btn btn-sm btn-success" title="Sync Now" @(integration.Status != "Connected" ? "disabled" : "")>
                                                        <i class="fas fa-sync"></i>
                                                    </button>
                                                </form>
                                                <form method="post" asp-action="ToggleStatus" asp-route-id="@integration.Id" style="display: inline;">
                                                    <button type="submit" class="btn btn-sm btn-warning" title="Toggle Status">
                                                        <i class="fas fa-power-off"></i>
                                                    </button>
                                                </form>
                                                <a href="@Url.Action("Edit", "Integrations", new { id = integration.Id })" class="btn btn-sm btn-info" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                                <form method="post" asp-action="Delete" asp-route-id="@integration.Id" style="display: inline;">
                                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this integration?');" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No integrations configured. Add your first integration to connect with external systems.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- INTEGRATION TYPES INFO -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-info-circle"></i> Supported Integration Types</h5>
                </div>
                <div class="card-body">
                    <p>Connect with various external systems:</p>
                    <div class="row">
                        @if (ViewBag.IntegrationTypes != null)
                        {
                            @foreach (var type in ViewBag.IntegrationTypes)
                            {
                                <div class="col-md-2 mb-2">
                                    <span class="badge bg-secondary">@type</span>
                                </div>
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
