@model List<RMMS.Models.Mobile.PushNotification>
@{
    ViewData["Title"] = "Push Notifications Management";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-bell"></i> Push Notifications Management</h2>
            <p class="text-muted">Send and manage push notifications to mobile devices</p>
        </div>
    </div>

    <!-- MAIN STATISTICS -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-bell"></i> Total Notifications</h5>
                    <h2>@ViewBag.TotalNotifications</h2>
                    <small>All time</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-check-circle"></i> Delivered</h5>
                    <h2>@ViewBag.DeliveredCount</h2>
                    <small>@ViewBag.DeliveryRate% success rate</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-clock"></i> Pending</h5>
                    <h2>@ViewBag.PendingCount</h2>
                    <small>In queue</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-times-circle"></i> Failed</h5>
                    <h2>@ViewBag.FailedCount</h2>
                    <small>Delivery failures</small>
                </div>
            </div>
        </div>
    </div>

    <!-- TIME-BASED STATISTICS -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Sent Today</h6>
                    <h3 class="text-primary">@ViewBag.SentToday</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Sent This Week</h6>
                    <h3 class="text-info">@ViewBag.SentThisWeek</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Sent This Month</h6>
                    <h3 class="text-success">@ViewBag.SentThisMonth</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- DEVICE STATISTICS -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Total Devices</h6>
                    <h3>@ViewBag.TotalDevices</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Android Devices</h6>
                    <h3 class="text-success"><i class="fab fa-android"></i> @ViewBag.AndroidDevices</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">iOS Devices</h6>
                    <h3 class="text-primary"><i class="fab fa-apple"></i> @ViewBag.iOSDevices</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Push Enabled</h6>
                    <h3 class="text-info">@ViewBag.PushEnabledDevices</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- ACTION BUTTONS -->
    <div class="row mb-3">
        <div class="col-12">
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#sendNotificationModal">
                <i class="fas fa-paper-plane"></i> Send New Notification
            </button>
            <form method="post" asp-action="SendTestNotification" style="display: inline;">
                <button type="submit" class="btn btn-info">
                    <i class="fas fa-vial"></i> Send Test Notification
                </button>
            </form>
            <a href="@Url.Action("GetStatistics", "PushNotifications")" class="btn btn-success" target="_blank">
                <i class="fas fa-chart-bar"></i> View Statistics
            </a>
        </div>
    </div>

    <!-- NOTIFICATIONS TABLE -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Recent Notifications (@Model.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Title</th>
                                        <th>Body</th>
                                        <th>User ID</th>
                                        <th>Created</th>
                                        <th>Sent</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var notification in Model)
                                    {
                                        var statusClass = notification.Status == "sent" || notification.Status == "delivered" ? "success"
                                                        : notification.Status == "failed" ? "danger"
                                                        : "warning";
                                        <tr>
                                            <td><strong>@notification.Title</strong></td>
                                            <td>@notification.Body</td>
                                            <td>@notification.UserId</td>
                                            <td>@notification.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                                            <td>
                                                @if (notification.SentAt.HasValue)
                                                {
                                                    @notification.SentAt.Value.ToString("yyyy-MM-dd HH:mm")
                                                }
                                                else
                                                {
                                                    <span class="text-muted">Not sent</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="badge bg-@statusClass">@notification.Status</span>
                                                @if (!string.IsNullOrEmpty(notification.ErrorMessage))
                                                {
                                                    <i class="fas fa-info-circle text-danger" title="@notification.ErrorMessage"></i>
                                                }
                                            </td>
                                            <td>
                                                @if (notification.Status == "failed")
                                                {
                                                    <form method="post" asp-action="ResendFailed" asp-route-id="@notification.Id" style="display: inline;">
                                                        <button type="submit" class="btn btn-sm btn-warning" title="Resend">
                                                            <i class="fas fa-redo"></i>
                                                        </button>
                                                    </form>
                                                }
                                                <form method="post" asp-action="Delete" asp-route-id="@notification.Id" style="display: inline;">
                                                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this notification?');" title="Delete">
                                                        <i class="fas fa-trash"></i>
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No push notifications sent yet.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Send Notification Modal -->
<div class="modal fade" id="sendNotificationModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <form method="post" asp-action="SendNew">
                <div class="modal-header">
                    <h5 class="modal-title">Send Push Notification</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Title <span class="text-danger">*</span></label>
                        <input type="text" name="title" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Body <span class="text-danger">*</span></label>
                        <textarea name="body" class="form-control" rows="3" required></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Target Devices</label>
                        <select name="target" class="form-control">
                            @if (ViewBag.TargetOptions != null)
                            {
                                @foreach (var option in ViewBag.TargetOptions)
                                {
                                    <option value="@option">@option</option>
                                }
                            }
                        </select>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">User ID (for Specific User)</label>
                        <input type="text" name="userId" class="form-control" placeholder="Optional - for specific user targeting" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Custom Data (JSON)</label>
                        <textarea name="customData" class="form-control" rows="2" placeholder='{"key": "value"}'></textarea>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-paper-plane"></i> Send Notification
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}
