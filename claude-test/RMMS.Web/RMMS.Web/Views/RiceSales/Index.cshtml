@model List<RMMS.Models.RiceSales>
@{
    ViewData["Title"] = "Rice Sales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ms-card">
    <div class="ms-card-header" style="display: flex; justify-content: space-between; align-items: center;">
        <h2 class="ms-card-title" style="margin: 0;">
            <i class="fas fa-receipt"></i> Rice Sales Records
        </h2>
        <a asp-action="Create" class="ms-btn ms-btn-primary">
            <i class="fas fa-plus"></i> New Sale
        </a>
    </div>

    <div class="ms-card-body">
        <div class="table-responsive">
            <table class="ms-datatable table table-striped table-hover" data-export="true" data-page-length="25">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Invoice No</th>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Rice Variety</th>
                        <th>Quantity (Kg)</th>
                        <th>Rate/Kg</th>
                        <th>Total Amount</th>
                        <th>Payment Mode</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td><strong>@item.InvoiceNumber</strong></td>
                                <td data-order="@item.SaleDate.ToString("yyyyMMdd")">
                                    @item.SaleDate.ToString("dd-MMM-yyyy")
                                </td>
                                <td>@item.BuyerName</td>
                                <td>
                                    <span class="ms-badge ms-badge-primary">@item.RiceGrade</span>
                                </td>
                                <td class="text-end">@item.Quantity.ToString("N2")</td>
                                <td class="text-end">₹@item.UnitPrice.ToString("N2")</td>
                                <td class="text-end"><strong>₹@item.GrossInvoiceAmount.ToString("N2")</strong></td>
                                <td>
                                    @if (item.PaymentMode == "Cash")
                                    {
                                        <span class="ms-badge ms-badge-success">
                                            <i class="fas fa-money-bill-wave"></i> Cash
                                        </span>
                                    }
                                    else if (item.PaymentMode == "Bank Transfer")
                                    {
                                        <span class="ms-badge ms-badge-primary">
                                            <i class="fas fa-university"></i> Bank
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="ms-badge ms-badge-warning">
                                            <i class="fas fa-credit-card"></i> Credit
                                        </span>
                                    }
                                </td>
                                <td>
                                    <div class="ms-action-buttons">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="ms-action-btn btn-view" title="View Details"
                                           data-bs-toggle="tooltip">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="ms-action-btn btn-edit" title="Edit"
                                           data-bs-toggle="tooltip">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="ms-action-btn btn-delete" title="Delete"
                                           data-bs-toggle="tooltip"
                                           data-confirm="Are you sure you want to delete this sale record?">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // DataTables will be automatically initialized by site-enhanced.js
        });
    </script>
}
