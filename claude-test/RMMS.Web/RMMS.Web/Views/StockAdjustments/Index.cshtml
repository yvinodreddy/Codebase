@model RMMS.Common.Pagination.PagedResult<RMMS.Models.Inventory.StockAdjustment>
@{
    ViewData["Title"] = "Stock Adjustments";
    string GetSortIcon(string columnName)
    {
        if (ViewBag.CurrentSort != columnName)
            return "<i class='fas fa-sort text-muted'></i>";

        return ViewBag.CurrentOrder == "asc"
            ? "<i class='fas fa-sort-up'></i>"
            : "<i class='fas fa-sort-down'></i>";
    }

    string GetSortUrl(string columnName)
    {
        var order = ViewBag.CurrentSort == columnName && ViewBag.CurrentOrder == "asc" ? "desc" : "asc";
        return $"?searchTerm={ViewBag.SearchTerm}&approvalStatus={ViewBag.ApprovalStatus}&sortBy={columnName}&sortOrder={order}&page=1";
    }
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-adjust"></i> Stock Adjustments</h2>
        <div>
            <a asp-action="Index" asp-route-approvalStatus="Pending" class="btn btn-warning btn-sm">
                <i class="fas fa-clock"></i> Pending Approvals (@(ViewBag.PendingCount ?? 0))
            </a>
            <a asp-action="Create" asp-route-type="Increase" class="btn btn-success">
                <i class="fas fa-arrow-up"></i> New Adjustment
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Adjustments</h5>
                    <h3>@(ViewBag.TotalAdjustments ?? 0)</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Pending Approval</h5>
                    <h3>@(ViewBag.PendingCount ?? 0)</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Approved</h5>
                    <h3>@(ViewBag.ApprovedCount ?? 0)</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-danger text-white">
                <div class="card-body">
                    <h5 class="card-title">Rejected</h5>
                    <h3>@(ViewBag.RejectedCount ?? 0)</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <form method="get" class="row g-3">
                <div class="col-md-8">
                    <input type="text" name="searchTerm" value="@ViewBag.SearchTerm"
                           class="form-control" placeholder="Search adjustments...">
                    <input type="hidden" name="sortBy" value="@ViewBag.CurrentSort" />
                    <input type="hidden" name="sortOrder" value="@ViewBag.CurrentOrder" />
                </div>
                <div class="col-md-3">
                    <select name="approvalStatus" class="form-select">
                        <option value="">All Status</option>
                        <option value="Pending" selected="@(ViewBag.ApprovalStatus == "Pending")">Pending</option>
                        <option value="Approved" selected="@(ViewBag.ApprovalStatus == "Approved")">Approved</option>
                        <option value="Rejected" selected="@(ViewBag.ApprovalStatus == "Rejected")">Rejected</option>
                    </select>
                </div>
                <div class="col-md-1">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </form>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-sm">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                <a href="@GetSortUrl("AdjustmentCode")" class="text-white text-decoration-none">
                                    Code @Html.Raw(GetSortIcon("AdjustmentCode"))
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("AdjustmentDate")" class="text-white text-decoration-none">
                                    Date @Html.Raw(GetSortIcon("AdjustmentDate"))
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("AdjustmentType")" class="text-white text-decoration-none">
                                    Type @Html.Raw(GetSortIcon("AdjustmentType"))
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("ProductName")" class="text-white text-decoration-none">
                                    Product @Html.Raw(GetSortIcon("ProductName"))
                                </a>
                            </th>
                            <th>Warehouse</th>
                            <th>Reason</th>
                            <th>Before</th>
                            <th>Adjustment</th>
                            <th>After</th>
                            <th>
                                <a href="@GetSortUrl("ApprovalStatus")" class="text-white text-decoration-none">
                                    Status @Html.Raw(GetSortIcon("ApprovalStatus"))
                                </a>
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Items.Any())
                        {
                            @foreach (var adjustment in Model.Items)
                            {
                                <tr>
                                    <td><strong>@adjustment.AdjustmentCode</strong></td>
                                    <td>@adjustment.AdjustmentDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        <span class="badge bg-info">
                                            <i class="fas @adjustment.AdjustmentIcon"></i> @adjustment.AdjustmentType
                                        </span>
                                    </td>
                                    <td>
                                        @adjustment.Product?.ProductName<br>
                                        <small class="text-muted">@adjustment.Product?.ProductCode</small>
                                    </td>
                                    <td>
                                        @adjustment.Warehouse?.WarehouseName<br>
                                        <small class="text-muted">@adjustment.Warehouse?.WarehouseCode</small>
                                    </td>
                                    <td><span class="badge bg-secondary">@adjustment.Reason</span></td>
                                    <td><strong>@adjustment.BeforeQuantity.ToString("N2")</strong></td>
                                    <td>
                                        <strong class="@(adjustment.AdjustmentType == "Increase" ? "text-success" : "text-danger")">
                                            @(adjustment.AdjustmentType == "Increase" ? "+" : "-")@adjustment.Quantity.ToString("N2")
                                        </strong>
                                    </td>
                                    <td><strong>@adjustment.AfterQuantity.ToString("N2")</strong></td>
                                    <td>
                                        <span class="badge @adjustment.StatusBadgeClass">
                                            @adjustment.StatusDisplay
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@adjustment.Id" class="btn btn-info" title="Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (!adjustment.IsApproved && !adjustment.IsRejected)
                                            {
                                                <a asp-action="Edit" asp-route-id="@adjustment.Id" class="btn btn-warning" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            }
                                            @if (adjustment.RequiresApproval && !adjustment.IsApproved && !adjustment.IsRejected)
                                            {
                                                <a asp-action="Approve" asp-route-id="@adjustment.Id" class="btn btn-success" title="Approve">
                                                    <i class="fas fa-check"></i>
                                                </a>
                                                <a asp-action="Reject" asp-route-id="@adjustment.Id" class="btn btn-danger" title="Reject">
                                                    <i class="fas fa-times"></i>
                                                </a>
                                            }
                                            @if (!adjustment.IsApproved)
                                            {
                                                <a asp-action="Delete" asp-route-id="@adjustment.Id" class="btn btn-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="11" class="text-center text-muted">
                                    <i class="fas fa-info-circle"></i> No stock adjustments found.
                                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                                    {
                                        <span>Try a different search or <a asp-action="Index">view all adjustments</a>.</span>
                                    }
                                    else
                                    {
                                        <span><a asp-action="Create">Create your first stock adjustment</a>.</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <strong>Showing @Model.Items.Count of @Model.TotalItems adjustments</strong>
                </div>
                <div class="col-md-6">
                    @await Html.PartialAsync("_PaginationPartial", Model)
                </div>
            </div>
        </div>
    </div>
</div>
