@model RMMS.Models.Sales.Quotation
@{
    ViewData["Title"] = "Quotation Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-file-invoice"></i> Quotation Details</h2>
        <div>
            @if (Model.Status == "Draft")
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
            }
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Quotation Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Quotation Number:</strong>
                            <p class="text-primary fs-5">@Model.QuotationNumber</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Quotation Date:</strong>
                            <p>@Model.QuotationDate.ToString("dd MMMM yyyy")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Customer:</strong>
                            <p>@Model.Customer?.CustomerName (@Model.Customer?.CustomerCode)</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Valid Until:</strong>
                            @{
                                var isExpired = Model.ValidUntil < DateTime.Now && Model.Status == "Sent";
                                var validUntilClass = isExpired ? "text-danger" : "text-success";
                            }
                            <p class="@validUntilClass">
                                @Model.ValidUntil.ToString("dd MMMM yyyy")
                                @if (isExpired)
                                {
                                    <span class="badge bg-danger">Expired</span>
                                }
                            </p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Status:</strong>
                            @{
                                var statusClass = Model.Status switch
                                {
                                    "Draft" => "bg-secondary",
                                    "Sent" => "bg-info",
                                    "Accepted" => "bg-success",
                                    "Rejected" => "bg-danger",
                                    "Expired" => "bg-warning",
                                    "Converted" => "bg-primary",
                                    _ => "bg-secondary"
                                };
                            }
                            <p><span class="badge @statusClass fs-6">@Model.Status</span></p>
                        </div>
                        @if (Model.InquiryId.HasValue)
                        {
                            <div class="col-md-6">
                                <strong>Created From Inquiry:</strong>
                                <p>@Model.Inquiry?.InquiryNumber</p>
                            </div>
                        }
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Payment Terms:</strong>
                            <p>@(Model.PaymentTerms ?? "-")</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Delivery Terms:</strong>
                            <p>@(Model.DeliveryTerms ?? "-")</p>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.TermsAndConditions))
                    {
                        <div class="mb-3">
                            <strong>Terms and Conditions:</strong>
                            <p>@Model.TermsAndConditions</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.Remarks))
                    {
                        <div class="mb-3">
                            <strong>Remarks:</strong>
                            <p>@Model.Remarks</p>
                        </div>
                    }
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Quotation Items</h5>
                </div>
                <div class="card-body">
                    @if (Model.QuotationItems != null && Model.QuotationItems.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-end">Quantity</th>
                                        <th class="text-end">Unit Price</th>
                                        <th class="text-end">Discount</th>
                                        <th class="text-end">Tax</th>
                                        <th class="text-end">Total</th>
                                        @if (Model.Status == "Draft")
                                        {
                                            <th class="text-center">Action</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.QuotationItems)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.Product?.ProductName</strong><br />
                                                <small class="text-muted">@item.ProductDescription</small>
                                            </td>
                                            <td class="text-end">@item.Quantity @item.UnitOfMeasure</td>
                                            <td class="text-end">₹ @item.UnitPrice.ToString("N2")</td>
                                            <td class="text-end">
                                                @if (item.DiscountAmount.HasValue && item.DiscountAmount > 0)
                                                {
                                                    <span class="text-danger">
                                                        @if (item.DiscountPercent.HasValue)
                                                        {
                                                            <small>(@item.DiscountPercent.Value%)</small><br />
                                                        }
                                                        ₹ @item.DiscountAmount.Value.ToString("N2")
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                            </td>
                                            <td class="text-end">
                                                @if (item.TaxAmount.HasValue && item.TaxAmount > 0)
                                                {
                                                    if (item.TaxPercent.HasValue)
                                                    {
                                                        <small>(@item.TaxPercent.Value%)</small><br />
                                                    }
                                                    <span>₹ @item.TaxAmount.Value.ToString("N2")</span>
                                                }
                                                else
                                                {
                                                    <span>-</span>
                                                }
                                            </td>
                                            <td class="text-end"><strong>₹ @item.TotalAmount.ToString("N2")</strong></td>
                                            @if (Model.Status == "Draft")
                                            {
                                                <td class="text-center">
                                                    <form asp-action="RemoveItem" method="post" style="display:inline;">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="quotationId" value="@Model.Id" />
                                                        <input type="hidden" name="itemId" value="@item.Id" />
                                                        <button type="submit" class="btn btn-sm btn-danger"
                                                                onclick="return confirm('Remove this item?');">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No items added yet. Add items below to complete the quotation.
                        </div>
                    }

                    @if (Model.Status == "Draft")
                    {
                        <hr />
                        <h6 class="mb-3"><i class="fas fa-plus"></i> Add New Item</h6>
                        <form asp-action="AddItem" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="quotationId" value="@Model.Id" />

                            <div class="row mb-3">
                                <div class="col-md-6">
                                    <label class="form-label">Product *</label>
                                    <select name="item.ProductId" class="form-select" required id="productSelect">
                                        <option value="">Select Product</option>
                                        @if (ViewBag.Products != null)
                                        {
                                            @foreach (var product in ViewBag.Products)
                                            {
                                                <option value="@product.Id" data-price="@product.SalesRate">
                                                    @product.ProductName (@product.ProductCode)
                                                </option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Product Description</label>
                                    <input type="text" name="item.ProductDescription" class="form-control"
                                           placeholder="Optional description" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-3">
                                    <label class="form-label">Quantity *</label>
                                    <input type="number" name="item.Quantity" class="form-control" step="0.001"
                                           required min="0.001" id="quantity" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">UOM</label>
                                    <input type="text" name="item.UnitOfMeasure" class="form-control"
                                           value="Quintals" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Unit Price *</label>
                                    <input type="number" name="item.UnitPrice" class="form-control" step="0.01"
                                           required min="0" id="unitPrice" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">Discount %</label>
                                    <input type="number" name="item.DiscountPercent" class="form-control" step="0.01"
                                           min="0" max="100" value="0" />
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-md-3">
                                    <label class="form-label">Tax %</label>
                                    <input type="number" name="item.TaxPercent" class="form-control" step="0.01"
                                           min="0" max="100" value="0" />
                                </div>
                                <div class="col-md-6">
                                    <label class="form-label">Remarks</label>
                                    <input type="text" name="item.Remarks" class="form-control"
                                           placeholder="Optional remarks" />
                                </div>
                                <div class="col-md-3">
                                    <label class="form-label">&nbsp;</label>
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="fas fa-plus"></i> Add Item
                                    </button>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5>Financial Summary</h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tr>
                            <td><strong>Subtotal:</strong></td>
                            <td class="text-end">₹ @Model.SubtotalAmount.ToString("N2")</td>
                        </tr>
                        @if (Model.DiscountAmount.HasValue && Model.DiscountAmount > 0)
                        {
                            <tr>
                                <td><strong>Discount @(Model.DiscountPercent.HasValue ? $"({Model.DiscountPercent}%)" : ""):</strong></td>
                                <td class="text-end text-danger">- ₹ @Model.DiscountAmount.Value.ToString("N2")</td>
                            </tr>
                        }
                        <tr>
                            <td><strong>Tax:</strong></td>
                            <td class="text-end">₹ @Model.TaxAmount.ToString("N2")</td>
                        </tr>
                        <tr class="table-active">
                            <td><strong>Total Amount:</strong></td>
                            <td class="text-end"><strong class="text-success fs-5">₹ @Model.TotalAmount.ToString("N2")</strong></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            @if (Model.Status == "Draft")
            {
                <div class="card mb-3">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="Send" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-success w-100 mb-2">
                                <i class="fas fa-paper-plane"></i> Send to Customer
                            </button>
                        </form>
                    </div>
                </div>
            }

            @if (Model.Status == "Accepted")
            {
                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">Convert to Order</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="ConvertToSalesOrder" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@Model.Id" />
                            <button type="submit" class="btn btn-primary w-100 mb-2"
                                    onclick="return confirm('Convert this quotation to a sales order?');">
                                <i class="fas fa-shopping-cart"></i> Convert to Sales Order
                            </button>
                        </form>
                        <small class="text-muted">This will create a new sales order with all items from this quotation.</small>
                    </div>
                </div>
            }

            <div class="card mb-3">
                <div class="card-header">
                    <h5>Customer Details</h5>
                </div>
                <div class="card-body">
                    <p><strong>Name:</strong> @Model.Customer?.CustomerName</p>
                    <p><strong>Code:</strong> @Model.Customer?.CustomerCode</p>
                    <p><strong>Type:</strong> @Model.Customer?.CustomerType</p>
                    @if (Model.Customer?.GSTIN != null)
                    {
                        <p><strong>GSTIN:</strong> @Model.Customer.GSTIN</p>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5>Audit Information</h5>
                </div>
                <div class="card-body">
                    <small>
                        <strong>Created:</strong> @Model.CreatedDate.ToString("dd MMM yyyy HH:mm")<br />
                        <strong>By:</strong> @Model.CreatedBy<br />
                        @if (Model.ModifiedDate.HasValue)
                        {
                            <strong>Modified:</strong> @Model.ModifiedDate.Value.ToString("dd MMM yyyy HH:mm")<br />
                            <strong>By:</strong> @Model.ModifiedBy
                        }
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-populate unit price when product is selected
        document.getElementById('productSelect')?.addEventListener('change', function() {
            const selectedOption = this.options[this.selectedIndex];
            const price = selectedOption.getAttribute('data-price');
            const unitPriceInput = document.getElementById('unitPrice');

            if (price && unitPriceInput) {
                unitPriceInput.value = price;
            }
        });
    </script>
}
