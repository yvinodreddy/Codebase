            text-transform: uppercase;
            margin-bottom: 5px;
        }

        .company-tagline {
            font-size: 14px;
            font-style: italic;
            color: #666;
            margin-bottom: 15px;
        }

        .company-details {
            font-size: 13px;
            line-height: 1.8;
        }

        .invoice-title-box {
            border: 2px solid #333;
            background: #f9f9f9;
            padding: 15px;
            text-align: center;
            margin: 20px 0;
        }

        .invoice-title {
            font-size: 28px;
            font-weight: 700;
            letter-spacing: 2px;
            text-transform: uppercase;
        }

        .invoice-body {
            padding: 30px 40px;
        }

        .info-box {
            border: 2px solid #333;
            padding: 20px;
            margin-bottom: 20px;
            background: #fafafa;
        }

        .info-box h6 {
            font-size: 14px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 15px;
            border-bottom: 1px solid #333;
            padding-bottom: 8px;
        }

