@model RMMS.Models.RiceSales
@{
    ViewData["Title"] = "Invoice - Minimalist Template 2";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Invoice</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet" />

    <style>
        @@media print {
            .no-print { display: none !important; }
            @@page { margin: 1.5cm; }
        }

        body {
            font-family: 'Arial', sans-serif;
            color: #333;
            background: #f5f5f5;
            line-height: 1.6;
        }

        .invoice-container {
            max-width: 800px;
            margin: 20px auto;
            background: white;
            padding: 60px;
            box-shadow: 0 0 10px rgba(0,0,0,0.1);
        }

        .invoice-header {
            border-bottom: 3px solid #333;
            padding-bottom: 20px;
            margin-bottom: 40px;
        }

        .company-name {
            font-size: 28px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 2px;
        }

        .invoice-number {
            font-size: 36px;
            font-weight: 700;
            color: #333;
        }

        h2 {
            font-size: 14px;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 15px;
            border-bottom: 1px solid #ddd;
            padding-bottom: 5px;
        }

        .info-table {
            width: 100%;
            margin-bottom: 30px;
        }

        .info-table td {
            padding: 5px 0;
        }

        .label {
            font-weight: 600;
            width: 150px;
        }

        .items-table {
            width: 100%;
            margin: 30px 0;
            border-collapse: collapse;
        }

        .items-table thead {
            background: #333;
            color: white;
        }

        .items-table th,
        .items-table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .items-table th {
            font-weight: 600;
            font-size: 13px;
        }

        .text-right {
            text-align: right !important;
        }

        .totals-table {
            width: 300px;
            margin-left: auto;
            margin-top: 20px;
        }

        .totals-table td {
            padding: 8px 0;
        }

        .totals-table .total-row {
            font-size: 18px;
            font-weight: 700;
            border-top: 2px solid #333;
            border-bottom: 3px double #333;
            padding-top: 15px !important;
        }

        .footer-notes {
            margin-top: 50px;
            padding-top: 20px;
            border-top: 1px solid #ddd;
            font-size: 12px;
            color: #666;
        }

        .print-buttons {
            position: fixed;
            top: 20px;
            right: 20px;
            z-index: 1000;
        }
    </style>
</head>
<body>
    <!-- Print Buttons -->
    <div class="print-buttons no-print">
        <button onclick="window.print()" class="btn btn-dark btn-sm me-2">
            <i class="fas fa-print"></i> Print
        </button>
        <button onclick="downloadPDF()" class="btn btn-dark btn-sm me-2">
            <i class="fas fa-file-pdf"></i> PDF
        </button>
        <button onclick="window.close()" class="btn btn-secondary btn-sm">
            <i class="fas fa-times"></i>
        </button>
    </div>

    <div class="invoice-container" id="invoice">
        <!-- Header -->
        <div class="invoice-header">
            <table style="width: 100%;">
                <tr>
                    <td style="width: 50%;">
                        <div class="company-name">RMMS RICE MILL</div>
                        <div style="margin-top: 10px; font-size: 13px;">
                            123 Mill Road, Rice Town<br>
                            Tel: +91 1234567890<br>
                            Email: info@rmmsricemill.com<br>
                            GST: 29ABCDE1234F1Z5
                        </div>
                    </td>
                    <td style="width: 50%; text-align: right; vertical-align: top;">
                        <div style="font-size: 18px; font-weight: 600; margin-bottom: 10px;">INVOICE</div>
                        <div class="invoice-number">@Model.InvoiceNumber</div>
                    </td>
                </tr>
            </table>
        </div>

        <!-- Bill To & Invoice Details -->
        <table style="width: 100%; margin-bottom: 40px;">
            <tr>
                <td style="width: 50%; vertical-align: top;">
                    <h2>Bill To</h2>
                    <table class="info-table">
                        <tr>
                            <td colspan="2"><strong style="font-size: 16px;">@Model.BuyerName</strong></td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                @if (!string.IsNullOrEmpty(Model.BuyerAddress))
                                {
                                    @Html.Raw(Model.BuyerAddress.Replace("\n", "<br>"))
                                }
                            </td>
                        </tr>
                        @if (!string.IsNullOrEmpty(Model.BuyerGSTIN))
                        {
                            <tr>
                                <td class="label">GST Number:</td>
                                <td>@Model.BuyerGSTIN</td>
                            </tr>
                        }
                    </table>
                </td>
                <td style="width: 50%; vertical-align: top;">
                    <h2>Invoice Details</h2>
                    <table class="info-table">
                        <tr>
                            <td class="label">Invoice Date:</td>
                            <td>@Model.SaleDate.ToString("dd MMM yyyy")</td>
                        </tr>
                        <tr>
                            <td class="label">Due Date:</td>
                            <td>@(Model.DueDate?.ToString("dd MMM yyyy") ?? "N/A")</td>
                        </tr>
                        @if (!string.IsNullOrEmpty(Model.PaymentMode))
                        {
                            <tr>
                                <td class="label">Payment Mode:</td>
                                <td>@Model.PaymentMode</td>
                            </tr>
                        }
                        <tr>
                            <td class="label">Payment Status:</td>
                            <td>@(Model.PaymentStatus ?? "Pending")</td>
                        </tr>
                    </table>
                </td>
            </tr>
        </table>

        <!-- Items -->
        <table class="items-table">
            <thead>
                <tr>
                    <th style="width: 5%">#</th>
                    <th style="width: 45%">Description</th>
                    <th style="width: 12%" class="text-right">Qty</th>
                    <th style="width: 13%" class="text-right">Rate</th>
                    <th style="width: 10%" class="text-right">Tax</th>
                    <th style="width: 15%" class="text-right">Amount</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>
                        @Model.RiceGrade
                        @if (!string.IsNullOrEmpty(Model.Remarks))
                        {
                            <br><small>@Model.Remarks</small>
                        }
                    </td>
                    <td class="text-right">@Model.Quantity.ToString("N2") kg</td>
                    <td class="text-right">₹@Model.UnitPrice.ToString("N2")</td>
                    <td class="text-right">5%</td>
                    <td class="text-right">₹@Model.TotalInvoiceValue.ToString("N2")</td>
                </tr>
            </tbody>
            <tbody style="display:none">
                <tr>
                    <td>2</td>
                    <td>Sona Masuri - Grade A (25kg bags)</td>
                    <td class="text-right">60</td>
                    <td class="text-right">₹950</td>
                    <td class="text-right">5%</td>
                    <td class="text-right">₹59,850.00</td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>Ponni Rice - Boiled (25kg bags)</td>
                    <td class="text-right">40</td>
                    <td class="text-right">₹850</td>
                    <td class="text-right">5%</td>
                    <td class="text-right">₹35,700.00</td>
                </tr>
                <tr>
                    <td>4</td>
                    <td>Transportation Charges</td>
                    <td class="text-right">1</td>
                    <td class="text-right">₹2,500</td>
                    <td class="text-right">18%</td>
                    <td class="text-right">₹2,950.00</td>
                </tr>
            </tbody>
        </table>

        <!-- Totals -->
        <table class="totals-table">
            <tr>
                <td>Subtotal:</td>
                <td class="text-right">₹@Model.TotalInvoiceValue.ToString("N2")</td>
            </tr>
            @if (Model.Discount > 0)
            {
                <tr>
                    <td>Discount:</td>
                    <td class="text-right">-₹@Model.Discount.ToString("N2")</td>
                </tr>
            }
            <tr>
                <td>Taxable Value:</td>
                <td class="text-right">₹@Model.TaxableValue.ToString("N2")</td>
            </tr>
            @if (Model.CGSTAmount > 0)
            {
                <tr>
                    <td>CGST @@2.5%:</td>
                    <td class="text-right">₹@Model.CGSTAmount.ToString("N2")</td>
                </tr>
                <tr>
                    <td>SGST @@2.5%:</td>
                    <td class="text-right">₹@Model.SGSTAmount.ToString("N2")</td>
                </tr>
            }
            @if (Model.IGSTAmount > 0)
            {
                <tr>
                    <td>IGST @@5%:</td>
                    <td class="text-right">₹@Model.IGSTAmount.ToString("N2")</td>
                </tr>
            }
            @if (Model.FreightCharges > 0)
            {
                <tr>
                    <td>Freight:</td>
                    <td class="text-right">₹@Model.FreightCharges.ToString("N2")</td>
                </tr>
            }
            @if (Model.OtherCharges > 0)
            {
                <tr>
                    <td>Other Charges:</td>
                    <td class="text-right">₹@Model.OtherCharges.ToString("N2")</td>
                </tr>
            }
            <tr class="total-row">
                <td>TOTAL:</td>
                <td class="text-right">₹@Model.GrossInvoiceAmount.ToString("N2")</td>
            </tr>
        </table>

        <!-- Bank Details -->
        <div style="margin-top: 40px;">
            <h2>Payment Information</h2>
            <table class="info-table">
                <tr>
                    <td class="label">Bank Name:</td>
                    <td>State Bank of India</td>
                </tr>
                <tr>
                    <td class="label">Account Name:</td>
                    <td>RMMS Rice Mill Pvt Ltd</td>
                </tr>
                <tr>
                    <td class="label">Account Number:</td>
                    <td>1234567890</td>
                </tr>
                <tr>
                    <td class="label">IFSC Code:</td>
                    <td>SBIN0001234</td>
                </tr>
                <tr>
                    <td class="label">UPI ID:</td>
                    <td>rmms@sbi</td>
                </tr>
            </table>
        </div>

        <!-- Footer -->
        <div class="footer-notes">
            <div><strong>Terms & Conditions:</strong></div>
            <ol style="margin: 10px 0; padding-left: 20px;">
                <li>Payment due within 30 days of invoice date</li>
                <li>2% per month interest charged on overdue amounts</li>
                <li>Goods once sold will not be taken back</li>
                <li>Subject to local jurisdiction</li>
            </ol>

            <div style="margin-top: 40px; text-align: right;">
                <div style="border-top: 1px solid #333; display: inline-block; padding-top: 5px; padding-left: 50px; padding-right: 50px;">
                    For RMMS Rice Mill
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.7.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>

    <script>
        function downloadPDF() {
            const { jsPDF } = window.jspdf;
            $('.print-buttons').hide();

            html2canvas(document.querySelector('#invoice'), {
                scale: 2
            }).then(canvas => {
                const imgData = canvas.toDataURL('image/png');
                const pdf = new jsPDF('p', 'mm', 'a4');
                const imgWidth = 210;
                const imgHeight = canvas.height * imgWidth / canvas.width;

                pdf.addImage(imgData, 'PNG', 0, 0, imgWidth, imgHeight);
                pdf.save('invoice-INV-2024-002.pdf');

                $('.print-buttons').show();
            });
        }
    </script>
</body>
</html>
