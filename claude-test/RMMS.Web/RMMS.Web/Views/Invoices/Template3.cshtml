        .payment-info {
            background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%);
            border-radius: 10px;
            padding: 25px;
            margin-top: 30px;
        }

        .payment-info h6 {
            color: #764ba2;
            font-weight: 800;
            margin-bottom: 15px;
            font-size: 16px;
        }

        .payment-detail {
            display: flex;
            margin: 8px 0;
            font-size: 14px;
        }

        .payment-detail strong {
            min-width: 150px;
            color: #555;
        }

        .footer-section {
