@section Scripts {
    <script>
        function useTemplate(templateNumber) {
            RMMS.Alert.confirm({
                title: `Use Template ${templateNumber}?`,
                text: 'This will set Template ' + templateNumber + ' as your default invoice template.',
                icon: 'question'
            }).then((result) => {
                if (result.isConfirmed) {
                    // Save preference to local storage or backend
                    localStorage.setItem('preferred_invoice_template', templateNumber);

                    RMMS.Toast.success(`Template ${templateNumber} set as default!`);
                }
            });
        }

        function createNewInvoice() {
            RMMS.Toast.info('Opening sales order form...');
            setTimeout(() => {
                window.location.href = '@Url.Action("Create", "RiceSales")';
            }, 1000);
        }
    </script>
}
