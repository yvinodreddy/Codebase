@model RMMS.Models.Masters.Product
@{
    ViewData["Title"] = "Edit Product";
}

<div class="container-fluid">
    <h2><i class="fas fa-edit"></i> Edit Product</h2>
    <hr />

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CreatedDate" />
        <input type="hidden" asp-for="CreatedBy" />

        <div class="row">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5>Basic Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ProductCode" class="form-label"></label>
                                <input asp-for="ProductCode" class="form-control" readonly />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ProductName" class="form-label"></label>
                                <input asp-for="ProductName" class="form-control" required />
                                <span asp-validation-for="ProductName" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="ProductCategory" class="form-label"></label>
                                <select asp-for="ProductCategory" class="form-select" required>
                                    <option value="">Select Category</option>
                                    <option value="Rice">Rice</option>
                                    <option value="Paddy">Paddy</option>
                                    <option value="By-Product">By-Product</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="ProductType" class="form-label"></label>
                                <input asp-for="ProductType" class="form-control" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Grade" class="form-label"></label>
                                <select asp-for="Grade" class="form-select">
                                    <option value="">Select Grade</option>
                                    <option value="Premium">Premium</option>
                                    <option value="A">A Grade</option>
                                    <option value="B">B Grade</option>
                                    <option value="C">C Grade</option>
                                    <option value="Standard">Standard</option>
                                </select>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label"></label>
                            <textarea asp-for="Description" class="form-control" rows="2"></textarea>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="UnitOfMeasure" class="form-label"></label>
                                <select asp-for="UnitOfMeasure" class="form-select">
                                    <option value="Kg">Kilogram (Kg)</option>
                                    <option value="Quintal">Quintal</option>
                                    <option value="Ton">Ton</option>
                                    <option value="Bag">Bag</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="UnitWeight" class="form-label"></label>
                                <input asp-for="UnitWeight" class="form-control" type="number" step="0.001" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="PackagingType" class="form-label"></label>
                                <input asp-for="PackagingType" class="form-control" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="HSNCode" class="form-label"></label>
                                <input asp-for="HSNCode" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="GSTRate" class="form-label"></label>
                                <input asp-for="GSTRate" class="form-control" type="number" step="0.01" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="StandardCost" class="form-label"></label>
                                <input asp-for="StandardCost" class="form-control" type="number" step="0.01" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SellingPrice" class="form-label"></label>
                                <input asp-for="SellingPrice" class="form-control" type="number" step="0.01" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="MinimumStockLevel" class="form-label"></label>
                                <input asp-for="MinimumStockLevel" class="form-control" type="number" step="0.001" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="MaximumStockLevel" class="form-label"></label>
                                <input asp-for="MaximumStockLevel" class="form-control" type="number" step="0.001" />
                            </div>
                            <div class="col-md-4">
                                <label asp-for="ReorderLevel" class="form-label"></label>
                                <input asp-for="ReorderLevel" class="form-control" type="number" step="0.001" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="StorageLocation" class="form-label"></label>
                                <input asp-for="StorageLocation" class="form-control" />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ShelfLifeDays" class="form-label"></label>
                                <input asp-for="ShelfLifeDays" class="form-control" type="number" />
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-3">
                                <div class="form-check">
                                    <input asp-for="IsRawMaterial" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsRawMaterial" class="form-check-label"></label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-check">
                                    <input asp-for="IsFinishedProduct" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsFinishedProduct" class="form-check-label"></label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-check">
                                    <input asp-for="IsByProduct" class="form-check-input" type="checkbox" />
                                    <label asp-for="IsByProduct" class="form-check-label"></label>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <label asp-for="Status" class="form-label"></label>
                                <select asp-for="Status" class="form-select">
                                    <option value="Active">Active</option>
                                    <option value="Inactive">Inactive</option>
                                    <option value="Discontinued">Discontinued</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-header">
                        <h5>Actions</h5>
                    </div>
                    <div class="card-body">
                        <button type="submit" class="btn btn-success w-100 mb-2">
                            <i class="fas fa-save"></i> Update Product
                        </button>
                        <a asp-action="Index" class="btn btn-secondary w-100">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
