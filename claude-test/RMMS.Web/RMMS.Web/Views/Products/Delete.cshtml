@model RMMS.Models.Masters.Product
@{
    ViewData["Title"] = "Delete Product";
}

<div class="container-fluid">
    <h2 class="text-danger"><i class="fas fa-exclamation-triangle"></i> Delete Product</h2>
    <hr />

    <div class="alert alert-danger">
        <h5>Are you sure you want to delete this product?</h5>
        <p>This action will mark the product as inactive. The data will be preserved for audit purposes.</p>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5>Product Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Product Code:</dt>
                <dd class="col-sm-9">@Model.ProductCode</dd>

                <dt class="col-sm-3">Product Name:</dt>
                <dd class="col-sm-9"><strong>@Model.ProductName</strong></dd>

                <dt class="col-sm-3">Category:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.ProductCategory == "Rice" ? "primary" : Model.ProductCategory == "Paddy" ? "success" : "warning")">
                        @Model.ProductCategory
                    </span>
                </dd>

                <dt class="col-sm-3">Type:</dt>
                <dd class="col-sm-9">@Model.ProductType</dd>

                <dt class="col-sm-3">Unit of Measure:</dt>
                <dd class="col-sm-9">@Model.UnitOfMeasure</dd>

                <dt class="col-sm-3">Selling Price:</dt>
                <dd class="col-sm-9">â‚¹ @Model.SellingPrice?.ToString("N2")</dd>

                <dt class="col-sm-3">Classification:</dt>
                <dd class="col-sm-9">
                    @if (Model.IsRawMaterial) { <span class="badge bg-info">Raw Material</span> }
                    @if (Model.IsFinishedProduct) { <span class="badge bg-success">Finished Product</span> }
                    @if (Model.IsByProduct) { <span class="badge bg-warning">By-Product</span> }
                </dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.Status == "Active" ? "success" : Model.Status == "Discontinued" ? "danger" : "secondary")">
                        @Model.Status
                    </span>
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-times"></i> Cancel
        </a>
    </form>
</div>
