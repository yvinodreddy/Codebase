@model List<RMMS.Models.FixedAsset>
@{
    ViewData["Title"] = "Fixed Assets Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var totalValue = Model?.Sum(x => x.PurchaseValue) ?? 0;
    var totalDepreciation = Model?.Sum(x => x.AccumulatedDepreciation) ?? 0;
    var netBookValue = Model?.Sum(x => x.NetBookValue) ?? 0;
}

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="ms-card ms-stat-card">
            <div class="ms-card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="ms-text-muted mb-2">Total Assets Value</h6>
                        <h3 class="ms-text-primary mb-0">₹@totalValue.ToString("N0")</h3>
                    </div>
                    <div class="ms-stat-icon" style="background: #E3F2FD;">
                        <i class="fas fa-coins" style="color: #0078D4;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="ms-card ms-stat-card">
            <div class="ms-card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="ms-text-muted mb-2">Accumulated Depreciation</h6>
                        <h3 class="ms-text-warning mb-0">₹@totalDepreciation.ToString("N0")</h3>
                    </div>
                    <div class="ms-stat-icon" style="background: #FFF4E5;">
                        <i class="fas fa-chart-line" style="color: #FF8C00;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="ms-card ms-stat-card">
            <div class="ms-card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="ms-text-muted mb-2">Net Book Value</h6>
                        <h3 class="ms-text-success mb-0">₹@netBookValue.ToString("N0")</h3>
                    </div>
                    <div class="ms-stat-icon" style="background: #E8F5E9;">
                        <i class="fas fa-balance-scale" style="color: #107C10;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="ms-card ms-stat-card">
            <div class="ms-card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="ms-text-muted mb-2">Total Assets</h6>
                        <h3 class="ms-text-primary mb-0">@(Model?.Count ?? 0)</h3>
                    </div>
                    <div class="ms-stat-icon" style="background: #E3F2FD;">
                        <i class="fas fa-building" style="color: #0078D4;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Data Table -->
<div class="ms-card">
    <div class="ms-card-header" style="display: flex; justify-content: space-between; align-items: center;">
        <h2 class="ms-card-title" style="margin: 0;">
            <i class="fas fa-building"></i> Fixed Assets Register
        </h2>
        <div style="display: flex; gap: 8px;">
            <a asp-action="Create" class="ms-btn ms-btn-primary">
                <i class="fas fa-plus"></i> Add Asset
            </a>
        </div>
    </div>

    <div class="ms-card-body">
        <div class="table-responsive">
            <table class="ms-datatable table table-striped table-hover" data-export="true" data-page-length="25">
                <thead>
                    <tr>
                        <th>Asset ID</th>
                        <th>Purchase Date</th>
                        <th>Asset Name</th>
                        <th>Supplier</th>
                        <th>Description</th>
                        <th>Purchase Value</th>
                        <th>Dep. Rate (%)</th>
                        <th>Accumulated Dep.</th>
                        <th>Net Book Value</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td><strong>@item.AssetId</strong></td>
                                <td data-order="@item.PurchaseDate.ToString("yyyyMMdd")">
                                    @item.PurchaseDate.ToString("dd-MMM-yyyy")
                                </td>
                                <td>@item.AssetName</td>
                                <td>@item.Supplier</td>
                                <td><small class="text-muted">@(item.Description ?? "-")</small></td>
                                <td class="text-end">₹@item.PurchaseValue.ToString("N0")</td>
                                <td class="text-end">@item.DepreciationRate%</td>
                                <td class="text-end text-warning">₹@item.AccumulatedDepreciation.ToString("N0")</td>
                                <td class="text-end"><strong>₹@item.NetBookValue.ToString("N0")</strong></td>
                                <td>
                                    <span class="ms-badge @(item.Status == "Active" ? "ms-badge-success" : "ms-badge-secondary")">
                                        @item.Status
                                    </span>
                                </td>
                                <td>
                                    <div class="ms-action-buttons">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="ms-action-btn btn-view" title="View Details"
                                           data-bs-toggle="tooltip">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="ms-action-btn btn-edit" title="Edit"
                                           data-bs-toggle="tooltip">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="ms-action-btn btn-delete" title="Delete"
                                           data-bs-toggle="tooltip"
                                           data-confirm="Are you sure you want to delete this fixed asset?">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // DataTables will be automatically initialized by site-enhanced.js
            // Export buttons (Excel, PDF, CSV, Print) are enabled via data-export="true"
        });
    </script>
}