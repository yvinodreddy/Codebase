@model RMMS.Models.FixedAsset
@{
    ViewData["Title"] = "Edit Fixed Asset";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header bg-warning text-white">
                    <h4><i class="fas fa-edit"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="CreatedDate" />
                        <input type="hidden" asp-for="IsActive" />
                        <input type="hidden" asp-for="AccumulatedDepreciation" />
                        <input type="hidden" asp-for="NetBookValue" />
                        <input type="hidden" asp-for="PresentValueApprox" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Asset Information -->
                        <fieldset class="border p-3 mb-3">
                            <legend class="w-auto px-2">Asset Information</legend>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="AssetId" class="form-label required"></label>
                                        <input asp-for="AssetId" class="form-control" placeholder="e.g., FA-001" />
                                        <span asp-validation-for="AssetId" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="AssetName" class="form-label required"></label>
                                        <input asp-for="AssetName" class="form-control" placeholder="e.g., Rice Mill Machine" />
                                        <span asp-validation-for="AssetName" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label asp-for="Description" class="form-label"></label>
                                        <textarea asp-for="Description" class="form-control" rows="2" placeholder="Asset description..."></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </fieldset>

                        <!-- Purchase Details -->
                        <fieldset class="border p-3 mb-3">
                            <legend class="w-auto px-2">Purchase Details</legend>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="PurchaseDate" class="form-label required"></label>
                                        <input asp-for="PurchaseDate" type="date" class="form-control" />
                                        <span asp-validation-for="PurchaseDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="Supplier" class="form-label required"></label>
                                        <input asp-for="Supplier" class="form-control" placeholder="Supplier name" />
                                        <span asp-validation-for="Supplier" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="PurchaseValue" class="form-label required"></label>
                                        <div class="input-group">
                                            <span class="input-group-text">₹</span>
                                            <input asp-for="PurchaseValue" type="number" step="0.01" class="form-control" id="purchaseValue" />
                                        </div>
                                        <span asp-validation-for="PurchaseValue" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="DepreciationRate" class="form-label"></label>
                                        <div class="input-group">
                                            <input asp-for="DepreciationRate" type="number" step="0.01" class="form-control" placeholder="e.g., 10" />
                                            <span class="input-group-text">%</span>
                                        </div>
                                        <span asp-validation-for="DepreciationRate" class="text-danger"></span>
                                        <small class="form-text text-muted">Annual depreciation rate</small>
                                    </div>
                                </div>
                            </div>
                        </fieldset>

                        <!-- Depreciation Information -->
                        <fieldset class="border p-3 mb-3">
                            <legend class="w-auto px-2">Depreciation Information</legend>
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label class="form-label">Accumulated Depreciation</label>
                                        <div class="input-group">
                                            <span class="input-group-text">₹</span>
                                            <input type="text" class="form-control" value="@Model.AccumulatedDepreciation.ToString("N2")" readonly />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label class="form-label">Net Book Value</label>
                                        <div class="input-group">
                                            <span class="input-group-text">₹</span>
                                            <input type="text" class="form-control" value="@Model.NetBookValue.ToString("N2")" readonly />
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="mb-3">
                                        <label class="form-label">Present Value (Approx)</label>
                                        <div class="input-group">
                                            <span class="input-group-text">₹</span>
                                            <input type="text" class="form-control" value="@Model.PresentValueApprox.ToString("N2")" readonly />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>

                        <!-- Status -->
                        <fieldset class="border p-3 mb-3">
                            <legend class="w-auto px-2">Status</legend>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        <label asp-for="Status" class="form-label"></label>
                                        <select asp-for="Status" class="form-select">
                                            <option value="Active">Active</option>
                                            <option value="Under Maintenance">Under Maintenance</option>
                                            <option value="Sold">Sold</option>
                                            <option value="Scrapped">Scrapped</option>
                                            <option value="Disposed">Disposed</option>
                                        </select>
                                        <span asp-validation-for="Status" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </fieldset>

                        <div class="mt-3">
                            <button type="submit" class="btn btn-warning btn-lg">
                                <i class="fas fa-save"></i> Update Asset
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info btn-lg">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            <a asp-action="Index" class="btn btn-secondary btn-lg">
                                <i class="fas fa-arrow-left"></i> Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <style>
        .required:after {
            content: " *";
            color: red;
        }
        fieldset {
            border: 1px solid #dee2e6 !important;
            background: #f8f9fa;
        }
        legend {
            font-size: 1rem;
            font-weight: bold;
            background: white;
            padding: 0 10px;
        }
    </style>
}
