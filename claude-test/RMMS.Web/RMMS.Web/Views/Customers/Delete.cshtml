@model RMMS.Models.Masters.Customer
@{
    ViewData["Title"] = "Delete Customer";
}

<div class="container-fluid">
    <h2 class="text-danger"><i class="fas fa-exclamation-triangle"></i> Delete Customer</h2>
    <hr />

    <div class="alert alert-danger">
        <h5>Are you sure you want to delete this customer?</h5>
        <p>This action will mark the customer as inactive. The data will be preserved for audit purposes.</p>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5>Customer Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Customer Code:</dt>
                <dd class="col-sm-9">@Model.CustomerCode</dd>

                <dt class="col-sm-3">Customer Name:</dt>
                <dd class="col-sm-9"><strong>@Model.CustomerName</strong></dd>

                <dt class="col-sm-3">Type:</dt>
                <dd class="col-sm-9">@Model.CustomerType</dd>

                <dt class="col-sm-3">GSTIN:</dt>
                <dd class="col-sm-9">@Model.GSTIN</dd>

                <dt class="col-sm-3">Credit Limit:</dt>
                <dd class="col-sm-9">â‚¹ @Model.CreditLimit?.ToString("N2")</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.Status == "Active" ? "success" : "secondary")">
                        @Model.Status
                    </span>
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-times"></i> Cancel
        </a>
    </form>
</div>
