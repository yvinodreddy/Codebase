@model RMMS.Models.Inventory.Warehouse
@{
    ViewData["Title"] = "Delete Warehouse";
}

<div class="container-fluid">
    <h2 class="text-danger"><i class="fas fa-trash"></i> Delete Warehouse</h2>
    <hr />

    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle"></i>
        <strong>Warning:</strong> Are you sure you want to delete this warehouse?
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5>Warehouse to be Deleted</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Warehouse Code</dt>
                        <dd class="col-sm-8">@Model.WarehouseCode</dd>

                        <dt class="col-sm-4">Warehouse Name</dt>
                        <dd class="col-sm-8">@Model.WarehouseName</dd>

                        <dt class="col-sm-4">Type</dt>
                        <dd class="col-sm-8">@Model.WarehouseType</dd>

                        <dt class="col-sm-4">Location</dt>
                        <dd class="col-sm-8">@Model.City, @Model.State</dd>

                        <dt class="col-sm-4">Total Capacity</dt>
                        <dd class="col-sm-8">@Model.TotalCapacity.ToString("N2") MT</dd>

                        <dt class="col-sm-4">Used Capacity</dt>
                        <dd class="col-sm-8">@Model.UsedCapacity.ToString("N2") MT</dd>

                        <dt class="col-sm-4">Available Capacity</dt>
                        <dd class="col-sm-8">@Model.AvailableCapacity.ToString("N2") MT</dd>

                        <dt class="col-sm-4">Status</dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-@(Model.Status == "Active" ? "success" : "secondary")">
                                @Model.Status
                            </span>
                        </dd>

                        @if (Model.Zones != null && Model.Zones.Any())
                        {
                            <dt class="col-sm-4">Storage Zones</dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-info">@Model.Zones.Count zones</span>
                            </dd>
                        }
                    </dl>
                </div>
            </div>

            @if (Model.Zones != null && Model.Zones.Any())
            {
                <div class="alert alert-danger mt-3">
                    <i class="fas fa-exclamation-circle"></i>
                    <strong>Important:</strong> This warehouse has @Model.Zones.Count storage zone(s). Deleting this warehouse will also delete all associated zones.
                </div>
            }

            @if (Model.UsedCapacity > 0)
            {
                <div class="alert alert-danger mt-3">
                    <i class="fas fa-exclamation-circle"></i>
                    <strong>Warning:</strong> This warehouse currently has @Model.UsedCapacity.ToString("N2") MT of used capacity. Please ensure all inventory is moved before deletion.
                </div>
            }
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5>Confirm Delete</h5>
                </div>
                <div class="card-body">
                    <p class="text-danger mb-3">
                        <i class="fas fa-info-circle"></i>
                        This action cannot be undone. The warehouse will be marked as inactive but not permanently deleted from the database.
                    </p>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <button type="submit" class="btn btn-danger w-100 mb-2">
                            <i class="fas fa-trash"></i> Yes, Delete Warehouse
                        </button>
                    </form>

                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info w-100 mb-2">
                        <i class="fas fa-eye"></i> View Details
                    </a>

                    <a asp-action="Index" class="btn btn-secondary w-100">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header">
                    <h5>Information</h5>
                </div>
                <div class="card-body">
                    <small class="text-muted">
                        <strong>Created:</strong><br />
                        @Model.CreatedDate.ToString("dd MMM yyyy")<br />
                        <strong>By:</strong> @Model.CreatedBy<br />

                        @if (Model.ModifiedDate.HasValue)
                        {
                            <br />
                            <strong>Last Modified:</strong><br />
                            @Model.ModifiedDate.Value.ToString("dd MMM yyyy")
                        }
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
