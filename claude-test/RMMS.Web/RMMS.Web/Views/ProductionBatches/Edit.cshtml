@model RMMS.Models.Production.ProductionBatch
@{
    ViewData["Title"] = "Edit Production Batch";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-edit"></i> Edit Production Batch</h2>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Details
        </a>
    </div>

    <form asp-action="Edit" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="BatchNumber" />
        <input type="hidden" asp-for="CreatedBy" />
        <input type="hidden" asp-for="CreatedDate" />
        <input type="hidden" asp-for="IsActive" />

        <div class="row">
            <!-- Left Column -->
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-info-circle"></i> Batch Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label class="form-label">Batch Number</label>
                                <input value="@Model.BatchNumber" class="form-control" readonly />
                            </div>
                            <div class="col-md-6">
                                <label asp-for="BatchDate" class="form-label"></label>
                                <input asp-for="BatchDate" type="date" class="form-control" />
                                <span asp-validation-for="BatchDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ProductionOrderId" class="form-label">Production Order</label>
                                <select asp-for="ProductionOrderId" class="form-select" asp-items="ViewBag.ProductionOrders">
                                    <option value="">-- Select Production Order (Optional) --</option>
                                </select>
                                <span asp-validation-for="ProductionOrderId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ShiftType" class="form-label"></label>
                                <select asp-for="ShiftType" class="form-select" asp-items="ViewBag.ShiftTypes">
                                </select>
                                <span asp-validation-for="ShiftType" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="OperatorId" class="form-label">Operator</label>
                                <select asp-for="OperatorId" class="form-select" asp-items="ViewBag.Operators">
                                    <option value="">-- Select Operator (Optional) --</option>
                                </select>
                                <span asp-validation-for="OperatorId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SupervisorId" class="form-label">Supervisor</label>
                                <select asp-for="SupervisorId" class="form-select" asp-items="ViewBag.Supervisors">
                                    <option value="">-- Select Supervisor (Optional) --</option>
                                </select>
                                <span asp-validation-for="SupervisorId" class="text-danger"></span>
                            </div>
                        </div>

                        @if (Model.Status == "In Progress")
                        {
                            <div class="row mb-3">
                                <div class="col-md-12">
                                    <label asp-for="CompletionPercent" class="form-label"></label>
                                    <input asp-for="CompletionPercent" type="number" step="0.01" min="0" max="100" class="form-control" />
                                    <span asp-validation-for="CompletionPercent" class="text-danger"></span>
                                </div>
                            </div>
                        }

                        <div class="mb-3">
                            <label asp-for="Remarks" class="form-label"></label>
                            <textarea asp-for="Remarks" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Remarks" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Issues" class="form-label"></label>
                            <textarea asp-for="Issues" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Issues" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header bg-warning text-white">
                        <h5 class="mb-0"><i class="fas fa-info-circle"></i> Current Status</h5>
                    </div>
                    <div class="card-body">
                        <input type="hidden" asp-for="Status" />
                        <div class="alert alert-info mb-3">
                            <strong>Status:</strong>
                            <span class="badge @Model.StatusBadgeClass float-end">
                                <i class="fas @Model.StatusIcon"></i> @Model.Status
                            </span>
                        </div>

                        @if (Model.StartTime.HasValue)
                        {
                            <p><strong>Started:</strong> @Model.StartTime.Value.ToString("dd-MMM-yyyy HH:mm")</p>
                        }
                        @if (Model.EndTime.HasValue)
                        {
                            <p><strong>Ended:</strong> @Model.EndTime.Value.ToString("dd-MMM-yyyy HH:mm")</p>
                        }
                        @if (Model.DurationHours.HasValue)
                        {
                            <p><strong>Duration:</strong> @Model.DurationHours.Value.ToString("F1") hours</p>
                        }
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save"></i> Save Changes
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
