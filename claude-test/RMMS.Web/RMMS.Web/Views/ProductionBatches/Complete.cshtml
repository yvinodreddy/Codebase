@model RMMS.Models.Production.ProductionBatch
@{
    ViewData["Title"] = "Complete Batch";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-check-circle"></i> Complete Production Batch</h2>
        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to Details
        </a>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0">Batch Completion</h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <i class="fas fa-info-circle"></i>
                        <strong>Note:</strong> Complete the batch by providing quality assessment. The batch will be marked as "Completed" and end time will be recorded automatically.
                    </div>

                    <form asp-action="Complete" asp-route-id="@Model.Id" method="post">
                        @Html.AntiForgeryToken()

                        <div class="mb-4">
                            <label class="form-label">Quality Score (1-10)</label>
                            <input type="number" name="qualityScore" class="form-control form-control-lg"
                                   min="1" max="10" step="0.1" required value="8.0" />
                            <small class="form-text text-muted">Rate the overall quality of this batch (1 = Poor, 10 = Excellent)</small>
                        </div>

                        <div class="mb-4">
                            <label class="form-label">Quality Remarks</label>
                            <textarea name="qualityRemarks" class="form-control" rows="4"
                                      placeholder="Enter quality assessment remarks, any observations, or issues noted during production..."></textarea>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-check"></i> Complete Batch
                            </button>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h6 class="mb-0">Batch Summary</h6>
                </div>
                <div class="card-body">
                    <p><strong>Batch Number:</strong> @Model.BatchNumber</p>
                    <p><strong>Production Order:</strong> @(Model.ProductionOrder?.OrderNumber ?? "N/A")</p>
                    <p><strong>Shift:</strong>
                        <span class="badge @Model.ShiftBadgeClass">@Model.ShiftType</span>
                    </p>
                    <p><strong>Operator:</strong> @(Model.Operator?.EmployeeName ?? "Unassigned")</p>
                    <p><strong>Supervisor:</strong> @(Model.Supervisor?.EmployeeName ?? "Unassigned")</p>

                    @if (Model.StartTime.HasValue)
                    {
                        <p><strong>Started:</strong> @Model.StartTime.Value.ToString("dd-MMM HH:mm")</p>
                        <p><strong>Duration:</strong>
                            @{
                                var duration = (DateTime.Now - Model.StartTime.Value).TotalHours;
                            }
                            @duration.ToString("F1") hours
                        </p>
                    }

                    <p class="mt-3"><strong>Current Progress:</strong></p>
                    <div class="progress" style="height: 25px;">
                        <div class="progress-bar bg-success" role="progressbar"
                             style="width: @Model.CompletionPercent%"
                             aria-valuenow="@Model.CompletionPercent"
                             aria-valuemin="0" aria-valuemax="100">
                            @Model.CompletionPercent%
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
