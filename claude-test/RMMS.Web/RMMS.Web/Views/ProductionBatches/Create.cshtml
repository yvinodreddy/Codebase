@model RMMS.Models.Production.ProductionBatch
@{
    ViewData["Title"] = "Create Production Batch";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-industry"></i> Create Production Batch</h2>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i> Back to List
        </a>
    </div>

    <form asp-action="Create" method="post">
        <div class="row">
            <!-- Left Column -->
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-info-circle"></i> Batch Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="BatchNumber" class="form-label"></label>
                                <input asp-for="BatchNumber" class="form-control" readonly />
                                <span asp-validation-for="BatchNumber" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="BatchDate" class="form-label"></label>
                                <input asp-for="BatchDate" type="date" class="form-control" />
                                <span asp-validation-for="BatchDate" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="ProductionOrderId" class="form-label">Production Order</label>
                                <select asp-for="ProductionOrderId" class="form-select" asp-items="ViewBag.ProductionOrders">
                                    <option value="">-- Select Production Order (Optional) --</option>
                                </select>
                                <span asp-validation-for="ProductionOrderId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ShiftType" class="form-label"></label>
                                <select asp-for="ShiftType" class="form-select" asp-items="ViewBag.ShiftTypes">
                                </select>
                                <span asp-validation-for="ShiftType" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="OperatorId" class="form-label">Operator</label>
                                <select asp-for="OperatorId" class="form-select" asp-items="ViewBag.Operators">
                                    <option value="">-- Select Operator (Optional) --</option>
                                </select>
                                <span asp-validation-for="OperatorId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="SupervisorId" class="form-label">Supervisor</label>
                                <select asp-for="SupervisorId" class="form-select" asp-items="ViewBag.Supervisors">
                                    <option value="">-- Select Supervisor (Optional) --</option>
                                </select>
                                <span asp-validation-for="SupervisorId" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Remarks" class="form-label"></label>
                            <textarea asp-for="Remarks" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Remarks" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Right Column -->
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-cog"></i> Status & Settings</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Status" class="form-label"></label>
                            <select asp-for="Status" class="form-select" disabled>
                                <option value="Planned">Planned</option>
                            </select>
                            <small class="form-text text-muted">New batches start as "Planned"</small>
                        </div>

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> <strong>Note:</strong>
                            <ul class="mb-0 mt-2">
                                <li>Batch will be created with "Planned" status</li>
                                <li>You can start the batch from the details page</li>
                                <li>Production order is optional</li>
                                <li>Personnel can be assigned later</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save"></i> Create Batch
                            </button>
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-times"></i> Cancel
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
