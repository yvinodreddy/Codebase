@model List<RMMS.Models.ExternalRiceSale>
@{
    ViewData["Title"] = "External Rice Sales";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="ms-card">
    <div class="ms-card-header" style="display: flex; justify-content: space-between; align-items: center;">
        <h2 class="ms-card-title" style="margin: 0;">
            <i class="fas fa-cash-register"></i> External Rice Sales Register
        </h2>
        <a asp-action="Create" class="ms-btn ms-btn-primary">
            <i class="fas fa-plus"></i> New Sale
        </a>
    </div>

    <div class="ms-card-body">
        <div class="table-responsive">
            <table class="ms-datatable table table-striped table-hover" data-export="true" data-page-length="25">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Date</th>
                        <th>Item Description</th>
                        <th>Sold To</th>
                        <th>Sold By</th>
                        <th>Quantity (Kg)</th>
                        <th>Rate/Kg</th>
                        <th>Total Amount</th>
                        <th>Payment Mode</th>
                        <th>Payment Status</th>
                        <th>Balance</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td data-order="@item.Date.ToString("yyyyMMdd")">
                                    @item.Date.ToString("dd-MMM-yyyy")
                                </td>
                                <td>@item.ItemDescription</td>
                                <td>@item.SoldTo</td>
                                <td>@item.SoldBy</td>
                                <td class="text-end">@item.Quantity.ToString("N2")</td>
                                <td class="text-end">₹@item.Rate.ToString("N2")</td>
                                <td class="text-end"><strong>₹@item.TotalAmount.ToString("N2")</strong></td>
                                <td>
                                    <span class="ms-badge ms-badge-secondary">@item.PaymentMode</span>
                                </td>
                                <td>
                                    @if (item.PaymentStatus == "Received")
                                    {
                                        <span class="ms-badge ms-badge-success">
                                            <i class="fas fa-check-circle"></i> Received
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="ms-badge ms-badge-warning">
                                            <i class="fas fa-clock"></i> Pending
                                        </span>
                                    }
                                </td>
                                <td class="text-end">
                                    @if (item.Balance > 0)
                                    {
                                        <span class="text-warning"><strong>₹@item.Balance.ToString("N2")</strong></span>
                                    }
                                    else
                                    {
                                        <span class="text-success"><i class="fas fa-check"></i> Cleared</span>
                                    }
                                </td>
                                <td>
                                    <div class="ms-action-buttons">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="ms-action-btn btn-view" title="View Details"
                                           data-bs-toggle="tooltip">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="ms-action-btn btn-edit" title="Edit"
                                           data-bs-toggle="tooltip">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="ms-action-btn btn-delete" title="Delete"
                                           data-bs-toggle="tooltip"
                                           data-confirm="Are you sure you want to delete this sale record?">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // DataTables will be automatically initialized by site-enhanced.js
        });
    </script>
}
