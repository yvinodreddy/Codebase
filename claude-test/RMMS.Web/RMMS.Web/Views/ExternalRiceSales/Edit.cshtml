@model RMMS.Models.ExternalRiceSale
@{
    ViewData["Title"] = "Edit External Rice Sale";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow">
        <div class="card-header bg-warning text-white">
            <h3><i class="fas fa-edit"></i> Edit External Rice Sale</h3>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="IsActive" />

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="Date" class="form-label"></label>
                            <input asp-for="Date" type="date" class="form-control" />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="SoldTo" class="form-label"></label>
                            <input asp-for="SoldTo" class="form-control" placeholder="PACs name / Local purchaser" />
                            <span asp-validation-for="SoldTo" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="SoldBy" class="form-label"></label>
                            <input asp-for="SoldBy" class="form-control" placeholder="Employee name" />
                            <span asp-validation-for="SoldBy" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="ItemDescription" class="form-label"></label>
                            <input asp-for="ItemDescription" class="form-control" />
                            <span asp-validation-for="ItemDescription" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Quantity" class="form-label"></label>
                            <input asp-for="Quantity" type="number" step="0.01" class="form-control" id="quantity" />
                            <span asp-validation-for="Quantity" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Rate" class="form-label"></label>
                            <input asp-for="Rate" type="number" step="0.01" class="form-control" id="rate" />
                            <span asp-validation-for="Rate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="TotalAmount" class="form-label"></label>
                            <input asp-for="TotalAmount" type="number" step="0.01" class="form-control" id="totalAmount" readonly />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="PaymentMode" class="form-label"></label>
                            <select asp-for="PaymentMode" class="form-select">
                                <option value="">-- Select Payment Mode --</option>
                                <option value="Cash">Cash</option>
                                <option value="Cheque">Cheque</option>
                                <option value="Bank Transfer">Bank Transfer</option>
                                <option value="UPI">UPI</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="PaymentStatus" class="form-label"></label>
                            <select asp-for="PaymentStatus" class="form-select">
                                <option value="">-- Select Status --</option>
                                <option value="Paid">Paid</option>
                                <option value="Pending">Pending</option>
                                <option value="Partial">Partial</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="mb-3">
                            <label asp-for="Balance" class="form-label"></label>
                            <input asp-for="Balance" type="number" step="0.01" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label asp-for="FullPaymentClearanceDate" class="form-label"></label>
                            <input asp-for="FullPaymentClearanceDate" type="date" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="mb-3">
                            <label asp-for="Remarks" class="form-label"></label>
                            <textarea asp-for="Remarks" class="form-control" rows="2"></textarea>
                        </div>
                    </div>
                </div>

                <div class="mt-3">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-save"></i> Update Sale
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary btn-lg">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(document).ready(function() {
            function calculateTotal() {
                var qty = parseFloat($('#quantity').val()) || 0;
                var rate = parseFloat($('#rate').val()) || 0;
                $('#totalAmount').val((qty * rate).toFixed(2));
            }

            // Calculate total on page load
            calculateTotal();

            // Calculate total on input change
            $('#quantity, #rate').on('input change', calculateTotal);
        });
    </script>
}
