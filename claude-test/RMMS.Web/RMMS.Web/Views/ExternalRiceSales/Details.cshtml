@model RMMS.Models.ExternalRiceSale
@{
    ViewData["Title"] = "External Rice Sale Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h3><i class="fas fa-file-invoice"></i> External Rice Sale Details</h3>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-12">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this record?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                    <button type="button" class="btn btn-primary" onclick="window.print();">
                        <i class="fas fa-print"></i> Print
                    </button>
                </div>
            </div>

            <!-- Sale Information -->
            <fieldset class="border p-3 mb-3">
                <legend class="w-auto px-2">Sale Information</legend>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Date):</label>
                            <p class="form-control-plaintext">@Model.Date.ToString("dd-MMM-yyyy")</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.SoldTo):</label>
                            <p class="form-control-plaintext">@Model.SoldTo</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.SoldBy):</label>
                            <p class="form-control-plaintext">@Model.SoldBy</p>
                        </div>
                    </div>
                </div>
            </fieldset>

            <!-- Product Details -->
            <fieldset class="border p-3 mb-3">
                <legend class="w-auto px-2">Product Details</legend>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.ItemDescription):</label>
                            <p class="form-control-plaintext">@Model.ItemDescription</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Quantity):</label>
                            <p class="form-control-plaintext">@Model.Quantity.ToString("N2") kg</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Rate):</label>
                            <p class="form-control-plaintext">₹ @Model.Rate.ToString("N2") / kg</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.TotalAmount):</label>
                            <p class="form-control-plaintext h5 text-success">₹ @Model.TotalAmount.ToString("N2")</p>
                        </div>
                    </div>
                </div>
            </fieldset>

            <!-- Payment Information -->
            <fieldset class="border p-3 mb-3">
                <legend class="w-auto px-2">Payment Information</legend>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.PaymentMode):</label>
                            <p class="form-control-plaintext">@(Model.PaymentMode ?? "N/A")</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.PaymentStatus):</label>
                            <p class="form-control-plaintext">
                                @if (Model.PaymentStatus == "Paid")
                                {
                                    <span class="badge bg-success">@Model.PaymentStatus</span>
                                }
                                else if (Model.PaymentStatus == "Pending")
                                {
                                    <span class="badge bg-warning">@Model.PaymentStatus</span>
                                }
                                else if (Model.PaymentStatus == "Partial")
                                {
                                    <span class="badge bg-info">@Model.PaymentStatus</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">@(Model.PaymentStatus ?? "N/A")</span>
                                }
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Balance):</label>
                            <p class="form-control-plaintext">₹ @Model.Balance.ToString("N2")</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.FullPaymentClearanceDate):</label>
                            <p class="form-control-plaintext">@(Model.FullPaymentClearanceDate?.ToString("dd-MMM-yyyy") ?? "N/A")</p>
                        </div>
                    </div>
                </div>
            </fieldset>

            <!-- Remarks -->
            <fieldset class="border p-3 mb-3">
                <legend class="w-auto px-2">Remarks</legend>
                <div class="row">
                    <div class="col-md-12">
                        <p class="form-control-plaintext">@(Model.Remarks ?? "N/A")</p>
                    </div>
                </div>
            </fieldset>

            <!-- Audit Information -->
            <fieldset class="border p-3 mb-3 bg-light">
                <legend class="w-auto px-2">Audit Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">Created Date:</label>
                            <p class="form-control-plaintext">@Model.CreatedDate.ToString("dd-MMM-yyyy HH:mm")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">Status:</label>
                            <p class="form-control-plaintext">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
            </fieldset>

            <div class="mt-4">
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
                    <i class="fas fa-edit"></i> Edit
                </a>
                <button type="button" class="btn btn-primary btn-lg" onclick="window.print();">
                    <i class="fas fa-print"></i> Print
                </button>
            </div>
        </div>
    </div>
</div>

<style>
    fieldset {
        border: 1px solid #dee2e6 !important;
        background: #f8f9fa;
    }
    legend {
        font-size: 1rem;
        font-weight: bold;
        background: white;
        padding: 0 10px;
    }
    .font-weight-bold {
        font-weight: 600;
        color: #495057;
    }

    @@media print {
        .btn, .card-header h3 i {
            display: none;
        }
    }
</style>
