@model List<RMMS.Models.Production.ProductionBatch>
@{
    ViewData["Title"] = "Low Yield Batches";
    var fromDate = ViewBag.FromDate as DateTime?;
    var toDate = ViewBag.ToDate as DateTime?;
    var threshold = ViewBag.Threshold as decimal? ?? 60;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-exclamation-triangle text-warning"></i> Low Yield Batches</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Threshold (%)</label>
                    <input type="number" name="threshold" class="form-control" value="@threshold" step="0.1" min="0" max="100" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">From Date</label>
                    <input type="date" name="fromDate" class="form-control" value="@fromDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">To Date</label>
                    <input type="date" name="toDate" class="form-control" value="@toDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter"></i> Apply Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <!-- Alert -->
        <div class="alert alert-warning">
            <h5><i class="fas fa-exclamation-triangle"></i> Action Required</h5>
            <p class="mb-0">
                Found <strong>@Model.Count</strong> batches with yield below <strong>@threshold%</strong>.
                These batches require investigation to identify root causes and implement corrective actions.
            </p>
        </div>

        <!-- Statistics -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card border-danger">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Lowest Yield</h6>
                        <h3 class="text-danger">@Model.Min(b => b.YieldRecord!.TotalYieldPercent).ToString("F2")%</h3>
                        <small class="text-muted">Needs immediate attention</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-warning">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Average of Low Yields</h6>
                        <h3 class="text-warning">@Model.Average(b => b.YieldRecord!.TotalYieldPercent).ToString("F2")%</h3>
                        <small class="text-muted">Below threshold: @threshold%</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-info">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Total Impact</h6>
                        <h3 class="text-info">@Model.Sum(b => b.TotalInputQuantity).ToString("N0") kg</h3>
                        <small class="text-muted">Paddy processed with low yield</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Low Yield Batches Table -->
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-table"></i> Batches Below Threshold (@threshold%)</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Batch #</th>
                                <th>Date</th>
                                <th>Shift</th>
                                <th>Paddy Variety</th>
                                <th>Input (kg)</th>
                                <th>Output (kg)</th>
                                <th>Yield %</th>
                                <th>Gap from Threshold</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var batch in Model)
                            {
                                var gap = threshold - (batch.YieldRecord?.TotalYieldPercent ?? 0);
                                <tr class="@(gap > 5 ? "table-danger" : "table-warning")">
                                    <td><strong>@batch.BatchNumber</strong></td>
                                    <td>@batch.BatchDate.ToString("dd-MMM-yyyy")</td>
                                    <td>
                                        <span class="badge @(batch.ShiftType == "Morning" ? "bg-warning" : batch.ShiftType == "Evening" ? "bg-info" : "bg-dark")">
                                            @batch.ShiftType
                                        </span>
                                    </td>
                                    <td>@(batch.YieldRecord?.PaddyVariety ?? "N/A")</td>
                                    <td>@batch.TotalInputQuantity.ToString("N0")</td>
                                    <td>@batch.TotalOutputQuantity.ToString("N0")</td>
                                    <td>
                                        <span class="badge bg-danger">
                                            @(batch.YieldRecord?.TotalYieldPercent.ToString("F2") ?? "0")%
                                        </span>
                                    </td>
                                    <td class="text-danger">
                                        <strong>-@gap.ToString("F2")%</strong>
                                    </td>
                                    <td>
                                        <span class="badge bg-secondary">@batch.Status</span>
                                    </td>
                                    <td>
                                        <a asp-controller="ProductionBatches" asp-action="Details" asp-route-id="@batch.Id"
                                           class="btn btn-sm btn-outline-primary">
                                            <i class="fas fa-eye"></i> View
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Recommendations -->
        <div class="card mt-4">
            <div class="card-header bg-warning text-dark">
                <h5 class="mb-0"><i class="fas fa-lightbulb"></i> Recommended Actions</h5>
            </div>
            <div class="card-body">
                <ul>
                    <li><strong>Quality Check:</strong> Review paddy quality and moisture content for these batches</li>
                    <li><strong>Machine Maintenance:</strong> Check if specific machines are consistently producing low yields</li>
                    <li><strong>Operator Training:</strong> Identify if certain operators need additional training</li>
                    <li><strong>Process Review:</strong> Analyze processing parameters (temperature, speed, etc.)</li>
                    <li><strong>Paddy Variety:</strong> Check if specific varieties consistently underperform</li>
                </ul>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-success">
            <h5><i class="fas fa-check-circle"></i> Good News!</h5>
            <p class="mb-0">
                No batches found with yield below <strong>@threshold%</strong> in the selected period.
                All production batches are meeting or exceeding the yield threshold.
            </p>
        </div>
    }
</div>
