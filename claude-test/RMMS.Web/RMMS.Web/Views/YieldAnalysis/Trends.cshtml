@model List<RMMS.Services.Interfaces.Production.YieldTrendData>
@{
    ViewData["Title"] = "Yield Trends";
    var fromDate = ViewBag.FromDate as DateTime?;
    var toDate = ViewBag.ToDate as DateTime?;
    var groupBy = ViewBag.GroupBy as string;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-chart-area"></i> Yield Trends</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">From Date</label>
                    <input type="date" name="fromDate" class="form-control" value="@fromDate?.ToString("yyyy-MM-dd")" required />
                </div>
                <div class="col-md-3">
                    <label class="form-label">To Date</label>
                    <input type="date" name="toDate" class="form-control" value="@toDate?.ToString("yyyy-MM-dd")" required />
                </div>
                <div class="col-md-3">
                    <label class="form-label">Group By</label>
                    <select name="groupBy" class="form-select">
                        <option value="Daily" selected="@(groupBy == "Daily")">Daily</option>
                        <option value="Weekly" selected="@(groupBy == "Weekly")">Weekly</option>
                        <option value="Monthly" selected="@(groupBy == "Monthly")">Monthly</option>
                    </select>
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter"></i> Apply Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <!-- Yield Trend Chart -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-chart-line"></i> Yield Trend Over Time</h5>
            </div>
            <div class="card-body">
                <canvas id="yieldTrendChart" height="80"></canvas>
            </div>
        </div>

        <!-- Component Breakdown Chart -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-chart-bar"></i> Yield Component Breakdown</h5>
            </div>
            <div class="card-body">
                <canvas id="componentChart" height="80"></canvas>
            </div>
        </div>

        <!-- Trend Data Table -->
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-table"></i> Detailed Trend Data</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="ms-datatable table table-striped table-hover" data-export="true" data-page-length="16">
                        <thead>
                            <tr>
                                <th>Period</th>
                                <th>Batches</th>
                                <th>Avg Yield %</th>
                                <th>Head Rice %</th>
                                <th>Broken Rice %</th>
                                <th>Bran %</th>
                                <th>Husk %</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var trend in Model)
                            {
                                <tr>
                                    <td><strong>@trend.Period</strong></td>
                                    <td>@trend.BatchCount</td>
                                    <td>
                                        <span class="badge @(trend.AverageYield >= 65 ? "bg-success" : trend.AverageYield >= 55 ? "bg-warning" : "bg-danger")">
                                            @trend.AverageYield.ToString("F2")%
                                        </span>
                                    </td>
                                    <td>@trend.HeadRicePercent.ToString("F2")%</td>
                                    <td>@trend.BrokenRicePercent.ToString("F2")%</td>
                                    <td>@trend.BranPercent.ToString("F2")%</td>
                                    <td>@trend.HuskPercent.ToString("F2")%</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-secondary">
                                <td><strong>Average</strong></td>
                                <td><strong>@Model.Sum(t => t.BatchCount)</strong></td>
                                <td><strong>@Model.Average(t => t.AverageYield).ToString("F2")%</strong></td>
                                <td><strong>@Model.Average(t => t.HeadRicePercent).ToString("F2")%</strong></td>
                                <td><strong>@Model.Average(t => t.BrokenRicePercent).ToString("F2")%</strong></td>
                                <td><strong>@Model.Average(t => t.BranPercent).ToString("F2")%</strong></td>
                                <td><strong>@Model.Average(t => t.HuskPercent).ToString("F2")%</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="fas fa-info-circle"></i> No trend data available for the selected period.
        </div>
    }
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Yield Trend Chart
        var trendCtx = document.getElementById('yieldTrendChart').getContext('2d');
        var yieldTrendChart = new Chart(trendCtx, {
            type: 'line',
            data: {
                labels: [@Html.Raw(Model != null ? string.Join(",", Model.Select(t => $"'{t.Period}'")) : "")],
                datasets: [{
                    label: 'Average Yield %',
                    data: [@string.Join(",", Model?.Select(t => t.AverageYield) ?? Array.Empty<decimal>())],
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    borderWidth: 2,
                    tension: 0.1,
                    fill: true
                }, {
                    label: 'Standard Yield (65%)',
                    data: Array(@(Model?.Count ?? 0)).fill(65),
                    borderColor: 'rgb(255, 99, 132)',
                    borderWidth: 2,
                    borderDash: [5, 5],
                    fill: false,
                    pointRadius: 0
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Yield Percentage Trend'
                    },
                    legend: {
                        display: true,
                        position: 'top'
                    }
                },
                scales: {
                    y: {
                        beginAtZero: false,
                        min: 50,
                        max: 75,
                        title: {
                            display: true,
                            text: 'Yield %'
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Period'
                        }
                    }
                }
            }
        });

        // Component Breakdown Chart
        var componentCtx = document.getElementById('componentChart').getContext('2d');
        var componentChart = new Chart(componentCtx, {
            type: 'bar',
            data: {
                labels: [@Html.Raw(Model != null ? string.Join(",", Model.Select(t => $"'{t.Period}'")) : "")],
                datasets: [{
                    label: 'Head Rice %',
                    data: [@string.Join(",", Model?.Select(t => t.HeadRicePercent) ?? Array.Empty<decimal>())],
                    backgroundColor: 'rgba(54, 162, 235, 0.8)'
                }, {
                    label: 'Broken Rice %',
                    data: [@string.Join(",", Model?.Select(t => t.BrokenRicePercent) ?? Array.Empty<decimal>())],
                    backgroundColor: 'rgba(255, 206, 86, 0.8)'
                }, {
                    label: 'Bran %',
                    data: [@string.Join(",", Model?.Select(t => t.BranPercent) ?? Array.Empty<decimal>())],
                    backgroundColor: 'rgba(255, 159, 64, 0.8)'
                }, {
                    label: 'Husk %',
                    data: [@string.Join(",", Model?.Select(t => t.HuskPercent) ?? Array.Empty<decimal>())],
                    backgroundColor: 'rgba(153, 102, 255, 0.8)'
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: true,
                plugins: {
                    title: {
                        display: true,
                        text: 'Yield Component Distribution'
                    },
                    legend: {
                        display: true,
                        position: 'top'
                    }
                },
                scales: {
                    y: {
                        stacked: true,
                        beginAtZero: true,
                        max: 100,
                        title: {
                            display: true,
                            text: 'Percentage %'
                        }
                    },
                    x: {
                        stacked: true,
                        title: {
                            display: true,
                            text: 'Period'
                        }
                    }
                }
            }
        });
    </script>
}
