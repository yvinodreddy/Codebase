@model List<RMMS.Models.Production.ProductionBatch>
@{
    ViewData["Title"] = "High Yield Batches";
    var fromDate = ViewBag.FromDate as DateTime?;
    var toDate = ViewBag.ToDate as DateTime?;
    var threshold = ViewBag.Threshold as decimal? ?? 70;
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-trophy text-success"></i> High Yield Batches</h2>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
    </div>

    <!-- Filters -->
    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <label class="form-label">Threshold (%)</label>
                    <input type="number" name="threshold" class="form-control" value="@threshold" step="0.1" min="0" max="100" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">From Date</label>
                    <input type="date" name="fromDate" class="form-control" value="@fromDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-3">
                    <label class="form-label">To Date</label>
                    <input type="date" name="toDate" class="form-control" value="@toDate?.ToString("yyyy-MM-dd")" />
                </div>
                <div class="col-md-3 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-filter"></i> Apply Filter
                    </button>
                </div>
            </form>
        </div>
    </div>

    @if (Model != null && Model.Any())
    {
        <!-- Success Alert -->
        <div class="alert alert-success">
            <h5><i class="fas fa-star"></i> Excellent Performance!</h5>
            <p class="mb-0">
                Found <strong>@Model.Count</strong> batches with yield above <strong>@threshold%</strong>.
                These represent best practices that can be replicated across other batches.
            </p>
        </div>

        <!-- Statistics -->
        <div class="row mb-4">
            <div class="col-md-4">
                <div class="card border-success">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Highest Yield</h6>
                        <h3 class="text-success">@Model.Max(b => b.YieldRecord!.TotalYieldPercent).ToString("F2")%</h3>
                        <small class="text-muted">Best performance</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-primary">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Average of High Yields</h6>
                        <h3 class="text-primary">@Model.Average(b => b.YieldRecord!.TotalYieldPercent).ToString("F2")%</h3>
                        <small class="text-muted">Above threshold: @threshold%</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-info">
                    <div class="card-body text-center">
                        <h6 class="text-muted">Total Production</h6>
                        <h3 class="text-info">@Model.Sum(b => b.TotalOutputQuantity).ToString("N0") kg</h3>
                        <small class="text-muted">Rice produced with high yield</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- High Yield Batches Table -->
        <div class="card">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-table"></i> Top Performing Batches (â‰¥@threshold%)</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>Rank</th>
                                <th>Batch #</th>
                                <th>Date</th>
                                <th>Shift</th>
                                <th>Operator</th>
                                <th>Paddy Variety</th>
                                <th>Input (kg)</th>
                                <th>Output (kg)</th>
                                <th>Yield %</th>
                                <th>Quality Score</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int rank = 1;
                                foreach (var batch in Model)
                                {
                                    <tr class="table-success">
                                        <td>
                                            @if (rank <= 3)
                                            {
                                                <span class="badge bg-warning"><i class="fas fa-medal"></i> @rank</span>
                                            }
                                            else
                                            {
                                                <strong>@rank</strong>
                                            }
                                        </td>
                                        <td><strong>@batch.BatchNumber</strong></td>
                                        <td>@batch.BatchDate.ToString("dd-MMM-yyyy")</td>
                                        <td>
                                            <span class="badge @(batch.ShiftType == "Morning" ? "bg-warning" : batch.ShiftType == "Evening" ? "bg-info" : "bg-dark")">
                                                @batch.ShiftType
                                            </span>
                                        </td>
                                        <td><small>@(batch.OperatorId.HasValue ? $"Operator {batch.OperatorId}" : "N/A")</small></td>
                                        <td>@(batch.YieldRecord?.PaddyVariety ?? "N/A")</td>
                                        <td>@batch.TotalInputQuantity.ToString("N0")</td>
                                        <td>@batch.TotalOutputQuantity.ToString("N0")</td>
                                        <td>
                                            <span class="badge bg-success">
                                                <i class="fas fa-star"></i> @(batch.YieldRecord?.TotalYieldPercent.ToString("F2") ?? "0")%
                                            </span>
                                        </td>
                                        <td>
                                            @if (batch.QualityScore.HasValue)
                                            {
                                                <span class="badge @(batch.QualityScore >= 8 ? "bg-success" : "bg-primary")">
                                                    @batch.QualityScore.Value.ToString("F1")/10
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">N/A</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="ProductionBatches" asp-action="Details" asp-route-id="@batch.Id"
                                               class="btn btn-sm btn-outline-success">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                        </td>
                                    </tr>
                                    rank++;
                                }
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <!-- Best Practices -->
        <div class="card mt-4">
            <div class="card-header bg-success text-white">
                <h5 class="mb-0"><i class="fas fa-lightbulb"></i> Key Success Factors</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6>Common Characteristics:</h6>
                        <ul>
                            <li>Quality paddy with optimal moisture content</li>
                            <li>Proper machine operation and maintenance</li>
                            <li>Experienced and trained operators</li>
                            <li>Correct processing parameters</li>
                        </ul>
                    </div>
                    <div class="col-md-6">
                        <h6>Recommended Actions:</h6>
                        <ul>
                            <li>Document successful batch parameters</li>
                            <li>Use as training examples for operators</li>
                            <li>Replicate conditions across other batches</li>
                            <li>Recognize and reward high-performing teams</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <h5><i class="fas fa-info-circle"></i> No High Performers Yet</h5>
            <p class="mb-0">
                No batches found with yield above <strong>@threshold%</strong> in the selected period.
                Consider lowering the threshold or reviewing operational practices to achieve higher yields.
            </p>
        </div>
    }
</div>
