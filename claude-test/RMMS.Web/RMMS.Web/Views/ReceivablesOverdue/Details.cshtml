@model RMMS.Models.ReceivableOverdue
@{
    ViewData["Title"] = "Receivable Overdue Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <div class="row">
                <div class="col-md-6">
                    <h3><i class="fas fa-info-circle"></i> Receivable Overdue Details</h3>
                </div>
                <div class="col-md-6 text-end">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <!-- Invoice Information -->
            <h5 class="text-primary"><i class="fas fa-file-invoice"></i> Invoice Information</h5>
            <div class="row">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-3">Invoice Number</dt>
                        <dd class="col-sm-9">@Model.InvoiceNumber</dd>

                        <dt class="col-sm-3">Invoice Date</dt>
                        <dd class="col-sm-9">@Model.InvoiceDate.ToString("dd-MMM-yyyy")</dd>

                        <dt class="col-sm-3">Due Date</dt>
                        <dd class="col-sm-9">
                            @Model.DueDate.ToString("dd-MMM-yyyy")
                            @if (Model.DaysOverdue > 0)
                            {
                                <span class="badge bg-danger ms-2">Overdue by @Model.DaysOverdue days</span>
                            }
                            else
                            {
                                <span class="badge bg-success ms-2">On time</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Customer Name</dt>
                        <dd class="col-sm-9"><strong>@Model.CustomerName</strong></dd>

                        <dt class="col-sm-3">Item Supplied</dt>
                        <dd class="col-sm-9">@Model.ItemSupplied</dd>
                    </dl>
                </div>
            </div>

            <hr />

            <!-- Financial Details -->
            <h5 class="text-success"><i class="fas fa-calculator"></i> Financial Details</h5>
            <div class="row">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-3">Invoice Amount</dt>
                        <dd class="col-sm-9">₹ @Model.InvoiceAmount.ToString("N2")</dd>

                        <dt class="col-sm-3">Amount Received</dt>
                        <dd class="col-sm-9">₹ @Model.AmountReceived.ToString("N2")</dd>

                        <dt class="col-sm-3">Balance Due</dt>
                        <dd class="col-sm-9">
                            <strong class="text-danger fs-5">₹ @Model.BalanceDue.ToString("N2")</strong>
                            @if (Model.BalanceDue == 0)
                            {
                                <span class="badge bg-success ms-2">Fully Paid</span>
                            }
                            else if (Model.DaysOverdue > 60)
                            {
                                <span class="badge bg-danger ms-2">Critical</span>
                            }
                            else if (Model.DaysOverdue > 30)
                            {
                                <span class="badge bg-warning ms-2">Overdue</span>
                            }
                            else
                            {
                                <span class="badge bg-info ms-2">Pending</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <hr />

            <!-- Additional Information -->
            <h5 class="text-warning"><i class="fas fa-sticky-note"></i> Additional Information</h5>
            <div class="row">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-3">Days Overdue</dt>
                        <dd class="col-sm-9">
                            @if (Model.DaysOverdue > 0)
                            {
                                <span class="text-danger fw-bold">@Model.DaysOverdue days</span>
                            }
                            else
                            {
                                <span class="text-success">0 days (On time)</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Remarks</dt>
                        <dd class="col-sm-9">@(Model.Remarks ?? "N/A")</dd>
                    </dl>
                </div>
            </div>

            <hr />

            <!-- Audit Information -->
            <h5 class="text-muted"><i class="fas fa-history"></i> Audit Information</h5>
            <div class="row">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-3">Created Date</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("dd-MMM-yyyy hh:mm tt")</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <hr />

            <!-- Action Buttons -->
            <div class="row mt-3">
                <div class="col-md-12">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this receivable record?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                    @if (Model.BalanceDue > 0)
                    {
                        <a asp-action="RecordPayment" asp-route-id="@Model.Id" class="btn btn-success">
                            <i class="fas fa-check"></i> Record Payment
                        </a>
                        <a asp-action="SendReminder" asp-route-id="@Model.Id" class="btn btn-info">
                            <i class="fas fa-envelope"></i> Send Reminder
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    dt {
        font-weight: 600;
        color: #495057;
    }
    dd {
        margin-bottom: 1rem;
    }
    hr {
        margin: 1.5rem 0;
    }
</style>
