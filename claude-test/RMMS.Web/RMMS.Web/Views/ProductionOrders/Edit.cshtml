@model RMMS.Models.Production.ProductionOrder

@{
    ViewData["Title"] = "Edit Production Order";
}

<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <h2><i class="fas fa-edit"></i> Edit Production Order</h2>
            <hr />

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedBy" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="IsActive" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Order Information -->
                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-info-circle"></i> Order Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="OrderNumber" class="form-label"></label>
                                    <input asp-for="OrderNumber" class="form-control" readonly />
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ScheduledDate" class="form-label"></label>
                                    <input asp-for="ScheduledDate" type="date" class="form-control" required />
                                    <span asp-validation-for="ScheduledDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Priority" class="form-label"></label>
                                    <select asp-for="Priority" class="form-select">
                                        <option value="Low">Low</option>
                                        <option value="Normal">Normal</option>
                                        <option value="High">High</option>
                                        <option value="Urgent">Urgent</option>
                                    </select>
                                    <span asp-validation-for="Priority" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Status" class="form-label"></label>
                                    <select asp-for="Status" class="form-select">
                                        <option value="Draft">Draft</option>
                                        <option value="Scheduled">Scheduled</option>
                                    </select>
                                    <span asp-validation-for="Status" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Paddy Information -->
                <div class="card mb-3">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-seedling"></i> Paddy Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PaddyVariety" class="form-label"></label>
                                    <input asp-for="PaddyVariety" class="form-control" />
                                    <span asp-validation-for="PaddyVariety" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PaddyQuantity" class="form-label"></label>
                                    <input asp-for="PaddyQuantity" type="number" step="0.001" class="form-control" required />
                                    <span asp-validation-for="PaddyQuantity" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Target Information -->
                <div class="card mb-3">
                    <div class="card-header bg-warning">
                        <h5 class="mb-0"><i class="fas fa-bullseye"></i> Target Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TargetRiceGrade" class="form-label"></label>
                                    <input asp-for="TargetRiceGrade" class="form-control" />
                                    <span asp-validation-for="TargetRiceGrade" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TargetQuantity" class="form-label"></label>
                                    <input asp-for="TargetQuantity" type="number" step="0.001" class="form-control" />
                                    <span asp-validation-for="TargetQuantity" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ExpectedYieldPercent" class="form-label"></label>
                                    <input asp-for="ExpectedYieldPercent" type="number" step="0.01" class="form-control" />
                                    <span asp-validation-for="ExpectedYieldPercent" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Planning -->
                <div class="card mb-3">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-tasks"></i> Planning</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="AssignedMachineId" class="form-label">Assigned Machine</label>
                                    <select asp-for="AssignedMachineId" class="form-select" asp-items="ViewBag.Machines">
                                        <option value="">-- Select Machine --</option>
                                    </select>
                                    <span asp-validation-for="AssignedMachineId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CustomerOrderNumber" class="form-label"></label>
                                    <input asp-for="CustomerOrderNumber" class="form-control" />
                                    <span asp-validation-for="CustomerOrderNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Information -->
                <div class="card mb-3">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0"><i class="fas fa-clipboard"></i> Additional Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="SpecialInstructions" class="form-label"></label>
                            <textarea asp-for="SpecialInstructions" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="SpecialInstructions" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Remarks" class="form-label"></label>
                            <textarea asp-for="Remarks" class="form-control" rows="2"></textarea>
                            <span asp-validation-for="Remarks" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-between mb-5">
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Save Changes
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
