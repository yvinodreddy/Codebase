@model RMMS.Models.Production.ProductionOrder

@{
    ViewData["Title"] = "Create Production Order";
}

<div class="container">
    <div class="row">
        <div class="col-md-10 offset-md-1">
            <h2><i class="fas fa-plus-circle"></i> Create New Production Order</h2>
            <hr />

            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <!-- Section 1: Order Information -->
                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="fas fa-info-circle"></i> Order Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="OrderNumber" class="form-label"></label>
                                    <input asp-for="OrderNumber" class="form-control" value="@ViewBag.OrderNumber" readonly />
                                    <small class="form-text text-muted">Auto-generated order number</small>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="OrderDate" class="form-label"></label>
                                    <input asp-for="OrderDate" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                                    <span asp-validation-for="OrderDate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ScheduledDate" class="form-label"></label>
                                    <input asp-for="ScheduledDate" type="date" class="form-control" required />
                                    <span asp-validation-for="ScheduledDate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Priority" class="form-label"></label>
                                    <select asp-for="Priority" class="form-select">
                                        <option value="Low">Low</option>
                                        <option value="Normal" selected>Normal</option>
                                        <option value="High">High</option>
                                        <option value="Urgent">Urgent</option>
                                    </select>
                                    <span asp-validation-for="Priority" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Section 2: Paddy Information -->
                <div class="card mb-3">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0"><i class="fas fa-seedling"></i> Paddy Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PaddyVariety" class="form-label"></label>
                                    <input asp-for="PaddyVariety" class="form-control" placeholder="e.g., Sona Masuri, IR64" />
                                    <span asp-validation-for="PaddyVariety" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="PaddyQuantity" class="form-label"></label>
                                    <input asp-for="PaddyQuantity" type="number" step="0.001" class="form-control" required />
                                    <span asp-validation-for="PaddyQuantity" class="text-danger"></span>
                                    <small class="form-text text-muted">In Quintals</small>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="SourceType" class="form-label"></label>
                                    <select asp-for="SourceType" class="form-select">
                                        <option value="Inventory">Inventory</option>
                                        <option value="Procurement">Procurement</option>
                                    </select>
                                    <span asp-validation-for="SourceType" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="SourceReferenceNumber" class="form-label"></label>
                                    <input asp-for="SourceReferenceNumber" class="form-control" placeholder="Reference number" />
                                    <span asp-validation-for="SourceReferenceNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Section 3: Target Rice Information -->
                <div class="card mb-3">
                    <div class="card-header bg-warning">
                        <h5 class="mb-0"><i class="fas fa-bullseye"></i> Target Rice Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TargetRiceGrade" class="form-label"></label>
                                    <input asp-for="TargetRiceGrade" class="form-control" placeholder="e.g., Premium, Standard" />
                                    <span asp-validation-for="TargetRiceGrade" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="TargetQuantity" class="form-label"></label>
                                    <input asp-for="TargetQuantity" type="number" step="0.001" class="form-control" />
                                    <span asp-validation-for="TargetQuantity" class="text-danger"></span>
                                    <small class="form-text text-muted">Expected output in Quintals</small>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="ExpectedYieldPercent" class="form-label"></label>
                                    <input asp-for="ExpectedYieldPercent" type="number" step="0.01" class="form-control" value="65.00" />
                                    <span asp-validation-for="ExpectedYieldPercent" class="text-danger"></span>
                                    <small class="form-text text-muted">Expected yield percentage (typically 60-70%)</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Section 4: Planning & Assignment -->
                <div class="card mb-3">
                    <div class="card-header bg-info text-white">
                        <h5 class="mb-0"><i class="fas fa-tasks"></i> Planning & Assignment</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="AssignedMachineId" class="form-label">Assigned Machine</label>
                                    <select asp-for="AssignedMachineId" class="form-select" asp-items="ViewBag.Machines">
                                        <option value="">-- Select Machine --</option>
                                    </select>
                                    <span asp-validation-for="AssignedMachineId" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="CustomerOrderNumber" class="form-label"></label>
                                    <input asp-for="CustomerOrderNumber" class="form-control" placeholder="Optional customer order reference" />
                                    <span asp-validation-for="CustomerOrderNumber" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Section 5: Additional Information -->
                <div class="card mb-3">
                    <div class="card-header bg-secondary text-white">
                        <h5 class="mb-0"><i class="fas fa-clipboard"></i> Additional Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="SpecialInstructions" class="form-label"></label>
                            <textarea asp-for="SpecialInstructions" class="form-control" rows="2" placeholder="Any special instructions for production..."></textarea>
                            <span asp-validation-for="SpecialInstructions" class="text-danger"></span>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Remarks" class="form-label"></label>
                            <textarea asp-for="Remarks" class="form-control" rows="2" placeholder="Additional remarks..."></textarea>
                            <span asp-validation-for="Remarks" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-between mb-5">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Create Production Order
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
