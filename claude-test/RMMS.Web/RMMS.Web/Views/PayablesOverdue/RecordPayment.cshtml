@model RMMS.Models.PayableOverdue
@{
    ViewData["Title"] = "Record Payment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow">
        <div class="card-header bg-success text-white">
            <div class="row">
                <div class="col-md-6">
                    <h3><i class="fas fa-money-bill"></i> Record Payment</h3>
                </div>
                <div class="col-md-6 text-end">
                    <a asp-action="Index" class="btn btn-light">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <!-- Payable Summary -->
            <div class="alert alert-info">
                <h5 class="alert-heading"><i class="fas fa-info-circle"></i> Payable Summary</h5>
                <div class="row">
                    <div class="col-md-6">
                        <strong>Supplier:</strong> @Model.SupplierName<br />
                        <strong>Invoice Number:</strong> @Model.InvoiceNumber<br />
                        <strong>Purchase Date:</strong> @Model.PurchaseDate.ToString("dd-MMM-yyyy")<br />
                        <strong>Due Date:</strong> @Model.DueDate.ToString("dd-MMM-yyyy")
                    </div>
                    <div class="col-md-6">
                        <strong>Invoice Amount:</strong> ₹ @Model.InvoiceAmount.ToString("N2")<br />
                        <strong>Already Paid:</strong> ₹ @Model.AmountPaid.ToString("N2")<br />
                        <strong class="text-danger fs-5">Balance Payable:</strong> <span class="text-danger fs-5">₹ @Model.BalancePayable.ToString("N2")</span><br />
                        @if (Model.DaysOverdue > 0)
                        {
                            <strong class="text-warning">Days Overdue:</strong> <span class="badge bg-warning text-dark">@Model.DaysOverdue days</span>
                        }
                    </div>
                </div>
            </div>

            <hr />

            <!-- Payment Form -->
            <form asp-action="RecordPayment" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="row">
                    <div class="col-md-6 offset-md-3">
                        <div class="mb-3">
                            <label for="paymentAmount" class="form-label">
                                <i class="fas fa-rupee-sign"></i> Payment Amount <span class="text-danger">*</span>
                            </label>
                            <div class="input-group input-group-lg">
                                <span class="input-group-text">₹</span>
                                <input type="number"
                                       class="form-control"
                                       id="paymentAmount"
                                       name="paymentAmount"
                                       step="0.01"
                                       min="0.01"
                                       max="@Model.BalancePayable"
                                       required
                                       placeholder="Enter payment amount">
                            </div>
                            <small class="form-text text-muted">Maximum: ₹ @Model.BalancePayable.ToString("N2")</small>
                        </div>
                    </div>
                </div>

                <hr />

                <!-- Action Buttons -->
                <div class="row">
                    <div class="col-md-12 text-center">
                        <button type="submit" class="btn btn-success btn-lg">
                            <i class="fas fa-check"></i> Record Payment
                        </button>
                        <a asp-action="Index" class="btn btn-secondary btn-lg">
                            <i class="fas fa-times"></i> Cancel
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const paymentAmountInput = document.getElementById('paymentAmount');
            const maxBalance = @Model.BalancePayable;

            // Validate payment amount on input
            paymentAmountInput.addEventListener('input', function() {
                const value = parseFloat(this.value);
                if (value > maxBalance) {
                    this.setCustomValidity('Payment amount cannot exceed the balance payable of ₹' + maxBalance.toFixed(2));
                } else if (value <= 0) {
                    this.setCustomValidity('Payment amount must be greater than zero');
                } else {
                    this.setCustomValidity('');
                }
            });

            // Confirm before submitting
            document.querySelector('form').addEventListener('submit', function(e) {
                const amount = document.getElementById('paymentAmount').value;

                if (!confirm(`Confirm recording payment of ₹${parseFloat(amount).toFixed(2)} to ${@Html.Raw(Json.Serialize(Model.SupplierName))}?`)) {
                    e.preventDefault();
                }
            });
        });
    </script>
}

<style>
    .alert-info {
        background-color: #d1ecf1;
        border-color: #bee5eb;
    }

    .form-label {
        font-weight: 600;
        color: #495057;
    }

    .btn-lg {
        padding: 0.75rem 1.5rem;
        font-size: 1.1rem;
    }
</style>
