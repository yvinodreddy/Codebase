@model RMMS.Models.Masters.Vendor
@{
    ViewData["Title"] = "Delete Vendor";
}

<div class="container-fluid">
    <h2 class="text-danger"><i class="fas fa-exclamation-triangle"></i> Delete Vendor</h2>
    <hr />

    <div class="alert alert-danger">
        <h5>Are you sure you want to delete this vendor?</h5>
        <p>This action will mark the vendor as inactive. The data will be preserved for audit purposes.</p>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5>Vendor Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Vendor Code:</dt>
                <dd class="col-sm-9">@Model.VendorCode</dd>

                <dt class="col-sm-3">Vendor Name:</dt>
                <dd class="col-sm-9"><strong>@Model.VendorName</strong></dd>

                <dt class="col-sm-3">Type:</dt>
                <dd class="col-sm-9">@Model.VendorType</dd>

                <dt class="col-sm-3">GSTIN:</dt>
                <dd class="col-sm-9">@Model.GSTIN</dd>

                <dt class="col-sm-3">Payment Terms:</dt>
                <dd class="col-sm-9">@Model.PaymentTerms</dd>

                <dt class="col-sm-3">Rating:</dt>
                <dd class="col-sm-9">
                    @if (Model.Rating.HasValue)
                    {
                        @for (int i = 1; i <= 5; i++)
                        {
                            <i class="fas fa-star @(i <= Model.Rating.Value ? "text-warning" : "text-muted")"></i>
                        }
                    }
                    else
                    {
                        <span class="text-muted">Not Rated</span>
                    }
                </dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.Status == "Active" ? "success" : Model.Status == "Blocked" ? "danger" : "secondary")">
                        @Model.Status
                    </span>
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-times"></i> Cancel
        </a>
    </form>
</div>
