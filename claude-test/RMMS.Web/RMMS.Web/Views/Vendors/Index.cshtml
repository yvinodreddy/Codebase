@model RMMS.Common.Pagination.PagedResult<RMMS.Models.Masters.Vendor>
@{
    ViewData["Title"] = "Vendors";
    string GetSortIcon(string columnName)
    {
        if (ViewBag.CurrentSort != columnName)
            return "<i class='fas fa-sort text-muted'></i>";

        return ViewBag.CurrentOrder == "asc"
            ? "<i class='fas fa-sort-up'></i>"
            : "<i class='fas fa-sort-down'></i>";
    }

    string GetSortUrl(string columnName)
    {
        var order = ViewBag.CurrentSort == columnName && ViewBag.CurrentOrder == "asc" ? "desc" : "asc";
        return $"?searchTerm={ViewBag.SearchTerm}&sortBy={columnName}&sortOrder={order}&page=1";
    }
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-truck"></i> Vendor Management</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> New Vendor
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-header bg-primary text-white">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Vendor List</h5>
                </div>
                <div class="col-md-6 text-end">
                    <span class="badge bg-light text-dark">Total: @Model.TotalItems</span>
                </div>
            </div>
        </div>
        <div class="card-body">
            <!-- Search Form -->
            <form method="get" class="row g-3 mb-3">
                <div class="col-md-10">
                    <input type="text" name="searchTerm" value="@ViewBag.SearchTerm"
                           class="form-control" placeholder="Search by name, code, or GSTIN...">
                    <input type="hidden" name="sortBy" value="@ViewBag.CurrentSort" />
                    <input type="hidden" name="sortOrder" value="@ViewBag.CurrentOrder" />
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                <a href="@GetSortUrl("VendorCode")" class="text-white text-decoration-none">
                                    Code @Html.Raw(GetSortIcon("VendorCode"))
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("VendorName")" class="text-white text-decoration-none">
                                    Name @Html.Raw(GetSortIcon("VendorName"))
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("VendorType")" class="text-white text-decoration-none">
                                    Type @Html.Raw(GetSortIcon("VendorType"))
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("GSTIN")" class="text-white text-decoration-none">
                                    GSTIN @Html.Raw(GetSortIcon("GSTIN"))
                                </a>
                            </th>
                            <th>Payment Terms</th>
                            <th>
                                <a href="@GetSortUrl("Rating")" class="text-white text-decoration-none">
                                    Rating @Html.Raw(GetSortIcon("Rating"))
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("Status")" class="text-white text-decoration-none">
                                    Status @Html.Raw(GetSortIcon("Status"))
                                </a>
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Items.Any())
                        {
                            @foreach (var vendor in Model.Items)
                            {
                                <tr>
                                    <td><strong>@vendor.VendorCode</strong></td>
                                    <td>@vendor.VendorName</td>
                                    <td>
                                        <span class="badge bg-info">@vendor.VendorType</span>
                                    </td>
                                    <td>@vendor.GSTIN</td>
                                    <td>@vendor.PaymentTerms</td>
                                    <td>
                                        @if (vendor.Rating.HasValue)
                                        {
                                            @for (int i = 1; i <= 5; i++)
                                            {
                                                <i class="fas fa-star @(i <= vendor.Rating.Value ? "text-warning" : "text-muted")"></i>
                                            }
                                        }
                                        else
                                        {
                                            <span class="text-muted">Not Rated</span>
                                        }
                                    </td>
                                    <td>
                                        <span class="badge bg-@(vendor.Status == "Active" ? "success" : vendor.Status == "Blocked" ? "danger" : "secondary")">
                                            @vendor.Status
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@vendor.Id" class="btn btn-info" title="Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@vendor.Id" class="btn btn-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@vendor.Id" class="btn btn-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="8" class="text-center py-4">
                                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">No vendors found</p>
                                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                                    {
                                        <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-primary">Clear Search</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <strong>Showing @Model.Items.Count of @Model.TotalItems vendors</strong>
                </div>
                <div class="col-md-6">
                    @await Html.PartialAsync("_PaginationPartial", Model)
                </div>
            </div>
        </div>
    </div>
</div>
