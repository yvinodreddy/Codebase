@model RMMS.Models.ByProductSales
@{
    ViewData["Title"] = "By-Product Sale Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <div class="row">
                <div class="col-md-6">
                    <h3><i class="fas fa-info-circle"></i> By-Product Sale Details</h3>
                </div>
                <div class="col-md-6 text-right">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="row">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-3">Transaction Number</dt>
                        <dd class="col-sm-9">@Model.TransactionNumber</dd>

                        <dt class="col-sm-3">Sale Date</dt>
                        <dd class="col-sm-9">@Model.SaleDate.ToString("dd-MMM-yyyy")</dd>

                        <dt class="col-sm-3">Product Type</dt>
                        <dd class="col-sm-9">@Model.ProductType</dd>
                    </dl>
                </div>
            </div>

            <hr />

            <h5 class="text-primary"><i class="fas fa-user"></i> Buyer Information</h5>
            <div class="row">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-3">Buyer Name</dt>
                        <dd class="col-sm-9">@Model.BuyerName</dd>

                        <dt class="col-sm-3">Buyer Contact</dt>
                        <dd class="col-sm-9">@(Model.BuyerContact ?? "N/A")</dd>
                    </dl>
                </div>
            </div>

            <hr />

            <h5 class="text-success"><i class="fas fa-calculator"></i> Sale Details</h5>
            <div class="row">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-3">Quantity (kg)</dt>
                        <dd class="col-sm-9">@Model.Quantity.ToString("N2") kg</dd>

                        <dt class="col-sm-3">Rate per kg</dt>
                        <dd class="col-sm-9">₹ @Model.Rate.ToString("N2")</dd>

                        <dt class="col-sm-3">Total Amount</dt>
                        <dd class="col-sm-9"><strong class="text-success">₹ @Model.TotalAmount.ToString("N2")</strong></dd>
                    </dl>
                </div>
            </div>

            <hr />

            <h5 class="text-warning"><i class="fas fa-credit-card"></i> Payment Information</h5>
            <div class="row">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-3">Payment Mode</dt>
                        <dd class="col-sm-9">@(Model.PaymentMode ?? "N/A")</dd>

                        <dt class="col-sm-3">Payment Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.PaymentStatus == "Paid")
                            {
                                <span class="badge badge-success">@Model.PaymentStatus</span>
                            }
                            else if (Model.PaymentStatus == "Pending")
                            {
                                <span class="badge badge-warning">@Model.PaymentStatus</span>
                            }
                            else
                            {
                                <span class="badge badge-secondary">@(Model.PaymentStatus ?? "Unknown")</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Remarks</dt>
                        <dd class="col-sm-9">@(Model.Remarks ?? "N/A")</dd>
                    </dl>
                </div>
            </div>

            <hr />

            <h5 class="text-muted"><i class="fas fa-history"></i> Audit Information</h5>
            <div class="row">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-3">Created By</dt>
                        <dd class="col-sm-9">@(Model.CreatedBy ?? "N/A")</dd>

                        <dt class="col-sm-3">Created Date</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("dd-MMM-yyyy hh:mm tt")</dd>

                        @if (Model.ModifiedBy != null)
                        {
                            <dt class="col-sm-3">Modified By</dt>
                            <dd class="col-sm-9">@Model.ModifiedBy</dd>

                            <dt class="col-sm-3">Modified Date</dt>
                            <dd class="col-sm-9">@Model.ModifiedDate?.ToString("dd-MMM-yyyy hh:mm tt")</dd>
                        }

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge badge-success">Active</span>
                            }
                            else
                            {
                                <span class="badge badge-danger">Inactive</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <hr />

            <div class="row mt-3">
                <div class="col-md-12">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this sale record?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    dt {
        font-weight: 600;
        color: #495057;
    }
    dd {
        margin-bottom: 1rem;
    }
    hr {
        margin: 1.5rem 0;
    }
</style>
