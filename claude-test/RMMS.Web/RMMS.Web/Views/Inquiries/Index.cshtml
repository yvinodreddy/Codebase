@model List<RMMS.Models.Sales.Inquiry>
@{
    ViewData["Title"] = "Inquiries";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-question-circle"></i> Sales Inquiries</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> New Inquiry
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Cards -->
    @if (ViewBag.Statistics != null)
    {
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card text-white bg-primary">
                    <div class="card-body">
                        <h5>Total Inquiries</h5>
                        <h2>@(ViewBag.Statistics != null && ViewBag.Statistics.ContainsKey("TotalInquiries") ? ViewBag.Statistics["TotalInquiries"] : 0)</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-warning">
                    <div class="card-body">
                        <h5>Pending</h5>
                        <h2>@(ViewBag.Statistics != null && ViewBag.Statistics.ContainsKey("PendingCount") ? ViewBag.Statistics["PendingCount"] : 0)</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-success">
                    <div class="card-body">
                        <h5>Converted</h5>
                        <h2>@(ViewBag.Statistics != null && ViewBag.Statistics.ContainsKey("ConvertedCount") ? ViewBag.Statistics["ConvertedCount"] : 0)</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card text-white bg-danger">
                    <div class="card-body">
                        <h5>Lost</h5>
                        <h2>@(ViewBag.Statistics != null && ViewBag.Statistics.ContainsKey("LostCount") ? ViewBag.Statistics["LostCount"] : 0)</h2>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <form method="get" class="row g-3">
                <div class="col-md-3">
                    <input type="text" name="searchTerm" value="@ViewBag.SearchTerm"
                           class="form-control" placeholder="Search by inquiry number, customer...">
                </div>
                <div class="col-md-2">
                    <select name="status" class="form-select">
                        <option value="">All Status</option>
                        <option value="New" selected="@(ViewBag.Status == "New")">New</option>
                        <option value="In Progress" selected="@(ViewBag.Status == "In Progress")">In Progress</option>
                        <option value="Quoted" selected="@(ViewBag.Status == "Quoted")">Quoted</option>
                        <option value="Converted" selected="@(ViewBag.Status == "Converted")">Converted</option>
                        <option value="Lost" selected="@(ViewBag.Status == "Lost")">Lost</option>
                        <option value="Closed" selected="@(ViewBag.Status == "Closed")">Closed</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <select name="priority" class="form-select">
                        <option value="">All Priority</option>
                        <option value="Low" selected="@(ViewBag.Priority == "Low")">Low</option>
                        <option value="Normal" selected="@(ViewBag.Priority == "Normal")">Normal</option>
                        <option value="High" selected="@(ViewBag.Priority == "High")">High</option>
                        <option value="Urgent" selected="@(ViewBag.Priority == "Urgent")">Urgent</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <input type="date" name="fromDate" value="@ViewBag.FromDate" class="form-control" placeholder="From Date">
                </div>
                <div class="col-md-2">
                    <input type="date" name="toDate" value="@ViewBag.ToDate" class="form-control" placeholder="To Date">
                </div>
                <div class="col-md-1">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Filter
                    </button>
                </div>
            </form>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Inquiry #</th>
                            <th>Date</th>
                            <th>Customer</th>
                            <th>Product Type</th>
                            <th>Source</th>
                            <th>Priority</th>
                            <th>Status</th>
                            <th>Assigned To</th>
                            <th>Follow-Up</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var inquiry in Model)
                            {
                                <tr>
                                    <td><strong>@inquiry.InquiryNumber</strong></td>
                                    <td>@inquiry.InquiryDate.ToString("dd MMM yyyy")</td>
                                    <td>@inquiry.Customer?.CustomerName</td>
                                    <td>@inquiry.ProductType</td>
                                    <td>
                                        <span class="badge bg-secondary">@inquiry.Source</span>
                                    </td>
                                    <td>
                                        @{
                                            var priorityClass = inquiry.Priority switch
                                            {
                                                "Urgent" => "bg-danger",
                                                "High" => "bg-warning",
                                                "Normal" => "bg-info",
                                                "Low" => "bg-secondary",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @priorityClass">@inquiry.Priority</span>
                                    </td>
                                    <td>
                                        @{
                                            var statusClass = inquiry.Status switch
                                            {
                                                "New" => "bg-primary",
                                                "In Progress" => "bg-warning",
                                                "Quoted" => "bg-info",
                                                "Converted" => "bg-success",
                                                "Lost" => "bg-danger",
                                                "Closed" => "bg-secondary",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @statusClass">@inquiry.Status</span>
                                    </td>
                                    <td>@inquiry.AssignedToEmployee?.EmployeeName</td>
                                    <td>
                                        @if (inquiry.FollowUpDate.HasValue)
                                        {
                                            <span class="@(inquiry.FollowUpDate < DateTime.Now ? "text-danger" : "text-success")">
                                                @inquiry.FollowUpDate.Value.ToString("dd MMM yyyy")
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@inquiry.Id" class="btn btn-sm btn-info" title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@inquiry.Id" class="btn btn-sm btn-warning" title="Edit">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@inquiry.Id" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="10" class="text-center">No inquiries found</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="d-flex justify-content-between">
                <div><strong>Total Inquiries:</strong> @Model.Count</div>
                <div>
                    <a asp-action="FollowUpDue" class="btn btn-sm btn-warning">
                        <i class="fas fa-bell"></i> Follow-Up Due
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
