@model RMMS.Models.Production.Machine
@{
    ViewData["Title"] = "New Machine";
}

<div class="container">
    <h2><i class="fas fa-cogs"></i> @ViewData["Title"]</h2>
    <hr />

    <div class="row">
        <div class="col-md-10">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5>Machine Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MachineCode" class="form-label"></label>
                                <input asp-for="MachineCode" class="form-control" readonly />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="MachineName" class="form-label"></label>
                                <input asp-for="MachineName" class="form-control" />
                                <span asp-validation-for="MachineName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MachineType" class="form-label"></label>
                                <select asp-for="MachineType" class="form-select" asp-items="ViewBag.MachineTypes">
                                    <option value="">-- Select Type --</option>
                                </select>
                                <span asp-validation-for="MachineType" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="Status" class="form-label"></label>
                                <select asp-for="Status" class="form-select" asp-items="ViewBag.StatusOptions"></select>
                                <span asp-validation-for="Status" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header bg-info text-white">
                        <h5>Specifications</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Manufacturer" class="form-label"></label>
                                <input asp-for="Manufacturer" class="form-control" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ModelNumber" class="form-label"></label>
                                <input asp-for="ModelNumber" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="Capacity" class="form-label"></label>
                                <input asp-for="Capacity" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="Capacity" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="CapacityUnit" class="form-label"></label>
                                <select asp-for="CapacityUnit" class="form-select" asp-items="ViewBag.CapacityUnits"></select>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="Location" class="form-label"></label>
                                <input asp-for="Location" class="form-control" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Specifications" class="form-label"></label>
                            <textarea asp-for="Specifications" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header bg-success text-white">
                        <h5>Purchase & Financial</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="PurchaseDate" class="form-label"></label>
                                <input asp-for="PurchaseDate" class="form-control" type="date" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="PurchasePrice" class="form-label"></label>
                                <input asp-for="PurchasePrice" class="form-control" type="number" step="0.01" />
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="CurrentValue" class="form-label"></label>
                                <input asp-for="CurrentValue" class="form-control" type="number" step="0.01" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header bg-warning">
                        <h5>Maintenance Schedule</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MaintenanceIntervalHours" class="form-label"></label>
                                <input asp-for="MaintenanceIntervalHours" class="form-control" type="number" />
                                <small class="text-muted">Hours of operation between maintenance</small>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="LastMaintenanceDate" class="form-label"></label>
                                <input asp-for="LastMaintenanceDate" class="form-control" type="date" />
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header">
                        <h5>Additional Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Remarks" class="form-label"></label>
                            <textarea asp-for="Remarks" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Create Machine
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
