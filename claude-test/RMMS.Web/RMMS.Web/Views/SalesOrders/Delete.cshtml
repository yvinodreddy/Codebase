@model RMMS.Models.Sales.SalesOrder
@{
    ViewData["Title"] = "Delete Sales Order";
}

<div class="container-fluid">
    <h2 class="text-danger"><i class="fas fa-trash"></i> Delete Sales Order</h2>
    <hr />

    <div class="alert alert-danger">
        <i class="fas fa-exclamation-triangle"></i>
        <strong>Warning:</strong> Are you sure you want to delete this sales order?
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5 class="mb-0">Order Information</h5>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <p><strong>Order Number:</strong> @Model.OrderNumber</p>
                    <p><strong>Order Date:</strong> @Model.OrderDate.ToString("dd MMMM yyyy")</p>
                    <p><strong>Customer:</strong> @Model.Customer?.CustomerName</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Status:</strong> <span class="badge bg-info">@Model.Status</span></p>
                    <p><strong>Total Amount:</strong> â‚¹ @Model.TotalAmount.ToString("N2")</p>
                    <p><strong>Delivery Date:</strong> @Model.DeliveryDate.ToString("dd MMMM yyyy")</p>
                </div>
            </div>

            @if (Model.SalesOrderItems != null && Model.SalesOrderItems.Any())
            {
                <hr />
                <p><strong>Order Items:</strong> @Model.SalesOrderItems.Count() item(s)</p>
            }
        </div>
    </div>

    <div class="mt-4">
        <form asp-action="DeleteConfirmed" method="post">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Confirm Delete
            </button>
            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                <i class="fas fa-times"></i> Cancel
            </a>
        </form>
    </div>
</div>
