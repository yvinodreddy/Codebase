@model IEnumerable<RMMS.Models.Sales.SalesOrder>
@{
    ViewData["Title"] = "Sales Orders";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-shopping-cart"></i> Sales Orders</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> New Sales Order
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (ViewBag.Statistics != null)
    {
        <div class="row mb-4">
            <div class="col-md-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h6>Total Orders</h6>
                        <h3>0</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-warning text-white">
                    <div class="card-body">
                        <h6>Pending</h6>
                        <h3>0</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h6>In Production</h6>
                        <h3>0</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h6>Total Value</h6>
                        <h3>₹ 0.00</h3>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="card mb-3">
        <div class="card-body">
            <form method="get" asp-action="Index" class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="searchTerm" class="form-control"
                           placeholder="Search by order number, customer..."
                           value="@ViewBag.SearchTerm" />
                </div>
                <div class="col-md-3">
                    <select name="status" class="form-select">
                        <option value="">All Statuses</option>
                        <option value="Pending" selected="@(ViewBag.SelectedStatus == "Pending")">Pending</option>
                        <option value="Confirmed" selected="@(ViewBag.SelectedStatus == "Confirmed")">Confirmed</option>
                        <option value="In Production" selected="@(ViewBag.SelectedStatus == "In Production")">In Production</option>
                        <option value="Ready to Ship" selected="@(ViewBag.SelectedStatus == "Ready to Ship")">Ready to Ship</option>
                        <option value="Shipped" selected="@(ViewBag.SelectedStatus == "Shipped")">Shipped</option>
                        <option value="Delivered" selected="@(ViewBag.SelectedStatus == "Delivered")">Delivered</option>
                        <option value="Cancelled" selected="@(ViewBag.SelectedStatus == "Cancelled")">Cancelled</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-search"></i> Search
                    </button>
                </div>
                <div class="col-md-2">
                    <a asp-action="Index" class="btn btn-secondary w-100">
                        <i class="fas fa-redo"></i> Reset
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h5 class="mb-0">Sales Orders List</h5>
        </div>
        <div class="card-body">
            @if (Model != null && Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>Order Number</th>
                                <th>Date</th>
                                <th>Customer</th>
                                <th>Delivery Date</th>
                                <th class="text-end">Total Amount</th>
                                <th>Priority</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>
                                        <strong>@order.OrderNumber</strong>
                                        @if (order.QuotationId.HasValue)
                                        {
                                            <br /><small class="text-muted">From: @order.Quotation?.QuotationNumber</small>
                                        }
                                    </td>
                                    <td>@order.OrderDate.ToString("dd MMM yyyy")</td>
                                    <td>@order.Customer?.CustomerName</td>
                                    <td>
                                        @{
                                            var isOverdue = order.DeliveryDate < DateTime.Now && order.Status != "Delivered" && order.Status != "Cancelled";
                                            var dateClass = isOverdue ? "text-danger" : "";
                                        }
                                        <span class="@dateClass">
                                            @order.DeliveryDate.ToString("dd MMM yyyy")
                                            @if (isOverdue)
                                            {
                                                <br /><small class="badge bg-danger">Overdue</small>
                                            }
                                        </span>
                                    </td>
                                    <td class="text-end"><strong>₹ @order.TotalAmount.ToString("N2")</strong></td>
                                    <td>
                                        @{
                                            var priorityClass = order.Priority switch
                                            {
                                                "Urgent" => "bg-danger",
                                                "High" => "bg-warning",
                                                "Normal" => "bg-info",
                                                "Low" => "bg-secondary",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @priorityClass">@order.Priority</span>
                                    </td>
                                    <td>
                                        @{
                                            var statusClass = order.Status switch
                                            {
                                                "Pending" => "bg-secondary",
                                                "Confirmed" => "bg-primary",
                                                "In Production" => "bg-info",
                                                "Ready to Ship" => "bg-warning",
                                                "Shipped" => "bg-success",
                                                "Delivered" => "bg-success",
                                                "Cancelled" => "bg-danger",
                                                _ => "bg-secondary"
                                            };
                                        }
                                        <span class="badge @statusClass">@order.Status</span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a asp-action="Details" asp-route-id="@order.Id"
                                               class="btn btn-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            @if (order.Status == "Pending")
                                            {
                                                <a asp-action="Edit" asp-route-id="@order.Id"
                                                   class="btn btn-warning" title="Edit">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            }
                                            @if (order.Status != "Delivered" && order.Status != "Cancelled")
                                            {
                                                <a asp-action="Delete" asp-route-id="@order.Id"
                                                   class="btn btn-danger" title="Delete">
                                                    <i class="fas fa-trash"></i>
                                                </a>
                                            }
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No sales orders found.
                    <a asp-action="Create">Create your first sales order</a>
                </div>
            }
        </div>
    </div>
</div>
