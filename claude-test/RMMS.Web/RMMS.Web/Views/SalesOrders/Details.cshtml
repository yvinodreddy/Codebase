@model RMMS.Models.Sales.SalesOrder
@{
    ViewData["Title"] = "Sales Order Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-shopping-cart"></i> Sales Order Details</h2>
        <div>
            @if (Model.Status == "Pending")
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit"></i> Edit
                </a>
            }
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Order Information</h5>
                </div>
                <div class="card-body">
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Order Number:</strong>
                            <p class="text-primary fs-5">@Model.OrderNumber</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Order Date:</strong>
                            <p>@Model.OrderDate.ToString("dd MMMM yyyy")</p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Customer:</strong>
                            <p>@Model.Customer?.CustomerName (@Model.Customer?.CustomerCode)</p>
                        </div>
                        <div class="col-md-6">
                            <strong>Delivery Date:</strong>
                            @{
                                var isOverdue = Model.DeliveryDate < DateTime.Now && Model.Status != "Delivered" && Model.Status != "Cancelled";
                                var dateClass = isOverdue ? "text-danger" : "text-success";
                            }
                            <p class="@dateClass">
                                @Model.DeliveryDate.ToString("dd MMMM yyyy")
                                @if (isOverdue)
                                {
                                    <span class="badge bg-danger">Overdue</span>
                                }
                            </p>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <strong>Status:</strong>
                            @{
                                var statusClass = Model.Status switch
                                {
                                    "Pending" => "bg-secondary",
                                    "Confirmed" => "bg-primary",
                                    "In Production" => "bg-info",
                                    "Ready to Ship" => "bg-warning",
                                    "Shipped" => "bg-success",
                                    "Delivered" => "bg-success",
                                    "Cancelled" => "bg-danger",
                                    _ => "bg-secondary"
                                };
                            }
                            <p><span class="badge @statusClass fs-6">@Model.Status</span></p>
                        </div>
                        <div class="col-md-6">
                            <strong>Priority:</strong>
                            @{
                                var priorityClass = Model.Priority switch
                                {
                                    "Urgent" => "bg-danger",
                                    "High" => "bg-warning",
                                    "Normal" => "bg-info",
                                    "Low" => "bg-secondary",
                                    _ => "bg-secondary"
                                };
                            }
                            <p><span class="badge @priorityClass fs-6">@Model.Priority</span></p>
                        </div>
                    </div>

                    @if (Model.QuotationId.HasValue)
                    {
                        <div class="mb-3">
                            <strong>Created From Quotation:</strong>
                            <p>@Model.Quotation?.QuotationNumber</p>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(Model.DeliveryAddress))
                    {
                        <div class="mb-3">
                            <strong>Delivery Address:</strong>
                            <p>@Model.DeliveryAddress</p>
                        </div>
                    }
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-list"></i> Order Items</h5>
                </div>
                <div class="card-body">
                    @if (Model.SalesOrderItems != null && Model.SalesOrderItems.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-end">Quantity</th>
                                        <th class="text-end">Unit Price</th>
                                        <th class="text-end">Total</th>
                                        @if (Model.Status == "Pending")
                                        {
                                            <th class="text-center">Action</th>
                                        }
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.SalesOrderItems)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@item.Product?.ProductName</strong><br />
                                                <small class="text-muted">@item.ProductDescription</small>
                                            </td>
                                            <td class="text-end">@item.Quantity @item.UnitOfMeasure</td>
                                            <td class="text-end">₹ @item.UnitPrice.ToString("N2")</td>
                                            <td class="text-end"><strong>₹ @item.TotalAmount.ToString("N2")</strong></td>
                                            @if (Model.Status == "Pending")
                                            {
                                                <td class="text-center">
                                                    <form asp-action="RemoveItem" method="post" style="display:inline;">
                                                        @Html.AntiForgeryToken()
                                                        <input type="hidden" name="salesOrderId" value="@Model.Id" />
                                                        <input type="hidden" name="itemId" value="@item.Id" />
                                                        <button type="submit" class="btn btn-sm btn-danger"
                                                                onclick="return confirm('Remove this item?');">
                                                            <i class="fas fa-trash"></i>
                                                        </button>
                                                    </form>
                                                </td>
                                            }
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No items added yet.
                        </div>
                    }

                    @if (Model.Status == "Pending")
                    {
                        <hr />
                        <h6 class="mb-3"><i class="fas fa-plus"></i> Add New Item</h6>
                        <form asp-action="AddItem" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="salesOrderId" value="@Model.Id" />
                            <div class="row mb-3">
                                <div class="col-md-5">
                                    <select name="item.ProductId" class="form-select" required>
                                        <option value="">Select Product</option>
                                        @if (ViewBag.Products != null)
                                        {
                                            @foreach (var product in ViewBag.Products)
                                            {
                                                <option value="@product.Id">@product.ProductName</option>
                                            }
                                        }
                                    </select>
                                </div>
                                <div class="col-md-2">
                                    <input type="number" name="item.Quantity" class="form-control" placeholder="Qty" step="0.001" required />
                                </div>
                                <div class="col-md-2">
                                    <input type="number" name="item.UnitPrice" class="form-control" placeholder="Price" step="0.01" required />
                                </div>
                                <div class="col-md-3">
                                    <button type="submit" class="btn btn-success w-100">
                                        <i class="fas fa-plus"></i> Add
                                    </button>
                                </div>
                            </div>
                        </form>
                    }
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5>Financial Summary</h5>
                </div>
                <div class="card-body">
                    <table class="table">
                        <tr>
                            <td><strong>Subtotal:</strong></td>
                            <td class="text-end">₹ @Model.SubtotalAmount.ToString("N2")</td>
                        </tr>
                        @if (Model.DiscountAmount.HasValue && Model.DiscountAmount > 0)
                        {
                            <tr>
                                <td><strong>Discount:</strong></td>
                                <td class="text-end text-danger">- ₹ @Model.DiscountAmount.Value.ToString("N2")</td>
                            </tr>
                        }
                        <tr>
                            <td><strong>Tax:</strong></td>
                            <td class="text-end">₹ @Model.TaxAmount.ToString("N2")</td>
                        </tr>
                        @if (Model.FreightCharges.HasValue && Model.FreightCharges > 0)
                        {
                            <tr>
                                <td><strong>Freight:</strong></td>
                                <td class="text-end">₹ @Model.FreightCharges.Value.ToString("N2")</td>
                            </tr>
                        }
                        <tr class="table-active">
                            <td><strong>Total Amount:</strong></td>
                            <td class="text-end"><strong class="text-success fs-5">₹ @Model.TotalAmount.ToString("N2")</strong></td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            @if (Model.Status == "Pending")
            {
                <div class="card mb-3">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <form asp-action="UpdateStatus" method="post">
                            <input type="hidden" name="id" value="@Model.Id" />
                            <input type="hidden" name="newStatus" value="Confirmed" />
                            <button type="submit" class="btn btn-success w-100 mb-2">
                                <i class="fas fa-check"></i> Confirm Order
                            </button>
                        </form>
                    </div>
                </div>
            }

            <div class="card mb-3">
                <div class="card-header">
                    <h5>Customer Details</h5>
                </div>
                <div class="card-body">
                    <p><strong>Name:</strong> @Model.Customer?.CustomerName</p>
                    <p><strong>Code:</strong> @Model.Customer?.CustomerCode</p>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5>Audit Information</h5>
                </div>
                <div class="card-body">
                    <small>
                        <strong>Created:</strong> @Model.CreatedDate.ToString("dd MMM yyyy HH:mm")<br />
                        <strong>By:</strong> @Model.CreatedBy
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>
