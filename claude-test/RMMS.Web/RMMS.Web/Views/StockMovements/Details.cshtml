@model RMMS.Models.Inventory.StockMovement
@{
    ViewData["Title"] = "Stock Movement Details";
}

<div class="container">
    <h2><i class="fas fa-info-circle"></i> Stock Movement Details</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header @Model.MovementBadgeClass text-white">
                    <h5>
                        <i class="fas @Model.MovementIcon"></i>
                        @Model.MovementTypeDisplay
                    </h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Movement Code:</dt>
                        <dd class="col-sm-8"><strong>@Model.MovementCode</strong></dd>

                        <dt class="col-sm-4">Movement Date:</dt>
                        <dd class="col-sm-8">@Model.MovementDate.ToString("dd MMM yyyy HH:mm")</dd>

                        <dt class="col-sm-4">Category:</dt>
                        <dd class="col-sm-8"><span class="badge bg-secondary">@Model.MovementCategory</span></dd>
                    </dl>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5>Product & Location</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Product:</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.Product?.ProductName</strong><br>
                            <small class="text-muted">Code: @Model.Product?.ProductCode</small>
                        </dd>

                        <dt class="col-sm-4">Warehouse:</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.Warehouse?.WarehouseName</strong><br>
                            <small class="text-muted">Code: @Model.Warehouse?.WarehouseCode</small>
                        </dd>

                        <dt class="col-sm-4">Storage Zone:</dt>
                        <dd class="col-sm-8">@(Model.Zone?.ZoneName ?? "Not assigned")</dd>
                    </dl>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <h5>Quantity & Cost</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Quantity:</dt>
                        <dd class="col-sm-8"><h4>@Model.Quantity.ToString("N3")</h4></dd>

                        <dt class="col-sm-4">Unit Cost:</dt>
                        <dd class="col-sm-8">₹@Model.UnitCost.ToString("N2")</dd>

                        <dt class="col-sm-4">Total Cost:</dt>
                        <dd class="col-sm-8"><strong>₹@Model.TotalCost.ToString("N2")</strong></dd>
                    </dl>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ReferenceNumber))
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h5>Reference</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Reference Type:</dt>
                            <dd class="col-sm-8">@Model.ReferenceType</dd>

                            <dt class="col-sm-4">Reference Number:</dt>
                            <dd class="col-sm-8"><strong>@Model.ReferenceNumber</strong></dd>
                        </dl>
                    </div>
                </div>
            }

            @if (!string.IsNullOrWhiteSpace(Model.Remarks))
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h5>Remarks</h5>
                    </div>
                    <div class="card-body">
                        @Model.Remarks
                    </div>
                </div>
            }

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                    <i class="fas fa-trash"></i> Delete
                </a>
            </div>
        </div>
    </div>
</div>
