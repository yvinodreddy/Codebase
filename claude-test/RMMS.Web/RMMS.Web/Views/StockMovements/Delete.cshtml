@model RMMS.Models.Inventory.StockMovement
@{
    ViewData["Title"] = "Delete Stock Movement";
}

<div class="container">
    <h2 class="text-danger"><i class="fas fa-exclamation-triangle"></i> Delete Stock Movement</h2>
    <hr />

    <div class="alert alert-danger">
        <strong>Warning!</strong> Are you sure you want to delete this stock movement?
        <br><strong>Note:</strong> This will not automatically reverse the inventory ledger changes.
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Movement Code:</dt>
                <dd class="col-sm-9"><strong>@Model.MovementCode</strong></dd>

                <dt class="col-sm-3">Type:</dt>
                <dd class="col-sm-9">
                    <span class="badge @Model.MovementBadgeClass">
                        <i class="fas @Model.MovementIcon"></i> @Model.MovementType
                    </span>
                </dd>

                <dt class="col-sm-3">Date:</dt>
                <dd class="col-sm-9">@Model.MovementDate.ToString("dd MMM yyyy HH:mm")</dd>

                <dt class="col-sm-3">Product:</dt>
                <dd class="col-sm-9">
                    <strong>@Model.Product?.ProductName</strong> (@Model.Product?.ProductCode)
                </dd>

                <dt class="col-sm-3">Warehouse:</dt>
                <dd class="col-sm-9">
                    <strong>@Model.Warehouse?.WarehouseName</strong> (@Model.Warehouse?.WarehouseCode)
                </dd>

                <dt class="col-sm-3">Quantity:</dt>
                <dd class="col-sm-9"><strong>@Model.Quantity.ToString("N3")</strong></dd>

                <dt class="col-sm-3">Total Cost:</dt>
                <dd class="col-sm-9">â‚¹@Model.TotalCost.ToString("N2")</dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> No, Keep It
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Yes, Delete It
            </button>
        </div>
    </form>
</div>
