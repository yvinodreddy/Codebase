@model RMMS.Models.Inventory.StockMovement
@{
    ViewData["Title"] = Model.MovementType == "IN" ? "Stock IN Movement" : "Stock OUT Movement";
    var isStockIn = Model.MovementType == "IN";
}

<div class="container">
    <h2>
        <i class="fas fa-@(isStockIn ? "arrow-down" : "arrow-up")"></i>
        @ViewData["Title"]
    </h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" method="post">
                <input type="hidden" asp-for="MovementType" />
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="card mb-3">
                    <div class="card-header @(isStockIn ? "bg-success" : "bg-warning") text-white">
                        <h5>Movement Information</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="MovementCode" class="form-label"></label>
                                <input asp-for="MovementCode" class="form-control" readonly />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="MovementDate" class="form-label"></label>
                                <input asp-for="MovementDate" class="form-control" type="datetime-local" />
                                <span asp-validation-for="MovementDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="MovementCategory" class="form-label"></label>
                                <select asp-for="MovementCategory" class="form-select" asp-items="ViewBag.MovementCategories">
                                </select>
                                <span asp-validation-for="MovementCategory" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5>Product & Location</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ProductId" class="form-label"></label>
                                <select asp-for="ProductId" class="form-select" asp-items="ViewBag.Products">
                                    <option value="">-- Select Product --</option>
                                </select>
                                <span asp-validation-for="ProductId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="WarehouseId" class="form-label"></label>
                                <select asp-for="WarehouseId" class="form-select" asp-items="ViewBag.Warehouses">
                                    <option value="">-- Select Warehouse --</option>
                                </select>
                                <span asp-validation-for="WarehouseId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header bg-info text-white">
                        <h5>Quantity & Cost</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Quantity" class="form-label"></label>
                                <input asp-for="Quantity" class="form-control" type="number" step="0.001" />
                                <span asp-validation-for="Quantity" class="text-danger"></span>
                                @if (!isStockIn)
                                {
                                    <small class="text-warning">⚠️ Stock will be deducted from inventory</small>
                                }
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="UnitCost" class="form-label"></label>
                                <input asp-for="UnitCost" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="UnitCost" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header">
                        <h5>Reference & Remarks</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ReferenceType" class="form-label"></label>
                                <input asp-for="ReferenceType" class="form-control" placeholder="e.g., PO, SO, Production" />
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="ReferenceNumber" class="form-label"></label>
                                <input asp-for="ReferenceNumber" class="form-control" placeholder="e.g., PO-2024-001" />
                            </div>
                        </div>
                        <div class="mb-3">
                            <label asp-for="Remarks" class="form-label"></label>
                            <textarea asp-for="Remarks" class="form-control" rows="3"></textarea>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn @(isStockIn ? "btn-success" : "btn-warning")">
                        <i class="fas fa-@(isStockIn ? "arrow-down" : "arrow-up")"></i>
                        Record @(isStockIn ? "IN" : "OUT") Movement
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
