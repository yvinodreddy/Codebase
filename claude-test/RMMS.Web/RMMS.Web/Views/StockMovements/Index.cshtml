@model RMMS.Common.Pagination.PagedResult<RMMS.Models.Inventory.StockMovement>
@{
    ViewData["Title"] = "Stock Movements";
    string GetSortIcon(string columnName)
    {
        if (ViewBag.CurrentSort != columnName)
            return "<i class='fas fa-sort text-muted'></i>";

        return ViewBag.CurrentOrder == "asc"
            ? "<i class='fas fa-sort-up'></i>"
            : "<i class='fas fa-sort-down'></i>";
    }

    string GetSortUrl(string columnName)
    {
        var order = ViewBag.CurrentSort == columnName && ViewBag.CurrentOrder == "asc" ? "desc" : "asc";
        return $"?searchTerm={ViewBag.SearchTerm}&movementType={ViewBag.MovementType}&sortBy={columnName}&sortOrder={order}&page=1";
    }
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-exchange-alt"></i> Stock Movements</h2>
        <div>
            <a asp-action="Create" asp-route-type="IN" class="btn btn-success">
                <i class="fas fa-arrow-down"></i> Stock IN
            </a>
            <a asp-action="Create" asp-route-type="OUT" class="btn btn-warning">
                <i class="fas fa-arrow-up"></i> Stock OUT
            </a>
        </div>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Movements</h5>
                    <h3>@(ViewBag.TotalMovements ?? 0)</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Stock IN</h5>
                    <h3>@(ViewBag.InMovements ?? 0)</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Stock OUT</h5>
                    <h3>@(ViewBag.OutMovements ?? 0)</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Value</h5>
                    <h3>₹@(ViewBag.TotalValue?.ToString("N2") ?? "0.00")</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <form method="get" class="row g-3">
                <div class="col-md-8">
                    <input type="text" name="searchTerm" value="@ViewBag.SearchTerm"
                           class="form-control" placeholder="Search movements...">
                    <input type="hidden" name="sortBy" value="@ViewBag.CurrentSort" />
                    <input type="hidden" name="sortOrder" value="@ViewBag.CurrentOrder" />
                </div>
                <div class="col-md-2">
                    <select name="movementType" class="form-select">
                        <option value="">All Types</option>
                        <option value="IN" selected="@(ViewBag.MovementType == "IN")">Stock IN</option>
                        <option value="OUT" selected="@(ViewBag.MovementType == "OUT")">Stock OUT</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter"></i> Search
                    </button>
                </div>
            </form>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-sm">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                <a href="@GetSortUrl("MovementCode")" class="text-white text-decoration-none">
                                    Code @Html.Raw(GetSortIcon("MovementCode"))
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("MovementDate")" class="text-white text-decoration-none">
                                    Date @Html.Raw(GetSortIcon("MovementDate"))
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("MovementType")" class="text-white text-decoration-none">
                                    Type @Html.Raw(GetSortIcon("MovementType"))
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("ProductName")" class="text-white text-decoration-none">
                                    Product @Html.Raw(GetSortIcon("ProductName"))
                                </a>
                            </th>
                            <th>Warehouse</th>
                            <th>Category</th>
                            <th>
                                <a href="@GetSortUrl("Quantity")" class="text-white text-decoration-none">
                                    Quantity @Html.Raw(GetSortIcon("Quantity"))
                                </a>
                            </th>
                            <th>Unit Cost</th>
                            <th>Total Cost</th>
                            <th>Reference</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Items.Any())
                        {
                            @foreach (var movement in Model.Items)
                            {
                                <tr>
                                    <td><strong>@movement.MovementCode</strong></td>
                                    <td>@movement.MovementDate.ToString("dd MMM yyyy")</td>
                                    <td>
                                        <span class="badge @movement.MovementBadgeClass">
                                            <i class="fas @movement.MovementIcon"></i> @movement.MovementType
                                        </span>
                                    </td>
                                    <td>
                                        @movement.Product?.ProductName<br>
                                        <small class="text-muted">@movement.Product?.ProductCode</small>
                                    </td>
                                    <td>
                                        @movement.Warehouse?.WarehouseName<br>
                                        <small class="text-muted">@movement.Warehouse?.WarehouseCode</small>
                                    </td>
                                    <td><span class="badge bg-secondary">@movement.MovementCategory</span></td>
                                    <td><strong>@movement.Quantity.ToString("N2")</strong></td>
                                    <td>₹@movement.UnitCost.ToString("N2")</td>
                                    <td><strong>₹@movement.TotalCost.ToString("N2")</strong></td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(movement.ReferenceNumber))
                                        {
                                            <small>@movement.ReferenceType: @movement.ReferenceNumber</small>
                                        }
                                        else
                                        {
                                            <small class="text-muted">-</small>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Details" asp-route-id="@movement.Id" class="btn btn-sm btn-info" title="Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@movement.Id" class="btn btn-sm btn-danger" title="Delete">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="11" class="text-center text-muted">
                                    <i class="fas fa-info-circle"></i> No stock movements found.
                                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                                    {
                                        <span>Try a different search or <a asp-action="Index">view all movements</a>.</span>
                                    }
                                    else
                                    {
                                        <span><a asp-action="Create" asp-route-type="IN">Create your first stock movement</a>.</span>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <strong>Showing @Model.Items.Count of @Model.TotalItems movements</strong>
                </div>
                <div class="col-md-6">
                    @await Html.PartialAsync("_PaginationPartial", Model)
                </div>
            </div>
        </div>
    </div>
</div>
