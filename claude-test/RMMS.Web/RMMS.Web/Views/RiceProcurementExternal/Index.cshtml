@model List<RMMS.Models.RiceProcurementExternal>
@{
    ViewData["Title"] = "External Rice Procurement";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var totalQuantity = Model?.Sum(x => x.Quantity) ?? 0;
    var totalAmount = Model?.Sum(x => x.TotalAmount) ?? 0;
    var totalBalance = Model?.Sum(x => x.Balance) ?? 0;
    var paidCount = Model?.Count(x => x.PaymentStatus == "Paid") ?? 0;
}

<!-- Summary Cards -->
<div class="row mb-4">
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="ms-card ms-stat-card">
            <div class="ms-card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="ms-text-muted mb-2">Total Records</h6>
                        <h3 class="ms-text-primary mb-0">@(Model?.Count ?? 0)</h3>
                    </div>
                    <div class="ms-stat-icon" style="background: #E3F2FD;">
                        <i class="fas fa-truck-loading" style="color: #0078D4;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="ms-card ms-stat-card">
            <div class="ms-card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="ms-text-muted mb-2">Total Quantity</h6>
                        <h3 class="ms-text-primary mb-0">@totalQuantity.ToString("N0") kg</h3>
                    </div>
                    <div class="ms-stat-icon" style="background: #F3E5F5;">
                        <i class="fas fa-weight" style="color: #8B5CF6;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="ms-card ms-stat-card">
            <div class="ms-card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="ms-text-muted mb-2">Total Amount</h6>
                        <h3 class="ms-text-success mb-0">₹@totalAmount.ToString("N0")</h3>
                    </div>
                    <div class="ms-stat-icon" style="background: #E8F5E9;">
                        <i class="fas fa-rupee-sign" style="color: #107C10;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-3 col-sm-6 mb-3">
        <div class="ms-card ms-stat-card">
            <div class="ms-card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h6 class="ms-text-muted mb-2">Pending Balance</h6>
                        <h3 class="ms-text-warning mb-0">₹@totalBalance.ToString("N0")</h3>
                        <small class="ms-text-muted">@paidCount paid</small>
                    </div>
                    <div class="ms-stat-icon" style="background: #FFF3E0;">
                        <i class="fas fa-exclamation-circle" style="color: #FFC107;"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Data Table -->
<div class="ms-card">
    <div class="ms-card-header" style="display: flex; justify-content: space-between; align-items: center;">
        <h2 class="ms-card-title" style="margin: 0;">
            <i class="fas fa-truck-loading"></i> Rice Procured from Different Sources
        </h2>
        <div style="display: flex; gap: 8px;">
            <a asp-action="Create" class="ms-btn ms-btn-primary">
                <i class="fas fa-plus"></i> New Procurement
            </a>
        </div>
    </div>

    <div class="ms-card-body">
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="ms-datatable table table-striped table-hover" data-export="true" data-page-length="25">
                    <thead>
                        <tr>
                            <th>Date</th>
                            <th>Item (Variety)</th>
                            <th>Procured From</th>
                            <th>Procured By</th>
                            <th>Quantity</th>
                            <th>Rate</th>
                            <th>Total Amount</th>
                            <th>Payment Mode</th>
                            <th>Payment Status</th>
                            <th>Balance</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.OrderByDescending(x => x.Date))
                        {
                            <tr>
                                <td data-order="@item.Date.ToString("yyyyMMdd")">
                                    @item.Date.ToString("dd-MMM-yyyy")
                                </td>
                                <td><strong>@item.ItemDescription</strong></td>
                                <td>@item.ProcuredFrom</td>
                                <td>@item.ProcuredBy</td>
                                <td class="text-end">@item.Quantity.ToString("N2") kg</td>
                                <td class="text-end">₹@item.Rate.ToString("N2")</td>
                                <td class="text-end"><strong>₹@item.TotalAmount.ToString("N2")</strong></td>
                                <td>
                                    @if (!string.IsNullOrEmpty(item.PaymentMode))
                                    {
                                        <span class="ms-badge ms-badge-info">@item.PaymentMode</span>
                                    }
                                    else
                                    {
                                        <span class="text-muted">-</span>
                                    }
                                </td>
                                <td>
                                    @if (item.PaymentStatus == "Paid")
                                    {
                                        <span class="ms-badge ms-badge-success">
                                            <i class="fas fa-check-circle"></i> Paid
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="ms-badge ms-badge-warning">
                                            <i class="fas fa-clock"></i> Pending
                                        </span>
                                    }
                                </td>
                                <td class="text-end">
                                    @if (item.Balance > 0)
                                    {
                                        <span class="ms-text-danger"><strong>₹@item.Balance.ToString("N2")</strong></span>
                                    }
                                    else
                                    {
                                        <span class="ms-text-success">Nil</span>
                                    }
                                </td>
                                <td>
                                    <div class="ms-action-buttons">
                                        <a asp-action="Details" asp-route-id="@item.Id"
                                           class="ms-action-btn btn-view" title="View Details"
                                           data-bs-toggle="tooltip">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id"
                                           class="ms-action-btn btn-edit" title="Edit"
                                           data-bs-toggle="tooltip">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id"
                                           class="ms-action-btn btn-delete" title="Delete"
                                           data-bs-toggle="tooltip"
                                           data-confirm="Are you sure you want to delete this procurement record?">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="alert alert-info text-center">
                <i class="fas fa-truck-loading fa-3x mb-3"></i>
                <h5>No External Rice Procurement Records</h5>
                <p>Record rice purchased from other mills or traders.</p>
                <a asp-action="Create" class="btn btn-primary">Add First Record</a>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // DataTables will be automatically initialized by site-enhanced.js
            // Export buttons (Excel, PDF, CSV, Print) are enabled via data-export="true"
        });
    </script>
}