@model RMMS.Models.RiceProcurementExternal
@{
    ViewData["Title"] = "New External Rice Procurement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h3>New External Rice Procurement</h3>
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <label>Date</label>
                        <input asp-for="Date" type="date" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label>Item Description</label>
                        <input asp-for="ItemDescription" class="form-control" />
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-6">
                        <label>Procured From</label>
                        <input asp-for="ProcuredFrom" class="form-control" />
                    </div>
                    <div class="col-md-6">
                        <label>Procured By</label>
                        <input asp-for="ProcuredBy" class="form-control" />
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-4">
                        <label>Quantity (kg)</label>
                        <input asp-for="Quantity" type="number" step="0.01" class="form-control" id="qty" />
                    </div>
                    <div class="col-md-4">
                        <label>Rate per kg</label>
                        <input asp-for="Rate" type="number" step="0.01" class="form-control" id="rate" />
                    </div>
                    <div class="col-md-4">
                        <label>Total Amount</label>
                        <input asp-for="TotalAmount" type="number" class="form-control" id="total" readonly />
                    </div>
                </div>
                <div class="row mt-3">
                    <div class="col-md-4">
                        <label>Payment Mode</label>
                        <select asp-for="PaymentMode" class="form-control">
                            <option value="Cash">Cash</option>
                            <option value="Online">Online</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label>Payment Status</label>
                        <select asp-for="PaymentStatus" class="form-control">
                            <option value="Pending">Pending</option>
                            <option value="Paid">Paid</option>
                        </select>
                    </div>
                    <div class="col-md-4">
                        <label>Balance</label>
                        <input asp-for="Balance" type="number" class="form-control" />
                    </div>
                </div>
                <div class="mt-3">
                    <label>Remarks</label>
                    <textarea asp-for="Remarks" class="form-control"></textarea>
                </div>
                <div class="mt-3">
                    <button type="submit" class="btn btn-success">Save</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
    document.getElementById('qty').addEventListener('input', calculate);
    document.getElementById('rate').addEventListener('input', calculate);
    function calculate() {
        var q = parseFloat(document.getElementById('qty').value) || 0;
        var r = parseFloat(document.getElementById('rate').value) || 0;
        document.getElementById('total').value = (q * r).toFixed(2);
    }
</script>