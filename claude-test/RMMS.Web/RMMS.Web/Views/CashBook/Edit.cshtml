@model RMMS.Models.CashBook
@{
    ViewData["Title"] = "Edit Cash Book Entry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow">
        <div class="card-header bg-warning text-white">
            <h3><i class="fas fa-edit"></i> Edit Cash Book Entry</h3>
        </div>

        <div class="card-body">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="CreatedBy" />
                <input type="hidden" asp-for="CreatedDate" />
                <input type="hidden" asp-for="IsActive" />

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                }

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TransactionDate" class="control-label"></label>
                            <input asp-for="TransactionDate" type="date" class="form-control" />
                            <span asp-validation-for="TransactionDate" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="VoucherNumber" class="control-label"></label>
                            <input asp-for="VoucherNumber" class="form-control" placeholder="Enter voucher number" />
                            <span asp-validation-for="VoucherNumber" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Particulars" class="control-label"></label>
                            <textarea asp-for="Particulars" class="form-control" rows="3" placeholder="Enter transaction details"></textarea>
                            <span asp-validation-for="Particulars" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Receipts" class="control-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">₹</span>
                                <input asp-for="Receipts" type="number" step="0.01" class="form-control" id="receipts" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Receipts" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Payments" class="control-label"></label>
                            <div class="input-group">
                                <span class="input-group-text">₹</span>
                                <input asp-for="Payments" type="number" step="0.01" class="form-control" id="payments" placeholder="0.00" />
                            </div>
                            <span asp-validation-for="Payments" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Remarks" class="control-label"></label>
                            <textarea asp-for="Remarks" class="form-control" rows="2" placeholder="Any additional remarks..."></textarea>
                            <span asp-validation-for="Remarks" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="fas fa-save"></i> Update Entry
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info btn-lg">
                        <i class="fas fa-eye"></i> View Details
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-lg">
                        <i class="fas fa-times"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            // Ensure only one of receipts or payments has value
            $('#receipts').on('input', function() {
                if (parseFloat($(this).val()) > 0) {
                    $('#payments').val('0');
                }
            });

            $('#payments').on('input', function() {
                if (parseFloat($(this).val()) > 0) {
                    $('#receipts').val('0');
                }
            });
        });
    </script>
}
