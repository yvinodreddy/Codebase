@model RMMS.Common.Pagination.PagedResult<RMMS.Models.Inventory.InventoryLedger>
@{
    ViewData["Title"] = "Inventory Ledger";
    string GetSortIcon(string columnName)
    {
        if (ViewBag.CurrentSort != columnName)
            return "<i class='fas fa-sort text-muted'></i>";

        return ViewBag.CurrentOrder == "asc"
            ? "<i class='fas fa-sort-up'></i>"
            : "<i class='fas fa-sort-down'></i>";
    }

    string GetSortUrl(string columnName)
    {
        var order = ViewBag.CurrentSort == columnName && ViewBag.CurrentOrder == "asc" ? "desc" : "asc";
        return $"?searchTerm={ViewBag.SearchTerm}&warehouseId={ViewBag.WarehouseId}&filter={ViewBag.Filter}&sortBy={columnName}&sortOrder={order}&page=1";
    }
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-boxes"></i> Inventory Ledger</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> New Inventory Entry
        </a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Inventory Value</h5>
                    <h3>₹@(ViewBag.TotalValue?.ToString("N2") ?? "0.00")</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title">Low Stock Items</h5>
                    <h3>@(ViewBag.LowStockCount ?? 0)</h3>
                    <a asp-action="Index" asp-route-filter="low" class="text-white"><small>View Details →</small></a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title">Reorder Required</h5>
                    <h3>@(ViewBag.ReorderCount ?? 0)</h3>
                    <a asp-action="Index" asp-route-filter="reorder" class="text-white"><small>View Details →</small></a>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title">Total Items</h5>
                    <h3>@Model.TotalItems</h3>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="searchTerm" value="@ViewBag.SearchTerm"
                           class="form-control" placeholder="Search by product or warehouse...">
                    <input type="hidden" name="sortBy" value="@ViewBag.CurrentSort" />
                    <input type="hidden" name="sortOrder" value="@ViewBag.CurrentOrder" />
                </div>
                <div class="col-md-3">
                    <select name="warehouseId" class="form-select">
                        <option value="">All Warehouses</option>
                        @foreach (var item in (SelectList)ViewBag.Warehouses)
                        {
                            <option value="@item.Value" selected="@(item.Selected)">@item.Text</option>
                        }
                    </select>
                </div>
                <div class="col-md-3">
                    <select name="filter" class="form-select">
                        <option value="">All Items</option>
                        <option value="low" selected="@(ViewBag.Filter == "low")">Low Stock</option>
                        <option value="reorder" selected="@(ViewBag.Filter == "reorder")">Reorder Required</option>
                        <option value="over" selected="@(ViewBag.Filter == "over")">Overstock</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-filter"></i> Filter
                    </button>
                </div>
            </form>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover table-sm">
                    <thead class="table-dark">
                        <tr>
                            <th>
                                <a href="@GetSortUrl("ProductCode")" class="text-white text-decoration-none">
                                    Product Code @Html.Raw(GetSortIcon("ProductCode"))
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("ProductName")" class="text-white text-decoration-none">
                                    Product Name @Html.Raw(GetSortIcon("ProductName"))
                                </a>
                            </th>
                            <th>
                                <a href="@GetSortUrl("WarehouseName")" class="text-white text-decoration-none">
                                    Warehouse @Html.Raw(GetSortIcon("WarehouseName"))
                                </a>
                            </th>
                            <th>Zone</th>
                            <th>
                                <a href="@GetSortUrl("CurrentStock")" class="text-white text-decoration-none">
                                    Current Stock @Html.Raw(GetSortIcon("CurrentStock"))
                                </a>
                            </th>
                            <th>Min/Max</th>
                            <th>Reorder Level</th>
                            <th>Unit Cost</th>
                            <th>Total Value</th>
                            <th>
                                <a href="@GetSortUrl("Status")" class="text-white text-decoration-none">
                                    Status @Html.Raw(GetSortIcon("Status"))
                                </a>
                            </th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Items.Any())
                        {
                            @foreach (var item in Model.Items)
                            {
                                <tr class="@(item.IsLowStock ? "table-warning" : item.IsOverStock ? "table-info" : "")">
                                    <td>
                                        <small class="text-muted">@item.Product?.ProductCode</small>
                                    </td>
                                    <td>
                                        <strong>@item.Product?.ProductName</strong>
                                    </td>
                                    <td>
                                        @item.Warehouse?.WarehouseName<br>
                                        <small class="text-muted">@item.Warehouse?.WarehouseCode</small>
                                    </td>
                                    <td>@(item.Zone?.ZoneName ?? "-")</td>
                                    <td>
                                        <strong>@item.CurrentStock.ToString("N2")</strong>
                                        @if (item.CurrentStock <= 0)
                                        {
                                            <br><span class="badge bg-danger">Out of Stock</span>
                                        }
                                    </td>
                                    <td>
                                        <small>@item.MinimumLevel.ToString("N2") / @item.MaximumLevel.ToString("N2")</small>
                                    </td>
                                    <td>@item.ReorderLevel.ToString("N2")</td>
                                    <td>₹@item.UnitCost.ToString("N2")</td>
                                    <td>₹@item.TotalValue.ToString("N2")</td>
                                    <td>
                                        <span class="badge bg-@(item.CurrentStock <= 0 ? "danger" : item.IsLowStock ? "warning" : item.IsOverStock ? "info" : item.NeedsReorder ? "secondary" : "success")">
                                            @item.StockStatus
                                        </span>
                                    </td>
                                    <td>
                                        <div class="btn-group btn-group-sm" role="group">
                                            <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info" title="Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger" title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="11" class="text-center py-4">
                                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                                    <p class="text-muted">No inventory records found.</p>
                                    @if (!string.IsNullOrEmpty(ViewBag.SearchTerm))
                                    {
                                        <a href="@Url.Action("Index")" class="btn btn-sm btn-outline-primary">Clear Search</a>
                                    }
                                    else
                                    {
                                        <a asp-action="Create" class="btn btn-sm btn-outline-primary">Create your first inventory entry</a>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
        <div class="card-footer">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <strong>Showing @Model.Items.Count of @Model.TotalItems items</strong>
                </div>
                <div class="col-md-6">
                    @await Html.PartialAsync("_PaginationPartial", Model)
                </div>
            </div>
        </div>
    </div>
</div>
