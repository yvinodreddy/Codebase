@model RMMS.Models.Inventory.InventoryLedger
@{
    ViewData["Title"] = "Delete Inventory Entry";
}

<div class="container">
    <h2 class="text-danger"><i class="fas fa-exclamation-triangle"></i> Delete Inventory Entry</h2>
    <hr />

    <div class="alert alert-warning">
        <strong>Warning!</strong> Are you sure you want to delete this inventory entry?
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Product:</dt>
                <dd class="col-sm-9">
                    <strong>@Model.Product?.ProductName</strong> (@Model.Product?.ProductCode)
                </dd>

                <dt class="col-sm-3">Warehouse:</dt>
                <dd class="col-sm-9">
                    <strong>@Model.Warehouse?.WarehouseName</strong> (@Model.Warehouse?.WarehouseCode)
                </dd>

                <dt class="col-sm-3">Current Stock:</dt>
                <dd class="col-sm-9">
                    <strong>@Model.CurrentStock.ToString("N3")</strong>
                    @if (Model.CurrentStock > 0)
                    {
                        <br><span class="text-danger">⚠️ Warning: This entry has stock!</span>
                    }
                </dd>

                <dt class="col-sm-3">Total Value:</dt>
                <dd class="col-sm-9">₹@Model.TotalValue.ToString("N2")</dd>

                <dt class="col-sm-3">Stock Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.IsLowStock ? "warning" : Model.IsOverStock ? "info" : "success")">
                        @Model.StockStatus
                    </span>
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <div class="d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> No, Keep It
            </a>
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash"></i> Yes, Delete It
            </button>
        </div>
    </form>
</div>
