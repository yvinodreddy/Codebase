@model RMMS.Models.Inventory.InventoryLedger
@{
    ViewData["Title"] = "Inventory Details";
}

<div class="container">
    <h2><i class="fas fa-info-circle"></i> Inventory Details</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white">
                    <h5>Product & Location</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Product:</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.Product?.ProductName</strong><br>
                            <small class="text-muted">Code: @Model.Product?.ProductCode</small>
                        </dd>

                        <dt class="col-sm-4">Warehouse:</dt>
                        <dd class="col-sm-8">
                            <strong>@Model.Warehouse?.WarehouseName</strong><br>
                            <small class="text-muted">Code: @Model.Warehouse?.WarehouseCode</small>
                        </dd>

                        <dt class="col-sm-4">Storage Zone:</dt>
                        <dd class="col-sm-8">@(Model.Zone?.ZoneName ?? "Not assigned")</dd>
                    </dl>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-success text-white">
                    <h5>Stock Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Current Stock:</dt>
                        <dd class="col-sm-8">
                            <h4>@Model.CurrentStock.ToString("N3")</h4>
                            <span class="badge bg-@(Model.CurrentStock <= 0 ? "danger" : Model.IsLowStock ? "warning" : Model.IsOverStock ? "info" : Model.NeedsReorder ? "secondary" : "success")">
                                @Model.StockStatus
                            </span>
                        </dd>

                        <dt class="col-sm-4">Minimum Level:</dt>
                        <dd class="col-sm-8">@Model.MinimumLevel.ToString("N3")</dd>

                        <dt class="col-sm-4">Maximum Level:</dt>
                        <dd class="col-sm-8">@Model.MaximumLevel.ToString("N3")</dd>

                        <dt class="col-sm-4">Reorder Level:</dt>
                        <dd class="col-sm-8">@Model.ReorderLevel.ToString("N3")</dd>

                        <dt class="col-sm-4">Utilization:</dt>
                        <dd class="col-sm-8">
                            <div class="progress" style="height: 25px;">
                                <div class="progress-bar @(Model.IsLowStock ? "bg-warning" : Model.IsOverStock ? "bg-danger" : "bg-success")"
                                     role="progressbar"
                                     style="width: @Model.UtilizationPercentage%"
                                     aria-valuenow="@Model.UtilizationPercentage"
                                     aria-valuemin="0"
                                     aria-valuemax="100">
                                    @Model.UtilizationPercentage.ToString("N1")%
                                </div>
                            </div>
                        </dd>
                    </dl>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-info text-white">
                    <h5>Financial Information</h5>
                </div>
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-4">Unit Cost:</dt>
                        <dd class="col-sm-8">₹@Model.UnitCost.ToString("N2")</dd>

                        <dt class="col-sm-4">Total Value:</dt>
                        <dd class="col-sm-8"><strong>₹@Model.TotalValue.ToString("N2")</strong></dd>

                        <dt class="col-sm-4">Last Movement:</dt>
                        <dd class="col-sm-8">@(Model.LastMovementDate?.ToString("dd MMM yyyy") ?? "No movements yet")</dd>

                        <dt class="col-sm-4">Last Updated:</dt>
                        <dd class="col-sm-8">@Model.LastUpdated.ToString("dd MMM yyyy HH:mm")</dd>
                    </dl>
                </div>
            </div>

            @if (!string.IsNullOrWhiteSpace(Model.Remarks))
            {
                <div class="card mb-3">
                    <div class="card-header">
                        <h5>Remarks</h5>
                    </div>
                    <div class="card-body">
                        @Model.Remarks
                    </div>
                </div>
            }

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
