@model RMMS.Models.Inventory.InventoryLedger
@{
    ViewData["Title"] = "Create Inventory Entry";
}

<div class="container">
    <h2><i class="fas fa-plus"></i> Create Inventory Entry</h2>
    <hr />

    <div class="row">
        <div class="col-md-8">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="card mb-3">
                    <div class="card-header bg-primary text-white">
                        <h5>Location & Product</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="ProductId" class="form-label"></label>
                                <select asp-for="ProductId" class="form-select" asp-items="ViewBag.Products">
                                    <option value="">-- Select Product --</option>
                                </select>
                                <span asp-validation-for="ProductId" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="WarehouseId" class="form-label"></label>
                                <select asp-for="WarehouseId" class="form-select" asp-items="ViewBag.Warehouses">
                                    <option value="">-- Select Warehouse --</option>
                                </select>
                                <span asp-validation-for="WarehouseId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-header bg-success text-white">
                        <h5>Stock Levels</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CurrentStock" class="form-label"></label>
                                <input asp-for="CurrentStock" class="form-control" type="number" step="0.001" />
                                <span asp-validation-for="CurrentStock" class="text-danger"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="UnitCost" class="form-label"></label>
                                <input asp-for="UnitCost" class="form-control" type="number" step="0.01" />
                                <span asp-validation-for="UnitCost" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label asp-for="MinimumLevel" class="form-label"></label>
                                <input asp-for="MinimumLevel" class="form-control" type="number" step="0.001" />
                                <span asp-validation-for="MinimumLevel" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="MaximumLevel" class="form-label"></label>
                                <input asp-for="MaximumLevel" class="form-control" type="number" step="0.001" />
                                <span asp-validation-for="MaximumLevel" class="text-danger"></span>
                            </div>
                            <div class="col-md-4 mb-3">
                                <label asp-for="ReorderLevel" class="form-label"></label>
                                <input asp-for="ReorderLevel" class="form-control" type="number" step="0.001" />
                                <span asp-validation-for="ReorderLevel" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card mb-3">
                    <div class="card-body">
                        <div class="mb-3">
                            <label asp-for="Remarks" class="form-label"></label>
                            <textarea asp-for="Remarks" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Remarks" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Create
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
