@{
    ViewData["Title"] = ViewBag.ReportTitle ?? "Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-chart-bar"></i> @ViewBag.ReportTitle
                    </h3>
                    @if (ViewBag.ReportDate != null)
                    {
                        <small class="d-block mt-1">Date: @ViewBag.ReportDate</small>
                    }
                    @if (ViewBag.ReportPeriod != null)
                    {
                        <small class="d-block mt-1">Period: @ViewBag.ReportPeriod</small>
                    }
                </div>

                <div class="card-body">
                    <!-- Report Status Message -->
                    <div class="alert alert-info">
                        <h5><i class="fas fa-info-circle"></i> Report Status</h5>
                        <p>This report is being prepared. Once your database connection is configured and data is available, the report will display here.</p>
                    </div>

                    <!-- Placeholder for Report Content -->
                    <div class="row mt-4">
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-database fa-3x text-muted mb-2"></i>
                                    <h6>Data Source</h6>
                                    <small class="text-muted">Connecting...</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-calendar fa-3x text-muted mb-2"></i>
                                    <h6>Report Period</h6>
                                    <small class="text-muted">@(ViewBag.ReportPeriod ?? "Current Month")</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-clock fa-3x text-muted mb-2"></i>
                                    <h6>Last Updated</h6>
                                    <small class="text-muted">@DateTime.Now.ToString("dd-MMM-yyyy hh:mm tt")</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-user fa-3x text-muted mb-2"></i>
                                    <h6>Generated By</h6>
                                    <small class="text-muted">@(User.Identity?.Name ?? "System")</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Reports")" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to Reports
                        </a>
                        <button class="btn btn-primary" onclick="window.print()">
                            <i class="fas fa-print"></i> Print Report
                        </button>
                        <button class="btn btn-success" disabled>
                            <i class="fas fa-file-excel"></i> Export to Excel
                        </button>
                        <button class="btn btn-danger" disabled>
                            <i class="fas fa-file-pdf"></i> Export to PDF
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Placeholder for report-specific JavaScript
        $(document).ready(function() {
            console.log('Report loaded: @ViewBag.ReportTitle');
        });
    </script>
}