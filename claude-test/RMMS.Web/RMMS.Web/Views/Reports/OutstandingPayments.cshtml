@{
    ViewData["Title"] = "Outstanding Payments Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var payables = ViewBag.Payables as List<RMMS.Models.PayableOverdue> ?? new List<RMMS.Models.PayableOverdue>();
    var receivables = ViewBag.Receivables as List<RMMS.Models.ReceivableOverdue> ?? new List<RMMS.Models.ReceivableOverdue>();
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-danger text-white">
            <h3><i class="fas fa-exclamation-triangle"></i> Outstanding Payments Report</h3>
        </div>

        <div class="card-body">
            <!-- Outstanding Summary Dashboard -->
            <div class="row mb-4">
                <div class="col-md-6">
                    <div class="card border-danger">
                        <div class="card-header bg-danger text-white">
                            <h5>Payables (What We Owe)</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-6">
                                    <h6>Total Outstanding</h6>
                                    <h4 class="text-danger">₹ @string.Format("{0:N2}", ViewBag.TotalPayables)</h4>
                                </div>
                                <div class="col-6">
                                    <h6>Overdue Amount</h6>
                                    <h4 class="text-danger">₹ @string.Format("{0:N2}", ViewBag.OverduePayableAmount)</h4>
                                </div>
                            </div>
                            <div class="progress mt-3" style="height: 20px;">
                                @{
                                    decimal payablePercent = ViewBag.TotalPayables > 0 ?
                                    (ViewBag.OverduePayableAmount / ViewBag.TotalPayables) * 100 : 0;
                                }
                                <div class="progress-bar bg-danger" role="progressbar"
                                     style="width: @payablePercent%">
                                    @payablePercent.ToString("N1")% Overdue
                                </div>
                            </div>
                            <small class="text-muted">
                                @ViewBag.NumberOfVendors vendors | Oldest: @ViewBag.OldestPayableDays days
                            </small>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card border-success">
                        <div class="card-header bg-success text-white">
                            <h5>Receivables (What Others Owe Us)</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-6">
                                    <h6>Total Outstanding</h6>
                                    <h4 class="text-success">₹ @string.Format("{0:N2}", ViewBag.TotalReceivables)</h4>
                                </div>
                                <div class="col-6">
                                    <h6>Overdue Amount</h6>
                                    <h4 class="text-warning">₹ @string.Format("{0:N2}", ViewBag.OverdueReceivableAmount)</h4>
                                </div>
                            </div>
                            <div class="progress mt-3" style="height: 20px;">
                                @{
                                    decimal receivablePercent = ViewBag.TotalReceivables > 0 ?
                                    (ViewBag.OverdueReceivableAmount / ViewBag.TotalReceivables) * 100 : 0;
                                }
                                <div class="progress-bar bg-warning" role="progressbar"
                                     style="width: @receivablePercent%">
                                    @receivablePercent.ToString("N1")% Overdue
                                </div>
                            </div>
                            <small class="text-muted">
                                @ViewBag.NumberOfCustomers customers | Oldest: @ViewBag.OldestReceivableDays days
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Payables Detail Table -->
            <div class="card mb-4">
                <div class="card-header bg-danger text-white">
                    <h5>Outstanding Payables Detail</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Supplier</th>
                                    <th>Invoice No</th>
                                    <th>Date</th>
                                    <th>Amount</th>
                                    <th>Paid</th>
                                    <th>Balance</th>
                                    <th>Due Date</th>
                                    <th>Days Overdue</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var payable in payables.OrderByDescending(p => p.DaysOverdue))
                                {
                                    <tr class="@(payable.DaysOverdue > 30 ? "table-danger" : payable.DaysOverdue > 0 ? "table-warning" : "")">
                                        <td>@payable.SupplierName</td>
                                        <td>@payable.InvoiceNumber</td>
                                        <td>@payable.PurchaseDate.ToString("dd-MMM")</td>
                                        <td>₹ @payable.InvoiceAmount.ToString("N2")</td>
                                        <td>₹ @payable.AmountPaid.ToString("N2")</td>
                                        <td class="fw-bold">₹ @payable.BalancePayable.ToString("N2")</td>
                                        <td>@payable.DueDate.ToString("dd-MMM")</td>
                                        <td>
                                            @if (payable.DaysOverdue > 0)
                                            {
                                                <span class="badge bg-danger">@payable.DaysOverdue days</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Current</span>
                                            }
                                        </td>
                                        <td>
                                            @if (payable.DaysOverdue > 60)
                                            {
                                                <span class="badge bg-danger">Critical</span>
                                            }
                                            else if (payable.DaysOverdue > 30)
                                            {
                                                <span class="badge bg-warning">Urgent</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info">Normal</span>
                                            }
                                        </td>
                                        <td>
                                            <a asp-controller="PayablesOverdue" asp-action="RecordPayment" asp-route-id="@payable.Id" class="btn btn-sm btn-success">
                                                <i class="fas fa-rupee-sign"></i> Pay Now
                                            </a>
                                        </td>
                                    </tr>
                                }
                                @if (!payables.Any())
                                {
                                    <tr>
                                        <td colspan="10" class="text-center">No outstanding payables</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Receivables Detail Table -->
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5>Outstanding Receivables Detail</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Customer</th>
                                    <th>Invoice No</th>
                                    <th>Date</th>
                                    <th>Amount</th>
                                    <th>Received</th>
                                    <th>Balance</th>
                                    <th>Due Date</th>
                                    <th>Days Overdue</th>
                                    <th>Status</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var receivable in receivables.OrderByDescending(r => r.DaysOverdue))
                                {
                                    <tr class="@(receivable.DaysOverdue > 30 ? "table-warning" : "")">
                                        <td>@receivable.CustomerName</td>
                                        <td>@receivable.InvoiceNumber</td>
                                        <td>@receivable.InvoiceDate.ToString("dd-MMM")</td>
                                        <td>₹ @receivable.InvoiceAmount.ToString("N2")</td>
                                        <td>₹ @receivable.AmountReceived.ToString("N2")</td>
                                        <td class="fw-bold">₹ @receivable.BalanceDue.ToString("N2")</td>
                                        <td>@receivable.DueDate.ToString("dd-MMM")</td>
                                        <td>
                                            @if (receivable.DaysOverdue > 0)
                                            {
                                                <span class="badge bg-warning">@receivable.DaysOverdue days</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">Current</span>
                                            }
                                        </td>
                                        <td>
                                            @if (receivable.DaysOverdue > 60)
                                            {
                                                <span class="badge bg-danger">Critical</span>
                                            }
                                            else if (receivable.DaysOverdue > 30)
                                            {
                                                <span class="badge bg-warning">Follow-up</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-info">Normal</span>
                                            }
                                        </td>
                                        <td>
                                            <form asp-controller="ReceivablesOverdue" asp-action="SendReminder" asp-route-id="@receivable.Id" method="post" style="display:inline;">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-warning" onclick="return confirm('Send payment reminder to @receivable.CustomerName?')">
                                                    <i class="fas fa-envelope"></i> Send Reminder
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                                @if (!receivables.Any())
                                {
                                    <tr>
                                        <td colspan="10" class="text-center">No outstanding receivables</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="mt-4">
                <a href="@Url.Action("Index", "Reports")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
                <button class="btn btn-primary" onclick="window.print()">
                    <i class="fas fa-print"></i> Print
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Initialize DataTables for both payables and receivables tables for paging and sorting
        $(document).ready(function() {
            // Only initialize if tables have data
            if ($('.table-hover').length > 0) {
                $('.table-hover').DataTable({
                    "paging": true,
                    "pageLength": 16,
                    "ordering": true,
                    "searching": true,
                    "lengthChange": true,
                    "lengthMenu": [[10, 16, 25, 50, 100, -1], [10, 16, 25, 50, 100, "All"]],
                    "info": true,
                    "autoWidth": false,
                    "responsive": true,
                    "language": {
                        "search": "Search Outstanding:",
                        "lengthMenu": "Show _MENU_ entries",
                        "info": "Showing _START_ to _END_ of _TOTAL_ outstanding payments"
                    },
                    "order": [[7, "desc"]] // Sort by Days Overdue descending
                });
            }
        });
    </script>
}