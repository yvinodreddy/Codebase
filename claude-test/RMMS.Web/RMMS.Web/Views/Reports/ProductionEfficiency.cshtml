@{
    ViewData["Title"] = "Production Efficiency Report";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-chart-line"></i> Production Efficiency Report
                        </h4>
                        <form method="get" class="form-inline">
                            <div class="input-group input-group-sm">
                                <span class="input-group-text">From</span>
                                <input type="date" name="startDate" class="form-control" value="@Context.Request.Query["startDate"]" />
                                <span class="input-group-text">To</span>
                                <input type="date" name="endDate" class="form-control" value="@Context.Request.Query["endDate"]" />
                                <button type="submit" class="btn btn-light">
                                    <i class="fas fa-filter"></i> Filter
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Date Range Display -->
                    <div class="alert alert-info">
                        <i class="fas fa-calendar-alt"></i>
                        Report Period: <strong>@ViewBag.StartDate</strong> to <strong>@ViewBag.EndDate</strong>
                    </div>

                    <!-- Key Efficiency Metrics -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card border-primary">
                                <div class="card-body text-center">
                                    <h6 class="text-muted">Efficiency Rate</h6>
                                    <h2 class="@(ViewBag.EfficiencyRate >= 90 ? "text-success" : ViewBag.EfficiencyRate >= 75 ? "text-warning" : "text-danger")">
                                        @ViewBag.EfficiencyRate.ToString("N1")%
                                    </h2>
                                    <small class="text-muted">Actual vs Planned</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-success">
                                <div class="card-body text-center">
                                    <h6 class="text-muted">On-Time Rate</h6>
                                    <h2 class="@(ViewBag.OnTimeRate >= 90 ? "text-success" : ViewBag.OnTimeRate >= 75 ? "text-warning" : "text-danger")">
                                        @ViewBag.OnTimeRate.ToString("N1")%
                                    </h2>
                                    <small class="text-muted">Orders Completed on Time</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-info">
                                <div class="card-body text-center">
                                    <h6 class="text-muted">Avg Cycle Time</h6>
                                    <h2 class="text-info">@ViewBag.AvgCycleTime.ToString("N1")</h2>
                                    <small class="text-muted">Hours per Batch</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-warning">
                                <div class="card-body text-center">
                                    <h6 class="text-muted">Total Orders</h6>
                                    <h2 class="text-warning">@ViewBag.TotalOrders</h2>
                                    <small class="text-muted">Completed Orders</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Planned vs Actual -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header bg-secondary text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-balance-scale"></i> Planned vs Actual Production
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <canvas id="plannedActualChart" height="200"></canvas>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header bg-secondary text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-percentage"></i> Efficiency Breakdown
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span><strong>Planned Quantity</strong></span>
                                            <span class="badge bg-primary">@ViewBag.PlannedQuantity.ToString("N2") Q</span>
                                        </div>
                                        <div class="progress mb-3" style="height: 25px;">
                                            <div class="progress-bar bg-primary" style="width: 100%">100%</div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span><strong>Actual Quantity</strong></span>
                                            <span class="badge bg-success">@ViewBag.ActualQuantity.ToString("N2") Q</span>
                                        </div>
                                        <div class="progress mb-3" style="height: 25px;">
                                            <div class="progress-bar bg-success" style="width: @ViewBag.EfficiencyRate%">@ViewBag.EfficiencyRate.ToString("N1")%</div>
                                        </div>
                                    </div>
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between mb-2">
                                            <span><strong>On-Time Orders</strong></span>
                                            <span class="badge bg-info">@ViewBag.OnTimeOrders / @ViewBag.TotalOrders</span>
                                        </div>
                                        <div class="progress mb-3" style="height: 25px;">
                                            <div class="progress-bar bg-info" style="width: @ViewBag.OnTimeRate%">@ViewBag.OnTimeRate.ToString("N1")%</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Top and Low Performers -->
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header bg-success text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-star"></i> Top 5 Performing Batches
                                    </h5>
                                </div>
                                <div class="card-body">
                                    @if (ViewBag.TopBatches.Count > 0)
                                    {
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Batch #</th>
                                                    <th>Date</th>
                                                    <th class="text-right">Quality</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var batch in ViewBag.TopBatches)
                                                {
                                                    <tr>
                                                        <td><strong>@batch.BatchNumber</strong></td>
                                                        <td>@batch.BatchDate.ToString("dd-MMM-yyyy")</td>
                                                        <td class="text-right">
                                                            <span class="badge bg-success">@(batch.QualityScore?.ToString("N1") ?? "N/A")</span>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    }
                                    else
                                    {
                                        <div class="alert alert-info mb-0">
                                            <i class="fas fa-info-circle"></i> No batch data available.
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card">
                                <div class="card-header bg-warning text-dark">
                                    <h5 class="mb-0">
                                        <i class="fas fa-exclamation-triangle"></i> Batches Needing Attention
                                    </h5>
                                </div>
                                <div class="card-body">
                                    @if (ViewBag.LowBatches.Count > 0)
                                    {
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Batch #</th>
                                                    <th>Date</th>
                                                    <th class="text-right">Quality</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var batch in ViewBag.LowBatches)
                                                {
                                                    <tr>
                                                        <td><strong>@batch.BatchNumber</strong></td>
                                                        <td>@batch.BatchDate.ToString("dd-MMM-yyyy")</td>
                                                        <td class="text-right">
                                                            @if (batch.QualityScore >= 6)
                                                            {
                                                                <span class="badge bg-warning">@(batch.QualityScore?.ToString("N1") ?? "N/A")</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-danger">@(batch.QualityScore?.ToString("N1") ?? "N/A")</span>
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    }
                                    else
                                    {
                                        <div class="alert alert-success mb-0">
                                            <i class="fas fa-check-circle"></i> All batches performing well!
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Production Orders Table -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-header bg-secondary text-white">
                                    <h5 class="mb-0">
                                        <i class="fas fa-clipboard-list"></i> Production Orders
                                    </h5>
                                </div>
                                <div class="card-body">
                                    @if (ViewBag.Orders.Count > 0)
                                    {
                                        <table class="table table-striped table-hover" id="ordersTable">
                                            <thead>
                                                <tr>
                                                    <th>Order #</th>
                                                    <th>Scheduled</th>
                                                    <th>Completed</th>
                                                    <th class="text-right">Target Qty</th>
                                                    <th class="text-right">Actual Qty</th>
                                                    <th class="text-right">Efficiency</th>
                                                    <th>On Time</th>
                                                    <th>Status</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var order in ViewBag.Orders)
                                                {
                                                    var efficiency = order.TargetQuantity > 0 ? (order.ActualQuantityProduced / order.TargetQuantity * 100) : 0;
                                                    var onTime = order.ActualCompletionDate <= order.ScheduledDate;
                                                    <tr>
                                                        <td><strong>@order.OrderNumber</strong></td>
                                                        <td>@order.ScheduledDate.ToString("dd-MMM-yyyy")</td>
                                                        <td>@order.ActualCompletionDate?.ToString("dd-MMM-yyyy")</td>
                                                        <td class="text-right">@order.TargetQuantity?.ToString("N2")</td>
                                                        <td class="text-right">@order.ActualQuantityProduced?.ToString("N2")</td>
                                                        <td class="text-right">
                                                            @if (efficiency >= 90)
                                                            {
                                                                <span class="badge bg-success">@efficiency.ToString("N1")%</span>
                                                            }
                                                            else if (efficiency >= 75)
                                                            {
                                                                <span class="badge bg-warning">@efficiency.ToString("N1")%</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-danger">@efficiency.ToString("N1")%</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            @if (onTime)
                                                            {
                                                                <span class="badge bg-success"><i class="fas fa-check"></i> Yes</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-danger"><i class="fas fa-times"></i> No</span>
                                                            }
                                                        </td>
                                                        <td>
                                                            <span class="badge bg-success">@order.Status</span>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    }
                                    else
                                    {
                                        <div class="alert alert-warning">
                                            <i class="fas fa-exclamation-triangle"></i> No production orders found for the selected period.
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="row mt-3">
                        <div class="col-12">
                            <a href="/Reports" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Back to Reports
                            </a>
                            <button class="btn btn-success" onclick="window.print()">
                                <i class="fas fa-print"></i> Print Report
                            </button>
                            <button class="btn btn-primary" onclick="exportToExcel()">
                                <i class="fas fa-file-excel"></i> Export to Excel
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Planned vs Actual Bar Chart
    var plannedQty = @ViewBag.PlannedQuantity;
    var actualQty = @ViewBag.ActualQuantity;

    var ctx = document.getElementById('plannedActualChart').getContext('2d');
    new Chart(ctx, {
        type: 'bar',
        data: {
            labels: ['Production Quantity (Quintals)'],
            datasets: [
                {
                    label: 'Planned',
                    data: [plannedQty],
                    backgroundColor: '#007bff',
                    borderWidth: 1
                },
                {
                    label: 'Actual',
                    data: [actualQty],
                    backgroundColor: '#28a745',
                    borderWidth: 1
                }
            ]
        },
        options: {
            responsive: true,
            maintainAspectRatio: true,
            plugins: {
                legend: {
                    display: true,
                    position: 'top'
                }
            },
            scales: {
                y: {
                    beginAtZero: true,
                    title: {
                        display: true,
                        text: 'Quantity (Quintals)'
                    }
                }
            }
        }
    });

    // Initialize DataTable
    $(document).ready(function() {
        $('#ordersTable').DataTable({
            order: [[1, 'desc']],
            pageLength: 10,
            responsive: true
        });
    });

    // Export to Excel function
    function exportToExcel() {
        alert('Excel export functionality will be implemented.');
        // TODO: Implement Excel export
    }
</script>
}
