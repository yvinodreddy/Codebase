@{
    ViewData["Title"] = "Stock Summary Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var stockData = ViewBag.StockData as Dictionary<string, object> ?? new Dictionary<string, object>();
}

<div class="container-fluid">
    <div class="card">
        <div class="card-header bg-warning text-dark">
            <h3><i class="fas fa-warehouse"></i> Stock Summary Report</h3>
            <p class="mb-0">Last Updated: @ViewBag.LastUpdated | Generated By: @ViewBag.GeneratedBy</p>
        </div>

        <div class="card-body">
            <!-- Stock Overview Dashboard providing immediate insights into inventory levels -->
            <div class="row mb-4">
                <div class="col-md-3">
                    <div class="card h-100 border-primary">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-seedling fa-3x text-primary me-3"></i>
                                <div>
                                    <h6 class="text-muted">Paddy Stock</h6>
                                    <h4>@(stockData.ContainsKey("PaddyStock") ? stockData["PaddyStock"] : 0) kg</h4>
                                    <small class="text-muted">Raw material</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card h-100 border-success">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-bowl-rice fa-3x text-success me-3"></i>
                                <div>
                                    <h6 class="text-muted">Rice Stock</h6>
                                    <h4>@(stockData.ContainsKey("RiceStock") ? stockData["RiceStock"] : 0) kg</h4>
                                    <small class="text-muted">Finished goods</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card h-100 border-info">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-boxes fa-3x text-info me-3"></i>
                                <div>
                                    <h6 class="text-muted">By-Products</h6>
                                    <h4>@(stockData.ContainsKey("ByProductStock") ? stockData["ByProductStock"] : 0) kg</h4>
                                    <small class="text-muted">Bran, Husk, etc.</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-3">
                    <div class="card h-100 border-danger">
                        <div class="card-body">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-rupee-sign fa-3x text-danger me-3"></i>
                                <div>
                                    <h6 class="text-muted">Total Stock Value</h6>
                                    <h4>₹ @string.Format("{0:N2}", ViewBag.TotalStockValue)</h4>
                                    <small class="text-muted">Current valuation</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Detailed Stock Breakdown Table -->
            <div class="card mb-4">
                <div class="card-header bg-light">
                    <h5>Detailed Stock Information</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-hover">
                            <thead class="table-dark">
                                <tr>
                                    <th>Category</th>
                                    <th>Item Type</th>
                                    <th>Opening Stock</th>
                                    <th>Inward (Received)</th>
                                    <th>Outward (Issued/Sold)</th>
                                    <th>Current Stock</th>
                                    <th>Unit</th>
                                    <th>Rate/kg</th>
                                    <th>Stock Value</th>
                                    <th>Status</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Paddy Section showing raw material inventory -->
                                <tr class="table-primary">
                                    <td colspan="10"><strong>RAW MATERIALS</strong></td>
                                </tr>
                                <tr>
                                    <td>Paddy</td>
                                    <td>Common Variety</td>
                                    <td>0</td>
                                    <td>0</td>
                                    <td>0</td>
                                    <td>0</td>
                                    <td>kg</td>
                                    <td>₹ 0.00</td>
                                    <td>₹ 0.00</td>
                                    <td><span class="badge bg-warning">Low Stock</span></td>
                                </tr>

                                <!-- Rice Products Section showing finished goods -->
                                <tr class="table-success">
                                    <td colspan="10"><strong>FINISHED GOODS</strong></td>
                                </tr>
                                <tr>
                                    <td>Rice</td>
                                    <td>Basmati</td>
                                    <td>0</td>
                                    <td>0</td>
                                    <td>0</td>
                                    <td>0</td>
                                    <td>kg</td>
                                    <td>₹ 0.00</td>
                                    <td>₹ 0.00</td>
                                    <td><span class="badge bg-info">Normal</span></td>
                                </tr>
                                <tr>
                                    <td>Rice</td>
                                    <td>Sona Masoori</td>
                                    <td>0</td>
                                    <td>0</td>
                                    <td>0</td>
                                    <td>0</td>
                                    <td>kg</td>
                                    <td>₹ 0.00</td>
                                    <td>₹ 0.00</td>
                                    <td><span class="badge bg-info">Normal</span></td>
                                </tr>

                                <!-- By-Products Section -->
                                <tr class="table-warning">
                                    <td colspan="10"><strong>BY-PRODUCTS</strong></td>
                                </tr>
                                <tr>
                                    <td>By-Product</td>
                                    <td>Bran</td>
                                    <td>0</td>
                                    <td>0</td>
                                    <td>0</td>
                                    <td>0</td>
                                    <td>kg</td>
                                    <td>₹ 0.00</td>
                                    <td>₹ 0.00</td>
                                    <td><span class="badge bg-success">Available</span></td>
                                </tr>
                                <tr>
                                    <td>By-Product</td>
                                    <td>Husk</td>
                                    <td>0</td>
                                    <td>0</td>
                                    <td>0</td>
                                    <td>0</td>
                                    <td>kg</td>
                                    <td>₹ 0.00</td>
                                    <td>₹ 0.00</td>
                                    <td><span class="badge bg-success">Available</span></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Stock Valuation Chart showing the distribution of inventory value -->
            <div class="row">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5>Stock Distribution</h5>
                        </div>
                        <div class="card-body">
                            <canvas id="stockDistributionChart"></canvas>
                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-header">
                            <h5>Stock Movement Trend</h5>
                        </div>
                        <div class="card-body">
                            <canvas id="stockTrendChart"></canvas>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="mt-4">
                <a href="@Url.Action("Index", "Reports")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Back
                </a>
                <button class="btn btn-primary" onclick="window.print()">
                    <i class="fas fa-print"></i> Print
                </button>
                <button class="btn btn-info" onclick="refreshStock()">
                    <i class="fas fa-sync"></i> Refresh
                </button>
                <a href="@Url.Action("StockMovement", "Reports")" class="btn btn-warning">
                    <i class="fas fa-exchange-alt"></i> View Movement
                </a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // Create stock distribution pie chart to visualize inventory composition
        var ctx1 = document.getElementById('stockDistributionChart').getContext('2d');
        new Chart(ctx1, {
            type: 'doughnut',
            data: {
                labels: ['Paddy', 'Rice', 'By-Products'],
                datasets: [{
                    data: [
        @(stockData.ContainsKey("PaddyStock") ? stockData["PaddyStock"] : 0),
        @(stockData.ContainsKey("RiceStock") ? stockData["RiceStock"] : 0),
        @(stockData.ContainsKey("ByProductStock") ? stockData["ByProductStock"] : 0)
                    ],
                    backgroundColor: [
                        'rgba(255, 206, 86, 0.8)',
                        'rgba(75, 192, 192, 0.8)',
                        'rgba(54, 162, 235, 0.8)'
                    ]
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: { position: 'bottom' }
                }
            }
        });

        function refreshStock() {
            location.reload();
        }
    </script>
}