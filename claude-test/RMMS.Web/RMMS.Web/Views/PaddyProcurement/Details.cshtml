@model RMMS.Models.PaddyProcurement
@{
    ViewData["Title"] = "Paddy Procurement Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h3><i class="fas fa-eye"></i> Paddy Procurement Details</h3>
        </div>

        <div class="card-body">
            <div class="row mb-4">
                <div class="col-md-12">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </a>
                </div>
            </div>

            <fieldset class="border p-3 mb-3">
                <legend class="w-auto px-2">Basic Information</legend>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.VoucherNumber):</label>
                            <p class="form-control-plaintext">@Model.VoucherNumber</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.ReceiptDate):</label>
                            <p class="form-control-plaintext">@Model.ReceiptDate.ToString("dd-MMM-yyyy")</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.StorageDate):</label>
                            <p class="form-control-plaintext">@(Model.StorageDate?.ToString("dd-MMM-yyyy") ?? "N/A")</p>
                        </div>
                    </div>
                </div>
            </fieldset>

            <fieldset class="border p-3 mb-3">
                <legend class="w-auto px-2">Supplier Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.SupplierName):</label>
                            <p class="form-control-plaintext">@Model.SupplierName</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.PurchaseOrderNumber):</label>
                            <p class="form-control-plaintext">@(Model.PurchaseOrderNumber ?? "N/A")</p>
                        </div>
                    </div>
                </div>
            </fieldset>

            <fieldset class="border p-3 mb-3">
                <legend class="w-auto px-2">Product Details</legend>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.PaddyVariety):</label>
                            <p class="form-control-plaintext">@Model.PaddyVariety</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Grade):</label>
                            <p class="form-control-plaintext">@(Model.Grade ?? "N/A")</p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.MoistureContent):</label>
                            <p class="form-control-plaintext">@(Model.MoistureContent?.ToString("N2") ?? "N/A") %</p>
                        </div>
                    </div>
                </div>
            </fieldset>

            <fieldset class="border p-3 mb-3">
                <legend class="w-auto px-2">Quantity & Weight Details</legend>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.QuantityReceived):</label>
                            <p class="form-control-plaintext">@Model.QuantityReceived.ToString("N2") kg</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.WeightPerBag):</label>
                            <p class="form-control-plaintext">@(Model.WeightPerBag?.ToString("N2") ?? "N/A") kg</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.TotalNetWeight):</label>
                            <p class="form-control-plaintext">@Model.TotalNetWeight.ToString("N2") kg</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.LossShrinkage):</label>
                            <p class="form-control-plaintext">@(Model.LossShrinkage?.ToString("N2") ?? "0.00") kg</p>
                        </div>
                    </div>
                </div>
            </fieldset>

            <fieldset class="border p-3 mb-3">
                <legend class="w-auto px-2">Stock Information</legend>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.OpeningStock):</label>
                            <p class="form-control-plaintext">@(Model.OpeningStock?.ToString("N2") ?? "0.00") kg</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Issues):</label>
                            <p class="form-control-plaintext">@(Model.Issues?.ToString("N2") ?? "0.00") kg</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.ClosingStock):</label>
                            <p class="form-control-plaintext text-success h5">@(Model.ClosingStock?.ToString("N2") ?? "0.00") kg</p>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.StorageLocation):</label>
                            <p class="form-control-plaintext">@(Model.StorageLocation ?? "N/A")</p>
                        </div>
                    </div>
                </div>
            </fieldset>

            <fieldset class="border p-3 mb-3">
                <legend class="w-auto px-2">Additional Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.ResponsiblePerson):</label>
                            <p class="form-control-plaintext">@(Model.ResponsiblePerson ?? "N/A")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">Status:</label>
                            <p class="form-control-plaintext">
                                @if (Model.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Inactive</span>
                                }
                            </p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label class="font-weight-bold">@Html.DisplayNameFor(model => model.Remarks):</label>
                            <p class="form-control-plaintext">@(Model.Remarks ?? "N/A")</p>
                        </div>
                    </div>
                </div>
            </fieldset>

            <fieldset class="border p-3 mb-3 bg-light">
                <legend class="w-auto px-2">Audit Information</legend>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">Created Date:</label>
                            <p class="form-control-plaintext">@Model.CreatedDate.ToString("dd-MMM-yyyy HH:mm")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">Created By:</label>
                            <p class="form-control-plaintext">@(Model.CreatedBy ?? "System")</p>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">Modified Date:</label>
                            <p class="form-control-plaintext">@(Model.ModifiedDate?.ToString("dd-MMM-yyyy HH:mm") ?? "N/A")</p>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="font-weight-bold">Modified By:</label>
                            <p class="form-control-plaintext">@(Model.ModifiedBy ?? "N/A")</p>
                        </div>
                    </div>
                </div>
            </fieldset>

            <div class="mt-4">
                <a asp-action="Index" class="btn btn-secondary btn-lg">
                    <i class="fas fa-arrow-left"></i> Back to List
                </a>
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning btn-lg">
                    <i class="fas fa-edit"></i> Edit
                </a>
            </div>
        </div>
    </div>
</div>

<style>
    fieldset {
        border: 1px solid #dee2e6 !important;
        background: #f8f9fa;
    }
    legend {
        font-size: 1rem;
        font-weight: bold;
        background: white;
        padding: 0 10px;
    }
    .font-weight-bold {
        font-weight: 600;
        color: #495057;
    }
</style>
