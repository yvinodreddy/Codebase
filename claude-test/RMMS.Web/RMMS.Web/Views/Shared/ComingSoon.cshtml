@{
    ViewData["Title"] = ViewBag.Title ?? "Coming Soon";
}

<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <!-- Page Header -->
            <div class="d-flex justify-content-between align-items-center mb-4">
                <div>
                    <h2 class="mb-1">@ViewBag.Title</h2>
                    <p class="text-muted mb-0">
                        <span class="badge bg-success me-2">@ViewBag.Phase</span>
                        <span class="badge bg-info">@ViewBag.Category</span>
                    </p>
                </div>
            </div>

            <!-- Main Card -->
            <div class="card shadow-sm border-0">
                <div class="card-body p-5 text-center">
                    <!-- Icon -->
                    <div class="mb-4">
                        <i class="fas fa-rocket fa-5x text-primary" style="opacity: 0.3;"></i>
                    </div>

                    <!-- Title -->
                    <h3 class="mb-3">Feature Coming Soon</h3>

                    <!-- Description -->
                    <p class="lead text-muted mb-4">
                        @ViewBag.Description
                    </p>

                    <!-- Features List -->
                    @{
                        var features = ViewBag.Features as List<string> ?? new List<string>();
                        if (features.Any())
                        {
                            <div class="text-start bg-light rounded p-4 mb-4">
                                <h5 class="mb-3">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    Planned Features
                                </h5>
                                <ul class="list-unstyled mb-0">
                                    @foreach (var feature in features)
                                    {
                                        <li class="mb-2">
                                            <i class="fas fa-chevron-right text-primary me-2"></i>
                                            @feature
                                        </li>
                                    }
                                </ul>
                            </div>
                        }
                    }

                    <!-- Status Badge -->
                    <div class="alert alert-info border-0" role="alert">
                        <i class="fas fa-info-circle me-2"></i>
                        <strong>Implementation Status:</strong> Services implemented, UI under development
                    </div>

                    <!-- Action Buttons -->
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="fas fa-home me-2"></i>
                            Return to Dashboard
                        </a>
                        <a asp-controller="Analytics" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-chart-pie me-2"></i>
                            View Analytics
                        </a>
                    </div>
                </div>
            </div>

            <!-- Additional Info -->
            <div class="text-center mt-4">
                <p class="text-muted small mb-0">
                    <i class="fas fa-lightbulb me-1"></i>
                    Need this feature urgently? Contact your system administrator for implementation timeline.
                </p>
            </div>
        </div>
    </div>
</div>

<style>
    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15) !important;
    }

    .badge {
        font-size: 0.75rem;
        padding: 0.4em 0.75em;
        font-weight: 600;
    }

    .alert {
        background-color: #e3f2fd;
        color: #0d47a1;
    }
</style>
