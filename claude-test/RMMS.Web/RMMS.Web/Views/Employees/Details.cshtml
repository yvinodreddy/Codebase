@model RMMS.Models.Masters.Employee
@{
    ViewData["Title"] = "Employee Details";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-user"></i> Employee Details</h2>
        <div>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                <i class="fas fa-edit"></i> Edit
            </a>
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to List
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5><i class="fas fa-info-circle"></i> Personal Information</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th width="200">Employee Code:</th>
                            <td><strong>@Model.EmployeeCode</strong></td>
                        </tr>
                        <tr>
                            <th>Employee Name:</th>
                            <td><strong>@Model.EmployeeName</strong></td>
                        </tr>
                        <tr>
                            <th>Mobile:</th>
                            <td>@Model.Mobile</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>@Model.Email</td>
                        </tr>
                        <tr>
                            <th>Date of Birth:</th>
                            <td>@Model.DateOfBirth?.ToString("dd-MMM-yyyy")</td>
                        </tr>
                        <tr>
                            <th>Address:</th>
                            <td>
                                @if (!string.IsNullOrEmpty(Model.Address))
                                {
                                    @Model.Address<br />
                                    <text>@Model.City, @Model.State - @Model.Pincode</text>
                                }
                            </td>
                        </tr>
                        <tr>
                            <th>Aadhar Number:</th>
                            <td>@Model.AadharNumber</td>
                        </tr>
                        <tr>
                            <th>PAN:</th>
                            <td>@Model.PAN</td>
                        </tr>
                    </table>
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-header bg-success text-white">
                    <h5><i class="fas fa-briefcase"></i> Employment Details</h5>
                </div>
                <div class="card-body">
                    <table class="table table-borderless">
                        <tr>
                            <th width="200">Department:</th>
                            <td><span class="badge bg-info">@Model.Department</span></td>
                        </tr>
                        <tr>
                            <th>Designation:</th>
                            <td>@Model.Designation</td>
                        </tr>
                        <tr>
                            <th>Employment Type:</th>
                            <td>@Model.EmploymentType</td>
                        </tr>
                        <tr>
                            <th>Date of Joining:</th>
                            <td>@Model.DateOfJoining?.ToString("dd-MMM-yyyy")</td>
                        </tr>
                        <tr>
                            <th>Basic Salary:</th>
                            <td><strong>â‚¹ @Model.BasicSalary?.ToString("N2")</strong></td>
                        </tr>
                        <tr>
                            <th>Bank Account:</th>
                            <td>@Model.BankAccountNumber</td>
                        </tr>
                        <tr>
                            <th>IFSC Code:</th>
                            <td>@Model.IFSCCode</td>
                        </tr>
                        <tr>
                            <th>Status:</th>
                            <td>
                                <span class="badge bg-@(Model.Status == "Active" ? "success" : Model.Status == "Resigned" ? "warning" : Model.Status == "Terminated" ? "danger" : "secondary")">
                                    @Model.Status
                                </span>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5>Audit Information</h5>
                </div>
                <div class="card-body">
                    <p><strong>Created:</strong><br />@Model.CreatedDate.ToString("dd-MMM-yyyy HH:mm")<br />by @Model.CreatedBy</p>
                    @if (Model.ModifiedDate.HasValue)
                    {
                        <p><strong>Modified:</strong><br />@Model.ModifiedDate.Value.ToString("dd-MMM-yyyy HH:mm")<br />by @Model.ModifiedBy</p>
                    }
                    <p><strong>Active:</strong> @(Model.IsActive ? "Yes" : "No")</p>
                </div>
            </div>
        </div>
    </div>
</div>
