@model RMMS.Models.Masters.Employee
@{
    ViewData["Title"] = "Delete Employee";
}

<div class="container-fluid">
    <h2 class="text-danger"><i class="fas fa-exclamation-triangle"></i> Delete Employee</h2>
    <hr />

    <div class="alert alert-danger">
        <h5>Are you sure you want to delete this employee?</h5>
        <p>This action will mark the employee as inactive. The data will be preserved for audit purposes.</p>
    </div>

    <div class="card">
        <div class="card-header bg-danger text-white">
            <h5>Employee Information</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Employee Code:</dt>
                <dd class="col-sm-9">@Model.EmployeeCode</dd>

                <dt class="col-sm-3">Employee Name:</dt>
                <dd class="col-sm-9"><strong>@Model.EmployeeName</strong></dd>

                <dt class="col-sm-3">Department:</dt>
                <dd class="col-sm-9"><span class="badge bg-info">@Model.Department</span></dd>

                <dt class="col-sm-3">Designation:</dt>
                <dd class="col-sm-9">@Model.Designation</dd>

                <dt class="col-sm-3">Mobile:</dt>
                <dd class="col-sm-9">@Model.Mobile</dd>

                <dt class="col-sm-3">Employment Type:</dt>
                <dd class="col-sm-9">@Model.EmploymentType</dd>

                <dt class="col-sm-3">Status:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-@(Model.Status == "Active" ? "success" : Model.Status == "Resigned" ? "warning" : Model.Status == "Terminated" ? "danger" : "secondary")">
                        @Model.Status
                    </span>
                </dd>
            </dl>
        </div>
    </div>

    <form asp-action="Delete" method="post" class="mt-3">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">
            <i class="fas fa-trash"></i> Confirm Delete
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-times"></i> Cancel
        </a>
    </form>
</div>
