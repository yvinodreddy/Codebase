@model RMMS.Models.LoanAdvance
@{
    ViewData["Title"] = "Loan/Advance Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <div class="row">
                <div class="col-md-6">
                    <h3><i class="fas fa-info-circle"></i> Loan/Advance Details</h3>
                </div>
                <div class="col-md-6 text-end">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <!-- Transaction Information -->
            <h5 class="text-primary"><i class="fas fa-file-alt"></i> Transaction Information</h5>
            <div class="row">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-3">Date</dt>
                        <dd class="col-sm-9">@Model.Date.ToString("dd-MMM-yyyy")</dd>

                        <dt class="col-sm-3">Voucher Number</dt>
                        <dd class="col-sm-9">@(Model.VoucherNumber ?? "N/A")</dd>

                        <dt class="col-sm-3">Name of Party/Employee</dt>
                        <dd class="col-sm-9"><strong>@Model.PartyName</strong></dd>

                        <dt class="col-sm-3">Particulars</dt>
                        <dd class="col-sm-9">@Model.Particulars</dd>
                    </dl>
                </div>
            </div>

            <hr />

            <!-- Financial Details -->
            <h5 class="text-success"><i class="fas fa-calculator"></i> Financial Details</h5>
            <div class="row">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-3">Amount Given</dt>
                        <dd class="col-sm-9">₹ @Model.AmountGiven.ToString("N2")</dd>

                        <dt class="col-sm-3">Repayment Amount</dt>
                        <dd class="col-sm-9">₹ @Model.Repayment.ToString("N2")</dd>

                        <dt class="col-sm-3">Date of Repayment</dt>
                        <dd class="col-sm-9">
                            @if (Model.RepaymentDate.HasValue)
                            {
                                @Model.RepaymentDate.Value.ToString("dd-MMM-yyyy")
                            }
                            else
                            {
                                <span class="text-muted">Not yet repaid</span>
                            }
                        </dd>

                        <dt class="col-sm-3">Balance</dt>
                        <dd class="col-sm-9">
                            <strong class="text-danger fs-5">₹ @Model.Balance.ToString("N2")</strong>
                            @if (Model.Balance == 0)
                            {
                                <span class="badge bg-success ms-2">Fully Repaid</span>
                            }
                            else if (Model.Balance > 0)
                            {
                                <span class="badge bg-warning ms-2">Outstanding</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <hr />

            <!-- Additional Information -->
            <h5 class="text-warning"><i class="fas fa-sticky-note"></i> Additional Information</h5>
            <div class="row">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-3">Remarks</dt>
                        <dd class="col-sm-9">@(Model.Remarks ?? "N/A")</dd>
                    </dl>
                </div>
            </div>

            <hr />

            <!-- Audit Information -->
            <h5 class="text-muted"><i class="fas fa-history"></i> Audit Information</h5>
            <div class="row">
                <div class="col-md-12">
                    <dl class="row">
                        <dt class="col-sm-3">Created Date</dt>
                        <dd class="col-sm-9">@Model.CreatedDate.ToString("dd-MMM-yyyy hh:mm tt")</dd>

                        <dt class="col-sm-3">Status</dt>
                        <dd class="col-sm-9">
                            @if (Model.IsActive)
                            {
                                <span class="badge bg-success">Active</span>
                            }
                            else
                            {
                                <span class="badge bg-danger">Inactive</span>
                            }
                        </dd>
                    </dl>
                </div>
            </div>

            <hr />

            <!-- Action Buttons -->
            <div class="row mt-3">
                <div class="col-md-12">
                    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit
                    </a>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <form asp-action="Delete" asp-route-id="@Model.Id" method="post" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this loan/advance record?');">
                        @Html.AntiForgeryToken()
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Delete
                        </button>
                    </form>
                    @if (Model.Balance > 0)
                    {
                        <a asp-action="RecordRepayment" asp-route-id="@Model.Id" class="btn btn-success">
                            <i class="fas fa-money-bill"></i> Record Repayment
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    dt {
        font-weight: 600;
        color: #495057;
    }
    dd {
        margin-bottom: 1rem;
    }
    hr {
        margin: 1.5rem 0;
    }
</style>
