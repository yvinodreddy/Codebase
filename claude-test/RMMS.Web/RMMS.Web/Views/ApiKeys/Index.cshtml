@model List<RMMS.Models.API.ApiKey>
@{
    ViewData["Title"] = "API Keys Management";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2><i class="fas fa-key"></i> API Keys Management</h2>
            <p class="text-muted">Manage API keys, monitor usage, and track rate limits</p>
        </div>
    </div>

    <!-- STATISTICS DASHBOARD -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-key"></i> Total Keys</h5>
                    <h2>@ViewBag.TotalKeys</h2>
                    <small>API keys in system</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-check-circle"></i> Active Keys</h5>
                    <h2>@ViewBag.ActiveKeys</h2>
                    <small>Currently active</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-chart-line"></i> Total Requests</h5>
                    <h2>@((ViewBag.TotalRequests ?? 0).ToString("N0"))</h2>
                    <small>All time</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body">
                    <h5 class="card-title"><i class="fas fa-percentage"></i> Avg Utilization</h5>
                    <h2>@((ViewBag.AverageUtilization ?? 0).ToString("F1"))%</h2>
                    <small>Rate limit usage</small>
                </div>
            </div>
        </div>
    </div>

    <!-- MORE STATISTICS -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Requests Today</h6>
                    <h3>@((ViewBag.RequestsToday ?? 0).ToString("N0"))</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Keys Near Limit</h6>
                    <h3 class="text-danger">@(ViewBag.KeysNearLimit ?? 0)</h3>
                    <small>at 80%+ utilization</small>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body">
                    <h6 class="text-muted">Most Used Key</h6>
                    <h5>@(ViewBag.MostUsedKey ?? "N/A")</h5>
                    <small>@((ViewBag.MostUsedKeyRequests ?? 0).ToString("N0")) requests</small>
                </div>
            </div>
        </div>
    </div>

    <!-- ACTION BUTTONS -->
    <div class="row mb-3">
        <div class="col-12">
            <button type="button" class="btn btn-primary">
                <i class="fas fa-plus"></i> Generate New API Key
            </button>
        </div>
    </div>

    <!-- DATA TABLE -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-light">
                    <h5 class="mb-0"><i class="fas fa-list"></i> API Keys List (@Model.Count)</h5>
                </div>
                <div class="card-body">
                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-striped table-hover">
                                <thead>
                                    <tr>
                                        <th>Name</th>
                                        <th>Rate Limit</th>
                                        <th>Requests</th>
                                        <th>Utilization</th>
                                        <th>Status</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var key in Model)
                                    {
                                        var utilization = key.RateLimit > 0 ? Math.Min(100, (key.RequestCount / (double)key.RateLimit) * 100) : 0;
                                        var isOverLimit = key.RequestCount > key.RateLimit;
                                        var utilizationClass = utilization >= 100 ? "danger" : utilization >= 80 ? "warning" : "success";
                                        <tr>
                                            <td><strong>@key.Name</strong></td>
                                            <td>@key.RateLimit.ToString("N0")</td>
                                            <td>@key.RequestCount.ToString("N0")@(isOverLimit ? " <span class=\"badge bg-danger\">OVER LIMIT</span>" : "")</td>
                                            <td><span class="badge bg-@utilizationClass">@utilization.ToString("F1")%</span></td>
                                            <td><span class="badge bg-@(key.IsActive ? "success" : "secondary")">@(key.IsActive ? "Active" : "Inactive")</span></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i> No API keys found.
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
