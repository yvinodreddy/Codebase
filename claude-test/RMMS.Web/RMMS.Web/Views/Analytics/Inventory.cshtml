@{
    ViewData["Title"] = "Inventory Analytics";
    var data = ViewBag.Data as dynamic;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2><i class="bi bi-box-seam"></i> Inventory Analytics</h2>
            <p class="text-muted">Stock levels, movements, and warehouse insights</p>
        </div>
        <div class="col-md-4 text-end">
            <a href="@Url.Action("Index", "Analytics")" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to Dashboard
            </a>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (data != null)
    {
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <h6>Total Products</h6>
                        <h2>@data.TotalProducts</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <h6>Total Warehouses</h6>
                        <h2>@data.TotalWarehouses</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <h6>Recent Movements</h6>
                        <h2>@data.RecentMovements</h2>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card bg-warning text-dark">
                    <div class="card-body">
                        <h6>Recent Adjustments</h6>
                        <h2>@data.RecentAdjustments</h2>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header"><h5>Recent Stock Movements</h5></div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="ms-datatable table table-striped table-hover table-sm" data-export="true" data-page-length="16">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Product</th>
                                        <th>Warehouse</th>
                                        <th>Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (data.StockMovements != null && data.StockMovements.Count > 0)
                                    {
                                        @foreach (var movement in data.StockMovements)
                                        {
                                            <tr>
                                                <td>@movement.MovementDate.ToString("dd-MMM")</td>
                                                <td>@movement.Product?.ProductName</td>
                                                <td>@movement.Warehouse?.WarehouseName</td>
                                                <td>@movement.Quantity.ToString("N0")</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="4" class="text-center text-muted">No movements found</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header"><h5>Recent Stock Adjustments</h5></div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="ms-datatable table table-striped table-hover table-sm" data-export="true" data-page-length="16">
                                <thead>
                                    <tr>
                                        <th>Date</th>
                                        <th>Product</th>
                                        <th>Warehouse</th>
                                        <th>Quantity</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (data.StockAdjustments != null && data.StockAdjustments.Count > 0)
                                    {
                                        @foreach (var adjustment in data.StockAdjustments)
                                        {
                                            <tr>
                                                <td>@adjustment.AdjustmentDate.ToString("dd-MMM")</td>
                                                <td>@adjustment.Product?.ProductName</td>
                                                <td>@adjustment.Warehouse?.WarehouseName</td>
                                                <td>@adjustment.Quantity.ToString("N0")</td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr><td colspan="4" class="text-center text-muted">No adjustments found</td></tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
