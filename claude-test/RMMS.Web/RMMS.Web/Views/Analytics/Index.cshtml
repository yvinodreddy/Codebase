@{
    ViewData["Title"] = "Analytics Dashboard";
    var data = ViewBag.Data as dynamic;
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col-12">
            <h2 class="mb-3"><i class="bi bi-bar-chart-fill"></i> Analytics Dashboard</h2>
            <p class="text-muted">Comprehensive business intelligence and analytics</p>
        </div>
    </div>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Quick Navigation -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card border-primary h-100">
                <div class="card-body text-center">
                    <i class="bi bi-gear-fill text-primary" style="font-size: 2rem;"></i>
                    <h5 class="card-title mt-2">Production</h5>
                    <p class="card-text">Machine efficiency, batch tracking</p>
                    <a href="@Url.Action("Production", "Analytics")" class="btn btn-primary">View Analytics</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-success h-100">
                <div class="card-body text-center">
                    <i class="bi bi-box-seam text-success" style="font-size: 2rem;"></i>
                    <h5 class="card-title mt-2">Inventory</h5>
                    <p class="card-text">Stock levels, movements, adjustments</p>
                    <a href="@Url.Action("Inventory", "Analytics")" class="btn btn-success">View Analytics</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-info h-100">
                <div class="card-body text-center">
                    <i class="bi bi-graph-up text-info" style="font-size: 2rem;"></i>
                    <h5 class="card-title mt-2">Sales</h5>
                    <p class="card-text">Orders, quotations, inquiries</p>
                    <a href="@Url.Action("Sales", "Analytics")" class="btn btn-info">View Analytics</a>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card border-warning h-100">
                <div class="card-body text-center">
                    <i class="bi bi-currency-dollar text-warning" style="font-size: 2rem;"></i>
                    <h5 class="card-title mt-2">Financial</h5>
                    <p class="card-text">Cash, bank, vouchers</p>
                    <a href="@Url.Action("Financial", "Analytics")" class="btn btn-warning">View Analytics</a>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card border-danger h-100">
                <div class="card-body text-center">
                    <i class="bi bi-people-fill text-danger" style="font-size: 2rem;"></i>
                    <h5 class="card-title mt-2">Suppliers</h5>
                    <p class="card-text">Vendor performance, procurements</p>
                    <a href="@Url.Action("Suppliers", "Analytics")" class="btn btn-danger">View Analytics</a>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card border-dark h-100">
                <div class="card-body text-center">
                    <i class="bi bi-speedometer2 text-dark" style="font-size: 2rem;"></i>
                    <h5 class="card-title mt-2">Executive</h5>
                    <p class="card-text">High-level overview and KPIs</p>
                    <a href="@Url.Action("Executive", "Analytics")" class="btn btn-dark">View Dashboard</a>
                </div>
            </div>
        </div>
    </div>

    @if (data != null)
    {
        <!-- Executive Summary KPIs -->
        <div class="row mb-4">
            <div class="col-12">
                <h4><i class="bi bi-bar-chart-line"></i> Key Metrics</h4>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 mb-3">
                <div class="card bg-primary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2">Total Customers</h6>
                                <h2 class="card-title mb-0">@data.TotalCustomers</h2>
                            </div>
                            <i class="bi bi-people-fill" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-3">
                <div class="card bg-success text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2">Total Products</h6>
                                <h2 class="card-title mb-0">@data.TotalProducts</h2>
                            </div>
                            <i class="bi bi-box-seam" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-3">
                <div class="card bg-info text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2">Sales Orders</h6>
                                <h2 class="card-title mb-0">@data.TotalSalesOrders</h2>
                            </div>
                            <i class="bi bi-cart-fill" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-3">
                <div class="card bg-warning text-dark">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2">Production Batches</h6>
                                <h2 class="card-title mb-0">@data.TotalProductionBatches</h2>
                            </div>
                            <i class="bi bi-gear-fill" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-3 mb-3">
                <div class="card bg-secondary text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2">Total Employees</h6>
                                <h2 class="card-title mb-0">@data.TotalEmployees</h2>
                            </div>
                            <i class="bi bi-person-badge" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-3">
                <div class="card bg-dark text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2">Total Warehouses</h6>
                                <h2 class="card-title mb-0">@data.TotalWarehouses</h2>
                            </div>
                            <i class="bi bi-building" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-3">
                <div class="card bg-danger text-white">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2">Total Machines</h6>
                                <h2 class="card-title mb-0">@data.TotalMachines</h2>
                            </div>
                            <i class="bi bi-cpu" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3 mb-3">
                <div class="card border-primary">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-subtitle mb-2 text-muted">Total Quotations</h6>
                                <h2 class="card-title mb-0">@data.TotalQuotations</h2>
                            </div>
                            <i class="bi bi-file-earmark-text text-primary" style="font-size: 3rem; opacity: 0.5;"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
