@model List<RMMS.Services.Services.CreditStatus>

@{
    ViewData["Title"] = "Credit Management";
}

<div class="container-fluid">
    <div class="row mb-3">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="mb-0">
                            <i class="fas fa-credit-card"></i> Credit Management
                        </h4>
                        <div>
                            <a href="/CreditManagement/Dashboard" class="btn btn-light btn-sm">
                                <i class="fas fa-chart-line"></i> Dashboard
                            </a>
                            <a href="/CreditManagement/Alerts" class="btn btn-warning btn-sm">
                                <i class="fas fa-exclamation-triangle"></i> Alerts
                            </a>
                            <a href="/CreditManagement/ExceedingLimit" class="btn btn-danger btn-sm">
                                <i class="fas fa-ban"></i> Exceeded
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Summary Cards -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card border-primary">
                                <div class="card-body text-center">
                                    <h6 class="text-muted">Total Customers</h6>
                                    <h2 class="text-primary">@ViewBag.TotalCustomers</h2>
                                    <small>With Credit Facility</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-danger">
                                <div class="card-body text-center">
                                    <h6 class="text-muted">Exceeded Limit</h6>
                                    <h2 class="text-danger">@ViewBag.ExceededCount</h2>
                                    <small>Requires Immediate Action</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-warning">
                                <div class="card-body text-center">
                                    <h6 class="text-muted">Critical (90%+)</h6>
                                    <h2 class="text-warning">@ViewBag.CriticalCount</h2>
                                    <small>Near Limit</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card border-success">
                                <div class="card-body text-center">
                                    <h6 class="text-muted">Good Standing</h6>
                                    <h2 class="text-success">@ViewBag.GoodCount</h2>
                                    <small>Under 75%</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Credit Status Table -->
                    <table class="table table-striped table-hover" id="creditTable">
                        <thead>
                            <tr>
                                <th>Customer Code</th>
                                <th>Customer Name</th>
                                <th class="text-right">Credit Limit</th>
                                <th class="text-right">Utilized</th>
                                <th class="text-right">Available</th>
                                <th class="text-center">Utilization %</th>
                                <th class="text-center">Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var customer in Model)
                            {
                                <tr class="@(customer.Status == "Exceeded" ? "table-danger" :
                                           customer.Status == "Critical" ? "table-warning" :
                                           customer.Status == "Warning" ? "table-info" : "")">
                                    <td><strong>@customer.CustomerCode</strong></td>
                                    <td>@customer.CustomerName</td>
                                    <td class="text-right">₹@customer.CreditLimit.ToString("N2")</td>
                                    <td class="text-right">₹@customer.CreditUtilized.ToString("N2")</td>
                                    <td class="text-right">₹@customer.AvailableCredit.ToString("N2")</td>
                                    <td class="text-center">
                                        <div class="progress" style="height: 25px;">
                                            <div class="progress-bar @(customer.UtilizationPercentage >= 100 ? "bg-danger" :
                                                                     customer.UtilizationPercentage >= 90 ? "bg-warning" :
                                                                     customer.UtilizationPercentage >= 75 ? "bg-info" : "bg-success")"
                                                 role="progressbar"
                                                 style="width: @Math.Min(customer.UtilizationPercentage, 100)%"
                                                 aria-valuenow="@customer.UtilizationPercentage"
                                                 aria-valuemin="0"
                                                 aria-valuemax="100">
                                                @customer.UtilizationPercentage.ToString("N1")%
                                            </div>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        @if (customer.Status == "Exceeded")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="fas fa-exclamation-circle"></i> EXCEEDED
                                            </span>
                                        }
                                        else if (customer.Status == "Critical")
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="fas fa-exclamation-triangle"></i> CRITICAL
                                            </span>
                                        }
                                        else if (customer.Status == "Warning")
                                        {
                                            <span class="badge bg-info">
                                                <i class="fas fa-info-circle"></i> WARNING
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-success">
                                                <i class="fas fa-check-circle"></i> GOOD
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a href="/CreditManagement/CustomerStatus/@customer.CustomerId"
                                           class="btn btn-sm btn-info"
                                           title="View Details">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (customer.CustomerStatus != "Blocked" && customer.Status == "Exceeded")
                                        {
                                            <form method="post" action="/CreditManagement/BlockCustomer/@customer.CustomerId"
                                                  style="display: inline;"
                                                  onsubmit="return confirm('Are you sure you want to block this customer?');">
                                                @Html.AntiForgeryToken()
                                                <button type="submit" class="btn btn-sm btn-danger" title="Block Customer">
                                                    <i class="fas fa-ban"></i>
                                                </button>
                                            </form>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function() {
        $('#creditTable').DataTable({
            order: [[5, 'desc']], // Sort by utilization percentage
            pageLength: 25,
            responsive: true,
            columnDefs: [
                { targets: [2, 3, 4], className: 'text-right' },
                { targets: [5, 6, 7], className: 'text-center' }
            ]
        });
    });
</script>
}
