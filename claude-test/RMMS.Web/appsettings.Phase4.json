{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=RMMSDb;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },

  "JwtSettings": {
    "SecretKey": "YOUR_256_BIT_SECRET_KEY_HERE_MINIMUM_32_CHARACTERS_REQUIRED",
    "Issuer": "RMMS_API",
    "Audience": "RMMS_Clients",
    "TokenExpirationMinutes": 60,
    "RefreshTokenExpirationDays": 7
  },

  "IpRateLimiting": {
    "EnableEndpointRateLimiting": true,
    "StackBlockedRequests": false,
    "RealIpHeader": "X-Real-IP",
    "HttpStatusCode": 429,
    "GeneralRules": [
      {
        "Endpoint": "*",
        "Period": "1m",
        "Limit": 60
      },
      {
        "Endpoint": "POST:/api/v1/auth/login",
        "Period": "1m",
        "Limit": 5
      },
      {
        "Endpoint": "POST:/api/*",
        "Period": "1m",
        "Limit": 30
      }
    ]
  },

  "CorsSettings": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "http://localhost:8100",
      "https://rmms-mobile.app",
      "https://rmms-web.app"
    ],
    "AllowedMethods": ["GET", "POST", "PUT", "DELETE", "PATCH", "OPTIONS"],
    "AllowedHeaders": ["*"],
    "AllowCredentials": true,
    "MaxAge": 86400
  },

  "OAuth": {
    "Google": {
      "ClientId": "YOUR_GOOGLE_CLIENT_ID",
      "ClientSecret": "YOUR_GOOGLE_CLIENT_SECRET",
      "CallbackPath": "/signin-google"
    },
    "Microsoft": {
      "ClientId": "YOUR_MICROSOFT_CLIENT_ID",
      "ClientSecret": "YOUR_MICROSOFT_CLIENT_SECRET",
      "CallbackPath": "/signin-microsoft"
    }
  },

  "Twilio": {
    "AccountSid": "YOUR_TWILIO_ACCOUNT_SID",
    "AuthToken": "YOUR_TWILIO_AUTH_TOKEN",
    "FromPhoneNumber": "+1234567890",
    "EnableSms": false
  },

  "SendGrid": {
    "ApiKey": "YOUR_SENDGRID_API_KEY",
    "FromEmail": "noreply@rmms.com",
    "FromName": "RMMS Notifications",
    "EnableEmail": true
  },

  "Stripe": {
    "PublishableKey": "pk_test_YOUR_STRIPE_PUBLISHABLE_KEY",
    "SecretKey": "sk_test_YOUR_STRIPE_SECRET_KEY",
    "WebhookSecret": "whsec_YOUR_WEBHOOK_SECRET",
    "Currency": "INR",
    "EnablePayments": false
  },

  "Firebase": {
    "ServiceAccountKeyPath": "firebase-service-account.json",
    "ProjectId": "your-firebase-project-id",
    "EnablePushNotifications": false
  },

  "Hangfire": {
    "DashboardPath": "/hangfire",
    "EnableJobs": true,
    "Workers": 5,
    "Queues": ["default", "critical", "background"]
  },

  "Webhooks": {
    "MaxRetryAttempts": 5,
    "RetryDelaySeconds": [10, 30, 60, 300, 900],
    "TimeoutSeconds": 30,
    "EnableWebhooks": true
  },

  "Integrations": {
    "QuickBooks": {
      "ClientId": "YOUR_QUICKBOOKS_CLIENT_ID",
      "ClientSecret": "YOUR_QUICKBOOKS_CLIENT_SECRET",
      "RedirectUri": "https://yourapp.com/callback/quickbooks",
      "Environment": "sandbox",
      "EnableSync": false
    },
    "SAP": {
      "BaseUrl": "https://your-sap-instance.com",
      "Username": "SAP_USERNAME",
      "Password": "SAP_PASSWORD",
      "CompanyDB": "YOUR_COMPANY_DB",
      "EnableSync": false
    }
  },

  "Analytics": {
    "EnableUsageTracking": true,
    "LogDetailedRequests": false,
    "RetentionDays": 90
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Hangfire": "Information"
    }
  },

  "AllowedHosts": "*"
}
